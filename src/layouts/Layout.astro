---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "DigitalStoreTrujillo - Premium Security Suite 2024",
  description = "Your trusted source for digital software, games, and services. Instant delivery and secure payments.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;500;600;700&family=Noto+Sans:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="relative flex min-h-screen w-full flex-col bg-background-light dark:bg-background-dark group/design-root overflow-x-hidden font-display text-white"
  >
    <slot />

    <!-- Global Currency Initialization -->
    <script>
      import { initializeCurrency } from "../stores/currencyStore";
      import {
        initializeLanguage,
        currentLanguage,
        useTranslation,
      } from "../stores/i18nStore";

      // Initialize detection on page load
      initializeCurrency();
      initializeLanguage();

      // Global translation helper
      function translatePage(lang: string) {
        // Use a fresh translation helper for the current language
        const t = useTranslation();

        document.querySelectorAll("[data-i18n]").forEach((el) => {
          const key = el.getAttribute("data-i18n") as any;
          if (key) {
            const translation = t(key);
            if (el.tagName === "INPUT" || el.tagName === "TEXTAREA") {
              (el as HTMLInputElement).placeholder = translation;
            } else {
              el.textContent = translation;
            }
          }
        });

        // Specifically update search placeholders if any
        const searchInput = document.getElementById(
          "header-search-input",
        ) as HTMLInputElement;
        if (searchInput) {
          searchInput.placeholder = t("search_placeholder");
        }
      }

      // Run translation when DOM is ready
      document.addEventListener("DOMContentLoaded", () => {
        translatePage(currentLanguage.get());
      });

      // Listen for language changes
      currentLanguage.subscribe((lang) => {
        translatePage(lang);
      });

      // Also listen for custom event (extra safety)
      window.addEventListener("language-changed", (e: any) => {
        translatePage(e.detail);
      });
    </script>
  </body>
</html>
