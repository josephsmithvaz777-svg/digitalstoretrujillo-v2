---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Nuevo Producto" activePage="products">
    <!-- Header -->
    <div class="mb-6">
        <a
            href="/admin/products"
            class="inline-flex items-center gap-2 text-text-muted hover:text-primary transition-colors mb-4"
        >
            <span class="material-symbols-outlined text-[18px]">arrow_back</span
            >
            Volver a productos
        </a>
        <h1 class="text-white text-2xl font-bold">Nuevo Producto</h1>
    </div>

    <!-- Product Form -->
    <form id="product-form" class="max-w-5xl">
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-6"
        >
            <!-- Basic Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label
                        for="title"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Título del Producto *
                    </label>
                    <input
                        type="text"
                        id="title"
                        name="title"
                        required
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="Ej: Windows 11 Pro Key"
                    />
                </div>

                <div class="md:col-span-2">
                    <label
                        for="slug"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Slug (URL) *
                    </label>
                    <input
                        type="text"
                        id="slug"
                        name="slug"
                        required
                        pattern="[a-z0-9\-]+"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="windows-11-pro"
                    />
                    <p class="text-text-muted text-xs mt-1">
                        Solo letras minúsculas, números y guiones
                    </p>
                </div>

                <div class="md:col-span-2">
                    <label
                        for="description"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Descripción
                    </label>
                    <textarea
                        id="description"
                        name="description"
                        rows="3"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent resize-none"
                        placeholder="Descripción del producto..."></textarea>
                </div>
            </div>

            <!-- Pricing -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label
                        for="price"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Precio (S/) *
                    </label>
                    <input
                        type="number"
                        id="price"
                        name="price"
                        required
                        step="0.01"
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="15.00"
                    />
                </div>

                <div>
                    <label
                        for="original_price"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Precio Original (S/)
                    </label>
                    <input
                        type="number"
                        id="original_price"
                        name="original_price"
                        step="0.01"
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="18.75"
                    />
                </div>

                <div>
                    <div class="flex items-center justify-between mb-2">
                        <label
                            for="renewable_price"
                            class="block text-sm font-medium text-white"
                        >
                            Precio Renovable (S/)
                        </label>
                        <label class="flex items-center gap-1.5 cursor-pointer">
                            <input
                                type="checkbox"
                                id="show_renewable_price"
                                name="show_renewable_price"
                                class="w-4 h-4 bg-background-dark border-border-dark rounded checked:bg-primary"
                            />
                            <span class="text-xs text-text-muted">Mostrar</span>
                        </label>
                    </div>
                    <input
                        type="number"
                        id="renewable_price"
                        name="renewable_price"
                        step="0.01"
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="1.00"
                    />
                </div>
            </div>

            <!-- Category & Stock -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label
                        for="category"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Categoría *
                    </label>
                    <input
                        type="text"
                        id="category"
                        name="category"
                        required
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="Software"
                    />
                </div>

                <div>
                    <label
                        for="stock_quantity"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Stock *
                    </label>
                    <input
                        type="number"
                        id="stock_quantity"
                        name="stock_quantity"
                        required
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="100"
                    />
                </div>

                <div>
                    <label
                        for="seller"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Vendedor
                    </label>
                    <input
                        type="text"
                        id="seller"
                        name="seller"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="DERIAN MEJIA"
                    />
                </div>
            </div>

            <!-- Media -->
            <div class="space-y-6">
                <div
                    class="p-4 bg-background-dark/30 rounded-xl border border-border-dark/50"
                >
                    <label class="block text-sm font-medium text-white mb-3">
                        Imagen del Producto *
                    </label>

                    <!-- Image Preview -->
                    <div id="image-preview" class="mb-4 hidden">
                        <img
                            id="preview-img"
                            src=""
                            alt="Preview"
                            class="w-full max-w-md rounded-lg border border-border-dark object-cover"
                        />
                    </div>

                    <!-- Upload Button -->
                    <button
                        type="button"
                        id="upload-widget-btn"
                        class="flex items-center gap-2 px-6 py-3 bg-primary hover:bg-red-700 text-white font-medium rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-primary/20 mb-3"
                    >
                        <span class="material-symbols-outlined">upload</span>
                        Subir Imagen desde Cloudinary
                    </button>

                    <!-- Hidden input to store URL -->
                    <input type="hidden" id="image" name="image" required />

                    <!-- Current URL Display -->
                    <p class="text-xs text-text-muted break-all">
                        URL: <span id="current-url"
                            >No se ha subido ninguna imagen</span
                        >
                    </p>
                </div>

                <!-- Badges Configuration -->
                <div
                    class="space-y-6 p-6 bg-background-dark/50 rounded-xl border border-border-dark"
                >
                    <h3
                        class="text-white font-bold flex items-center gap-2 text-lg"
                    >
                        <span class="material-symbols-outlined text-primary"
                            >label</span
                        >
                        Configuración de Badges (Etiquetas)
                    </h3>

                    <!-- General Badge -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-2">
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <label
                                    for="badge"
                                    class="block text-xs font-medium text-text-muted uppercase tracking-wider"
                                >
                                    Texto
                                </label>
                                <label
                                    class="flex items-center gap-1.5 cursor-pointer group"
                                >
                                    <input
                                        type="checkbox"
                                        id="show_badge"
                                        name="show_badge"
                                        checked
                                        class="w-4 h-4 bg-background-dark border-border-dark rounded checked:bg-primary transition-colors cursor-pointer"
                                    />
                                    <span
                                        class="text-xs text-white/70 group-hover:text-white transition-colors"
                                        >Mostrar Badge</span
                                    >
                                </label>
                            </div>
                            <input
                                type="text"
                                id="badge"
                                name="badge"
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="Nuevo, Pro, etc."
                            />
                        </div>

                        <div>
                            <label
                                for="badge_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Fondo
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="badge_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value="#FFD700"
                                />
                                <input
                                    type="text"
                                    id="badge_color"
                                    name="badge_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#FFD700"
                                    value="#FFD700"
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                for="badge_text_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Texto
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="badge_text_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value="#000000"
                                />
                                <input
                                    type="text"
                                    id="badge_text_color"
                                    name="badge_text_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#000000"
                                    value="#000000"
                                />
                            </div>
                        </div>
                    </div>

                    <div class="h-px bg-border-dark w-full"></div>

                    <!-- Discount Badge -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <label
                                    for="discount_badge"
                                    class="block text-xs font-medium text-text-muted uppercase tracking-wider"
                                >
                                    Texto
                                </label>
                                <label
                                    class="flex items-center gap-1.5 cursor-pointer group"
                                >
                                    <input
                                        type="checkbox"
                                        id="show_discount_badge"
                                        name="show_discount_badge"
                                        checked
                                        class="w-4 h-4 bg-background-dark border-border-dark rounded checked:bg-primary transition-colors cursor-pointer"
                                    />
                                    <span
                                        class="text-xs text-white/70 group-hover:text-white transition-colors"
                                        >Mostrar Descuento</span
                                    >
                                </label>
                            </div>
                            <input
                                type="text"
                                id="discount_badge"
                                name="discount_badge"
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="-50%, Oferta, etc."
                            />
                        </div>

                        <div>
                            <label
                                for="discount_badge_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Fondo
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="discount_badge_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value="#E00700"
                                />
                                <input
                                    type="text"
                                    id="discount_badge_color"
                                    name="discount_badge_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#E00700"
                                    value="#E00700"
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                for="discount_badge_text_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Texto
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="discount_badge_text_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value="#FFFFFF"
                                />
                                <input
                                    type="text"
                                    id="discount_badge_text_color"
                                    name="discount_badge_text_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#FFFFFF"
                                    value="#FFFFFF"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features -->
            <div>
                <label class="block text-sm font-medium text-white mb-2">
                    Características
                </label>
                <div id="features-container" class="space-y-2">
                    <div class="flex gap-2">
                        <input
                            type="text"
                            class="feature-input flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            placeholder="Característica del producto..."
                        />
                        <button
                            type="button"
                            class="remove-feature px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all hidden"
                        >
                            <span class="material-symbols-outlined">close</span>
                        </button>
                    </div>
                </div>
                <button
                    type="button"
                    id="add-feature"
                    class="mt-2 flex items-center gap-2 text-primary hover:text-red-600 text-sm font-medium"
                >
                    <span class="material-symbols-outlined text-[18px]"
                        >add</span
                    >
                    Agregar característica
                </button>
            </div>

            <!-- Rating -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label
                        for="rating"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Rating (1-5) *
                    </label>
                    <input
                        type="number"
                        id="rating"
                        name="rating"
                        required
                        min="1"
                        max="5"
                        value="5"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                    />
                </div>

                <div>
                    <label
                        for="review_count"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Número de Reviews
                    </label>
                    <input
                        type="number"
                        id="review_count"
                        name="review_count"
                        min="0"
                        value="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                    />
                </div>
            </div>

            <!-- Status & Displays -->
            <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input
                        type="checkbox"
                        id="is_active"
                        name="is_active"
                        checked
                        class="w-5 h-5 bg-background-dark border-2 border-border-dark rounded checked:bg-primary checked:border-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-card-dark transition-all"
                    />
                    <span class="text-white font-medium">Producto Activo</span>
                </label>

                <label class="flex items-center gap-2 cursor-pointer">
                    <input
                        type="checkbox"
                        id="in_stock"
                        name="in_stock"
                        checked
                        class="w-5 h-5 bg-background-dark border-2 border-border-dark rounded checked:bg-primary checked:border-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-card-dark transition-all"
                    />
                    <span class="text-white font-medium">En Stock</span>
                </label>

                <label class="flex items-center gap-2 cursor-pointer">
                    <input
                        type="checkbox"
                        id="show_renewable_price"
                        name="show_renewable_price"
                        class="w-5 h-5 bg-background-dark border-2 border-border-dark rounded checked:bg-primary checked:border-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-card-dark transition-all"
                    />
                    <span class="text-white font-medium">Precio Renovable</span>
                </label>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex gap-4 mt-6">
            <button
                type="submit"
                id="submit-btn"
                class="flex items-center gap-2 px-6 py-3 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-primary/20"
            >
                <span class="material-symbols-outlined">save</span>
                Crear Producto
            </button>
            <a
                href="/admin/products"
                class="flex items-center gap-2 px-6 py-3 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
            >
                Cancelar
            </a>
        </div>
    </form>

    <!-- Cloudinary Upload Widget Script -->
    <script src="https://upload-widget.cloudinary.com/global/all.js" is:inline
    ></script>

    <script
        define:vars={{
            cloudName: import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME,
            uploadPreset: import.meta.env.PUBLIC_CLOUDINARY_UPLOAD_PRESET,
        }}
    >
        // Cloudinary Upload Widget Handler
        const uploadBtn = document.getElementById("upload-widget-btn");
        const imageInput = document.getElementById("image");
        const previewImg = document.getElementById("preview-img");
        const imagePreviewDiv = document.getElementById("image-preview");
        const currentUrlSpan = document.getElementById("current-url");

        uploadBtn?.addEventListener("click", () => {
            if (!cloudName || !uploadPreset) {
                alert(
                    "⚠️ Cloudinary no está configurado. Por favor revisa el archivo CLOUDINARY_SETUP.md",
                );
                return;
            }

            // @ts-ignore
            cloudinary.openUploadWidget(
                {
                    cloudName: cloudName,
                    uploadPreset: uploadPreset,
                    sources: ["local", "url", "camera"],
                    folder: "digitalstore/products",
                    maxFileSize: 5000000, // 5MB
                    clientAllowedFormats: ["jpg", "png", "webp", "jpeg"],
                    cropping: true,
                    croppingAspectRatio: 1,
                    showSkipCropButton: false,
                    multiple: false,
                },
                (error, result) => {
                    if (error) {
                        console.error("Upload error:", error);
                        alert("Error al subir la imagen. Intenta de nuevo.");
                        return;
                    }

                    if (result.event === "success") {
                        const url = result.info.secure_url;
                        imageInput.value = url;
                        if (previewImg) {
                            previewImg.src = url;
                            imagePreviewDiv?.classList.remove("hidden");
                        }
                        if (currentUrlSpan) {
                            currentUrlSpan.textContent = url;
                        }
                        console.log("Image uploaded successfully:", url);
                    }
                },
            );
        });
    </script>

    <script>
        import { createProduct } from "../../../lib/supabase";

        // Auto-generate slug from title
        const titleInput = document.getElementById("title") as HTMLInputElement;
        const slugInput = document.getElementById("slug") as HTMLInputElement;

        titleInput?.addEventListener("input", () => {
            if (
                !slugInput.value ||
                slugInput.value ===
                    titleInput.value.toLowerCase().replace(/[^a-z0-9]+/g, "-")
            ) {
                slugInput.value = titleInput.value
                    .toLowerCase()
                    .replace(/[^a-z0-9]+/g, "-")
                    .replace(/^-+|-+$/g, "");
            }
        });

        // Badge General color sync
        const colorPicker = document.getElementById(
            "badge_color_picker",
        ) as HTMLInputElement;
        const colorInput = document.getElementById(
            "badge_color",
        ) as HTMLInputElement;
        const textColorPicker = document.getElementById(
            "badge_text_color_picker",
        ) as HTMLInputElement;
        const textColorInput = document.getElementById(
            "badge_text_color",
        ) as HTMLInputElement;

        colorPicker?.addEventListener("input", (e) => {
            colorInput.value = (
                e.target as HTMLInputElement
            ).value.toUpperCase();
        });

        colorInput?.addEventListener("input", (e) => {
            const value = (e.target as HTMLInputElement).value;
            if (/^#[0-9A-F]{6}$/i.test(value)) colorPicker.value = value;
        });

        textColorPicker?.addEventListener("input", (e) => {
            textColorInput.value = (
                e.target as HTMLInputElement
            ).value.toUpperCase();
        });

        textColorInput?.addEventListener("input", (e) => {
            const value = (e.target as HTMLInputElement).value;
            if (/^#[0-9A-F]{6}$/i.test(value)) textColorPicker.value = value;
        });

        // DISCOUNT Badge color sync
        const discountColorPicker = document.getElementById(
            "discount_badge_color_picker",
        ) as HTMLInputElement;
        const discountColorInput = document.getElementById(
            "discount_badge_color",
        ) as HTMLInputElement;
        const discountTextColorPicker = document.getElementById(
            "discount_badge_text_color_picker",
        ) as HTMLInputElement;
        const discountTextColorInput = document.getElementById(
            "discount_badge_text_color",
        ) as HTMLInputElement;

        discountColorPicker?.addEventListener("input", (e) => {
            discountColorInput.value = (
                e.target as HTMLInputElement
            ).value.toUpperCase();
        });

        discountColorInput?.addEventListener("input", (e) => {
            const value = (e.target as HTMLInputElement).value;
            if (/^#[0-9A-F]{6}$/i.test(value))
                discountColorPicker.value = value;
        });

        discountTextColorPicker?.addEventListener("input", (e) => {
            discountTextColorInput.value = (
                e.target as HTMLInputElement
            ).value.toUpperCase();
        });

        discountTextColorInput?.addEventListener("input", (e) => {
            const value = (e.target as HTMLInputElement).value;
            if (/^#[0-9A-F]{6}$/i.test(value))
                discountTextColorPicker.value = value;
        });

        // Features management
        const featuresContainer = document.getElementById("features-container");
        const addFeatureBtn = document.getElementById("add-feature");

        addFeatureBtn?.addEventListener("click", () => {
            const featureDiv = document.createElement("div");
            featureDiv.className = "flex gap-2";
            featureDiv.innerHTML = `
				<input
					type="text"
					class="feature-input flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
					placeholder="Característica del producto..."
				/>
				<button
					type="button"
					class="remove-feature px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
				>
					<span class="material-symbols-outlined">close</span>
				</button>
			`;
            featuresContainer?.appendChild(featureDiv);

            // Add remove functionality
            featureDiv
                .querySelector(".remove-feature")
                ?.addEventListener("click", () => {
                    featureDiv.remove();
                });
        });

        // Form submission
        const form = document.getElementById("product-form") as HTMLFormElement;
        const submitBtn = document.getElementById(
            "submit-btn",
        ) as HTMLButtonElement;

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();

            const formData = new FormData(form);

            // Collect features
            const features: string[] = [];
            document.querySelectorAll(".feature-input").forEach((input) => {
                const value = (input as HTMLInputElement).value.trim();
                if (value) features.push(value);
            });

            // Prepare product data
            const productData = {
                title: formData.get("title") as string,
                slug: formData.get("slug") as string,
                description: (formData.get("description") as string) || null,
                price: parseFloat(formData.get("price") as string),
                original_price: formData.get("original_price")
                    ? parseFloat(formData.get("original_price") as string)
                    : null,
                renewable_price: formData.get("renewable_price")
                    ? parseFloat(formData.get("renewable_price") as string)
                    : null,
                image: formData.get("image") as string,
                thumbnails: [],
                category: formData.get("category") as string,
                seller: (formData.get("seller") as string) || null,
                badge: (formData.get("badge") as string) || null,
                badge_color: (formData.get("badge_color") as string) || null,
                badge_text_color:
                    (formData.get("badge_text_color") as string) || null,
                rating: parseInt(formData.get("rating") as string),
                review_count:
                    parseInt(formData.get("review_count") as string) || 0,
                stock_quantity: parseInt(
                    formData.get("stock_quantity") as string,
                ),
                features,
                is_active: (
                    document.getElementById("is_active") as HTMLInputElement
                ).checked,
                in_stock: (
                    document.getElementById("in_stock") as HTMLInputElement
                ).checked,
                show_badge: (
                    document.getElementById("show_badge") as HTMLInputElement
                ).checked,
                discount_badge:
                    (formData.get("discount_badge") as string) || null,
                discount_badge_color:
                    (formData.get("discount_badge_color") as string) || null,
                discount_badge_text_color:
                    (formData.get("discount_badge_text_color") as string) ||
                    null,
                show_discount_badge: (
                    document.getElementById(
                        "show_discount_badge",
                    ) as HTMLInputElement
                ).checked,
                show_renewable_price: (
                    document.getElementById(
                        "show_renewable_price",
                    ) as HTMLInputElement
                ).checked,
            };

            // Disable button
            submitBtn.disabled = true;
            submitBtn.innerHTML = `
				<span class="material-symbols-outlined animate-spin">progress_activity</span>
				Creando...
			`;

            try {
                const product = await createProduct(productData);

                if (!product) {
                    throw new Error("Error al crear el producto");
                }

                // Success - redirect
                window.location.href = "/admin/products";
            } catch (error: any) {
                alert(error.message || "Error al crear el producto");
                submitBtn.disabled = false;
                submitBtn.innerHTML = `
					<span class="material-symbols-outlined">save</span>
					Crear Producto
				`;
            }
        });
    </script>
</AdminLayout>
