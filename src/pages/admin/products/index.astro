---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { getAllProducts } from "../../../lib/supabase";

const products = await getAllProducts();
---

<AdminLayout title="Productos" activePage="products">
    <!-- Toast Notification Container -->
    <div
        id="toast-container"
        class="fixed top-4 right-4 z-50 flex flex-col gap-3 pointer-events-none"
    >
    </div>

    <!-- Header with Actions -->
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-white text-2xl font-bold mb-1">Productos</h1>
            <p class="text-text-muted text-sm">
                Gestiona tu inventario de productos
            </p>
        </div>
        <a
            href="/admin/products/new"
            class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-primary/20"
        >
            <span class="material-symbols-outlined">add</span>
            Nuevo Producto
        </a>
    </div>

    <!-- Products Table -->
    <div
        class="bg-card-dark border border-border-dark rounded-xl overflow-hidden"
    >
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-background-dark border-b border-border-dark">
                    <tr>
                        <th class="w-10 px-6 py-4"></th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Producto
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Categor√≠a
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Precio
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Stock
                        </th>
                        <th
                            class="hidden px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Orden
                        </th>
                        <th
                            class="px-6 py-4 text-right text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-dark">
                    {
                        products.length === 0 ? (
                            <tr>
                                <td colspan="6" class="px-6 py-12 text-center">
                                    <span class="material-symbols-outlined text-text-muted text-5xl mb-4 block">
                                        inventory_2
                                    </span>
                                    <p class="text-text-muted">
                                        No hay productos a√∫n
                                    </p>
                                    <a
                                        href="/admin/products/new"
                                        class="inline-flex items-center gap-2 mt-4 text-primary hover:text-red-600 font-medium"
                                    >
                                        <span class="material-symbols-outlined text-[18px]">
                                            add
                                        </span>
                                        Crear primer producto
                                    </a>
                                </td>
                            </tr>
                        ) : (
                            products.map((product) => (
                                <tr class="hover:bg-background-dark/50 transition-colors group draggable-row cursor-grab active:cursor-grabbing" draggable="true" data-id={product.id}>
                                    <td class="px-6 py-4 text-text-muted">
                                        <span class="material-symbols-outlined cursor-grab active:cursor-grabbing hover:text-white transition-colors">drag_indicator</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <img
                                                src={product.image}
                                                alt={product.title}
                                                class="w-12 h-12 object-cover rounded-lg"
                                            />
                                            <div>
                                                <p class="text-white font-medium flex items-center gap-2">
                                                    {product.title}
                                                    {product.is_featured && (
                                                        <span class="material-symbols-outlined text-yellow-400 text-[16px]" title="Destacado">star</span>
                                                    )}
                                                </p>
                                                <p class="text-text-muted text-sm">
                                                    {product.slug}
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="text-white">
                                            {product.category}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div>
                                            <p class="text-white font-bold">
                                                S/ {product.price.toFixed(2)}
                                            </p>
                                            {product.original_price && (
                                                <p class="text-text-muted text-sm line-through">
                                                    S/{" "}
                                                    {product.original_price.toFixed(
                                                        2,
                                                    )}
                                                </p>
                                            )}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold ${
                                                product.stock_quantity === 0
                                                    ? "bg-red-500/20 text-red-400"
                                                    : product.stock_quantity < 5
                                                      ? "bg-yellow-500/20 text-yellow-400"
                                                      : "bg-green-500/20 text-green-400"
                                            }`}
                                        >
                                            {product.stock_quantity === 0 ? (
                                                <>
                                                    <span class="material-symbols-outlined text-[14px]">
                                                        block
                                                    </span>
                                                    Agotado
                                                </>
                                            ) : product.stock_quantity < 5 ? (
                                                <>
                                                    <span class="material-symbols-outlined text-[14px]">
                                                        warning
                                                    </span>
                                                    {product.stock_quantity}{" "}
                                                    unidades
                                                </>
                                            ) : (
                                                <>
                                                    <span class="material-symbols-outlined text-[14px]">
                                                        check_circle
                                                    </span>
                                                    {product.stock_quantity}{" "}
                                                    unidades
                                                </>
                                            )}
                                        </span>
                                    </td>
                                    <td class="hidden px-6 py-4">
                                        <input
                                            type="number"
                                            value={product.sort_order || 0}
                                            class="sort-order-input w-20 bg-background-dark border border-border-dark rounded px-2 py-1 text-white text-sm focus:border-primary focus:outline-none"
                                            data-product-id={product.id}
                                            readonly
                                        />
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold ${
                                                product.is_active &&
                                                product.in_stock
                                                    ? "bg-green-500/20 text-green-400"
                                                    : "bg-gray-500/20 text-gray-400"
                                            }`}
                                        >
                                            {product.is_active &&
                                            product.in_stock
                                                ? "Activo"
                                                : "Inactivo"}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center justify-end gap-2">
                                            <a
                                                href={`/admin/products/${product.id}/edit`}
                                                class="p-2 text-text-muted hover:text-primary hover:bg-primary/10 rounded-lg transition-all"
                                                title="Editar"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    edit
                                                </span>
                                            </a>
                                            <button
                                                class="duplicate-btn p-2 text-text-muted hover:text-blue-500 hover:bg-blue-500/10 rounded-lg transition-all"
                                                data-product-id={product.id}
                                                data-product-name={
                                                    product.title
                                                }
                                                title="Duplicar"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    content_copy
                                                </span>
                                            </button>
                                            <button
                                                class="delete-btn p-2 text-text-muted hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all"
                                                data-product-id={product.id}
                                                data-product-name={
                                                    product.title
                                                }
                                                title="Eliminar"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    delete
                                                </span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            ))
                        )
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div
        id="delete-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-md w-full p-6"
        >
            <div class="flex items-center gap-3 mb-4">
                <div
                    class="w-12 h-12 bg-red-500/20 rounded-full flex items-center justify-center"
                >
                    <span
                        class="material-symbols-outlined text-red-500 text-2xl"
                    >
                        warning
                    </span>
                </div>
                <h2 class="text-white text-xl font-bold">Eliminar Producto</h2>
            </div>
            <p class="text-text-muted mb-6">
                ¬øEst√°s seguro de que quieres eliminar <strong
                    id="product-name"
                    class="text-white"></strong>? Esta acci√≥n no se puede
                deshacer.
            </p>
            <div class="flex gap-3">
                <button
                    id="cancel-delete"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-delete"
                    class="flex-1 px-4 py-2 bg-red-500 hover:bg-red-600 text-white font-bold rounded-lg transition-all"
                >
                    Eliminar
                </button>
            </div>
        </div>
    </div>

    <script>
        import {
            deleteProduct,
            getProductById,
            createProduct,
            supabase,
        } from "../../../lib/supabase";

        // Toast functionality
        function showToast(
            message: string,
            type: "success" | "error" = "success",
            duration: number = 3000
        ) {
            const container = document.getElementById("toast-container");
            if (!container) return;

            const toast = document.createElement("div");
            toast.className = `
                flex items-center gap-3 px-4 py-3 rounded-xl border shadow-2xl
                animate-slide-in pointer-events-auto min-w-[300px]
                ${
                    type === "success"
                        ? "bg-green-500/10 border-green-500/20 text-green-400"
                        : type === "info" 
                          ? "bg-blue-500/10 border-blue-500/20 text-blue-400"
                          : "bg-red-500/10 border-red-500/20 text-red-400"
                }
            `;

            const icon = type === "success" ? "check_circle" : type === "info" ? "info" : "error";

            toast.innerHTML = `
                <span class="material-symbols-outlined">${icon}</span>
                <span class="font-medium text-sm flex-1">${message}</span>
                <button class="toast-close opacity-50 hover:opacity-100 transition-opacity">
                    <span class="material-symbols-outlined text-[18px]">close</span>
                </button>
            `;

            container.appendChild(toast);

            const close = toast.querySelector(".toast-close");
            close?.addEventListener("click", () => {
                toast.classList.add("animate-fadeOut");
                setTimeout(() => toast.remove(), 300);
            });

            setTimeout(() => {
                if (toast.parentElement) {
                    toast.classList.add("animate-fadeOut");
                    setTimeout(() => toast.remove(), 300);
                }
            }, duration);
        }

        // --- DRAG AND DROP LOGIC (Refined) ---
        const tableBody = document.querySelector('tbody');
        let draggedItem: HTMLElement | null = null;
        let placeholder: HTMLElement | null = null;

        // Helper to get index of element
        function getIndex(element: HTMLElement) {
            return Array.from(element.parentNode!.children).indexOf(element);
        }

        if (tableBody) {
            // Drag Start
            tableBody.addEventListener('dragstart', (e) => {
                const target = e.target as HTMLElement;
                const row = target.closest('tr');
                
                // Only allow dragging if we are holding the handle or the row itself if intended
                // But specifically we want to make sure we are dragging a valid row
                if (!row || !row.classList.contains('draggable-row')) {
                    e.preventDefault();
                    return;
                }

                draggedItem = row;
                
                // Set drag effect
                e.dataTransfer!.effectAllowed = 'move';
                e.dataTransfer!.setData('text/plain', ''); // Required for Firefox

                // Create a placeholder to show where it will land (optional, but good UX)
                // For now we just use the native behavior but we add a class
                
                // Delay class addition to ensure the drag ghost image is taken from the original look
                requestAnimationFrame(() => {
                    if (draggedItem) {
                        draggedItem.classList.add('opacity-40', 'bg-primary/10');
                    }
                });
            });

            // Drag End
            tableBody.addEventListener('dragend', (e) => {
                const row = e.target as HTMLElement;
                if (draggedItem) {
                    draggedItem.classList.remove('opacity-40', 'bg-primary/10');
                }
                draggedItem = null;
                
                // Trigger save
                saveNewOrder();
            });

            // Drag Over
            tableBody.addEventListener('dragover', (e) => {
                e.preventDefault(); // Necessary to allow dropping
                if (!draggedItem) return;

                const afterElement = getDragAfterElement(tableBody, e.clientY);
                const currentRow = (e.target as HTMLElement).closest('tr');
                
                // If we are over the dragged item itself, do nothing
                if (currentRow === draggedItem) return;

                if (afterElement == null) {
                    tableBody.appendChild(draggedItem);
                } else {
                    tableBody.insertBefore(draggedItem, afterElement);
                }
            });
        }

        function getDragAfterElement(container: Element, y: number) {
            const draggableElements = [...container.querySelectorAll('.draggable-row:not(.opacity-40)')];

            return draggableElements.reduce((closest, child) => {
                const box = child.getBoundingClientRect();
                const offset = y - box.top - box.height / 2;
                // We want the element whose center is just below the cursor
                if (offset < 0 && offset > closest.offset) {
                    return { offset: offset, element: child };
                } else {
                    return closest;
                }
            }, { offset: Number.NEGATIVE_INFINITY }).element;
        }

        async function saveNewOrder() {
            const items: { id: string, sort_order: number }[] = [];
            const rows = document.querySelectorAll('.draggable-row');
            
            rows.forEach((row, index) => {
                const input = row.querySelector('.sort-order-input') as HTMLInputElement;
                if (input) {
                    // Update the visual input too, for consistency
                    input.value = index.toString();
                    
                    const productId = input.getAttribute('data-product-id');
                    if (productId) {
                        items.push({ id: productId, sort_order: index });
                    }
                }
            });

            if (items.length === 0) return;

            showToast("Guardando nuevo orden...", "info", 2000);
            
            try {
                const { data: { session } } = await supabase.auth.getSession();
                const res = await fetch('/api/admin/products/reorder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        Authorization: `Bearer ${session?.access_token}`
                    },
                    body: JSON.stringify({ items })
                });

                if (res.ok) {
                    showToast("Orden guardado correctamente", "success");
                } else {
                    throw new Error("Error al guardar");
                }
            } catch (err) {
                console.error("Reorder error:", err);
                showToast("Error al guardar el orden", "error");
            }
        }

        // --- END DRAG AND DROP LOGIC ---

        // Sort Order Logic (Manual Input Fallback)
            input.addEventListener("change", async (e) => {
                const target = e.target as HTMLInputElement;
                const productId = target.getAttribute("data-product-id");
                const newOrder = parseInt(target.value);

                if (!productId) return;

                try {
                    // Show loading state (optional, maybe disable input)
                    target.disabled = true;
                    
                    const { data: { session } } = await supabase.auth.getSession();

                    const response = await fetch(`/api/admin/products/${productId}`, {
                        method: "PUT", // Or PATCH if supported by your API handler
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${session?.access_token}`,
                        },
                        body: JSON.stringify({ sort_order: newOrder }),
                    });

                    if (response.ok) {
                        showToast("Orden actualizado", "success");
                    } else {
                        throw new Error("Error al actualizar orden");
                    }
                } catch (error) {
                    console.error(error);
                    showToast("Error al actualizar orden", "error");
                    // Reset value? Or just leave it?
                } finally {
                    target.disabled = false;
                    // Focus back to input to allow quick tabbing?
                    target.focus();
                }
            });
        });

        // Duplication Logic
        document.querySelectorAll(".duplicate-btn").forEach((btn) => {
            btn.addEventListener("click", async (e) => {
                e.preventDefault();
                const productId = btn.getAttribute("data-product-id");
                const productName = btn.getAttribute("data-product-name");

                if (!productId) return;

                const button = btn as HTMLButtonElement;
                const icon = button.querySelector("span");

                try {
                    // Start loading
                    button.disabled = true;
                    if (icon) icon.textContent = "sync";
                    showToast(`Duplicando "${productName}"...`, "success");

                    // Get session for auth
                    const {
                        data: { session },
                    } = await supabase.auth.getSession();

                    // 1. Fetch original product via API (bypasses RLS)
                    const fetchRes = await fetch(
                        `/api/admin/products/${productId}`,
                        {
                            headers: {
                                Authorization: `Bearer ${session?.access_token}`,
                            },
                        },
                    );
                    if (!fetchRes.ok)
                        throw new Error(
                            "No se pudo obtener el producto original",
                        );
                    const original = await fetchRes.json();

                    // 2. Prepare new data
                    const {
                        id,
                        created_at,
                        updated_at,
                        rating,
                        review_count,
                        ...cleanData
                    } = original;
                    const newProduct = {
                        ...cleanData,
                        title: `${original.title} (Copia)`,
                        slug: `${original.slug}-copy-${Math.floor(Math.random() * 10000)}`,
                        is_active: false, // Create as inactive for safety
                        rating: original.rating || 5, // Default to 5 if missing
                        review_count: 0,
                    };

                    console.log("üì§ Creating Duplicate via API:", newProduct);

                    // 3. Create the copy via API (bypasses RLS)
                    const createRes = await fetch("/api/admin/products", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${session?.access_token}`,
                        },
                        body: JSON.stringify(newProduct),
                    });

                    if (createRes.ok) {
                        const created = await createRes.json();
                        showToast("Producto duplicado con √©xito", "success");
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        const errorData = await createRes.json();
                        throw new Error(
                            errorData.error || "Error al crear la copia",
                        );
                    }
                } catch (error: any) {
                    console.error("Duplication Error:", error);
                    showToast(error.message || "Error al duplicar", "error");
                    button.disabled = false;
                    if (icon) icon.textContent = "content_copy";
                }
            });
        });

        // Delete Logic
        const deleteModal = document.getElementById("delete-modal");
        const productNameEl = document.getElementById("product-name");
        const cancelBtn = document.getElementById("cancel-delete");
        const confirmBtn = document.getElementById(
            "confirm-delete",
        ) as HTMLButtonElement;
        let productToDelete: string | null = null;

        document.querySelectorAll(".delete-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const productId = btn.getAttribute("data-product-id");
                const productName = btn.getAttribute("data-product-name");

                if (productId && productName && productNameEl) {
                    productToDelete = productId;
                    productNameEl.textContent = productName;
                    deleteModal?.classList.remove("hidden");
                }
            });
        });

        cancelBtn?.addEventListener("click", () => {
            deleteModal?.classList.add("hidden");
            productToDelete = null;
        });

        confirmBtn?.addEventListener("click", async () => {
            if (!productToDelete) return;

            confirmBtn.disabled = true;
            confirmBtn.textContent = "Eliminando...";

            const success = await deleteProduct(productToDelete);

            if (success) {
                window.location.reload();
            } else {
                showToast("Error al eliminar el producto", "error");
                confirmBtn.disabled = false;
                confirmBtn.textContent = "Eliminar";
            }
        });

        deleteModal?.addEventListener("click", (e) => {
            if (e.target === deleteModal) {
                deleteModal.classList.add("hidden");
                productToDelete = null;
            }
        });
    </script>
</AdminLayout>
