        }
        if (statusText) {
            statusText.textContent = `Estado: ${isActive ? "Activo" : "Inactivo"}`;
        }
        if (visibilityText) {
            const isStock = inStockToggle ? inStockToggle.checked : true;
            visibilityText.textContent =
                isActive && isStock ? "Público" : "Oculto";
        }
    }

    topToggle?.addEventListener("change", (e) => {
        const checked = (e.target as HTMLInputElement).checked;
        if (mainToggle) (mainToggle as HTMLInputElement).checked = checked;
        updateStatusUI(checked);
    });

    mainToggle?.addEventListener("change", (e) => {
        const checked = (e.target as HTMLInputElement).checked;
        if (topToggle) (topToggle as HTMLInputElement).checked = checked;
        updateStatusUI(checked);
    });

    inStockToggle?.addEventListener("change", () => {
        if (topToggle) updateStatusUI((topToggle as HTMLInputElement).checked);
    });
</script>
