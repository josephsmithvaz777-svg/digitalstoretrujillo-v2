---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { getProductById } from "../../../../lib/supabase";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect("/admin/products");
}

const product = await getProductById(id);

if (!product) {
    return Astro.redirect("/admin/products");
}
---

<AdminLayout title={`Editar: ${product.title}`} activePage="products">
    <!-- Header -->
    <div class="mb-6">
        <a
            href="/admin/products"
            class="inline-flex items-center gap-2 text-text-muted hover:text-primary transition-colors mb-4"
        >
            <span class="material-symbols-outlined text-[18px]">arrow_back</span
            >
            Volver a productos
        </a>
        <h1 class="text-white text-2xl font-bold">Editar Producto</h1>
        <p class="text-text-muted text-sm mt-1">ID: {product.id}</p>
    </div>

    <!-- Product Form -->
    <form id="product-form" data-product-id={product.id}>
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-6"
        >
            <!-- Basic Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label
                        for="title"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Título del Producto *
                    </label>
                    <input
                        type="text"
                        id="title"
                        name="title"
                        value={product.title}
                        required
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="Ej: Windows 11 Pro Key"
                    />
                </div>

                <div class="md:col-span-2">
                    <label
                        for="slug"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Slug (URL) *
                    </label>
                    <input
                        type="text"
                        id="slug"
                        name="slug"
                        value={product.slug}
                        required
                        pattern="[a-z0-9\-]+"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="windows-11-pro"
                    />
                    <p class="text-text-muted text-xs mt-1">
                        Solo letras minúsculas, números y guiones
                    </p>
                </div>

                <div class="md:col-span-2">
                    <label
                        for="description"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Descripción
                    </label>
                    <textarea
                        id="description"
                        name="description"
                        rows="3"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent resize-none"
                        placeholder="Descripción del producto..."
                        >{product.description}</textarea
                    >
                </div>
            </div>

            <!-- Status Checkboxes -->
            <div
                class="flex flex-wrap gap-6 p-4 bg-background-dark/30 rounded-xl border border-border-dark/50"
            >
                <label class="flex items-center gap-2 cursor-pointer">
                    <input
                        type="checkbox"
                        id="is_active"
                        name="is_active"
                        checked={product.is_active}
                        class="w-5 h-5 bg-background-dark border-2 border-border-dark rounded checked:bg-primary checked:border-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-card-dark transition-all"
                    />
                    <span class="text-white font-medium">Producto Activo</span>
                </label>

                <label class="flex items-center gap-2 cursor-pointer">
                    <input
                        type="checkbox"
                        id="in_stock"
                        name="in_stock"
                        checked={product.in_stock}
                        class="w-5 h-5 bg-background-dark border-2 border-border-dark rounded checked:bg-primary checked:border-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-card-dark transition-all"
                    />
                    <span class="text-white font-medium">En Stock</span>
                </label>
            </div>

            <!-- Pricing -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label
                        for="price"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Precio (S/) *
                    </label>
                    <input
                        type="number"
                        id="price"
                        name="price"
                        value={product.price}
                        required
                        step="0.01"
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="15.00"
                    />
                </div>

                <div>
                    <label
                        for="original_price"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Precio Original (S/)
                    </label>
                    <input
                        type="number"
                        id="original_price"
                        name="original_price"
                        value={product.original_price}
                        step="0.01"
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="18.75"
                    />
                </div>

                <div>
                    <div class="flex items-center justify-between mb-2">
                        <label
                            for="renewable_price"
                            class="block text-sm font-medium text-white"
                        >
                            Precio Renovable (S/)
                        </label>
                        <label class="flex items-center gap-1.5 cursor-pointer">
                            <input
                                type="checkbox"
                                id="show_renewable_price"
                                name="show_renewable_price"
                                checked={product.show_renewable_price}
                                class="w-4 h-4 bg-background-dark border-border-dark rounded checked:bg-primary"
                            />
                            <span class="text-xs text-text-muted">Mostrar</span>
                        </label>
                    </div>
                    <input
                        type="number"
                        id="renewable_price"
                        name="renewable_price"
                        value={product.renewable_price}
                        step="0.01"
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        placeholder="1.00"
                    />
                </div>
            </div>

            <!-- Category & Stock -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label
                        for="category"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Categoría *
