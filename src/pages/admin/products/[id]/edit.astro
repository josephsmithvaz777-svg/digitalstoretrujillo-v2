                                    type="text"
                                    id="badge_color"
                                    name="badge_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#FFD700"
                                    value={product.badge_color || "#FFD700"}
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                for="badge_text_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Texto
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="badge_text_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value={product.badge_text_color ||
                                        "#000000"}
                                />
                                <input
                                    type="text"
                                    id="badge_text_color"
                                    name="badge_text_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#000000"
                                    value={product.badge_text_color ||
                                        "#000000"}
                                />
                            </div>
                        </div>
                    </div>

                    <div class="h-px bg-border-dark w-full"></div>

                    <!-- Discount Badge -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <label
                                    for="discount_badge"
                                    class="block text-xs font-medium text-text-muted uppercase tracking-wider"
                                >
                                    Texto
                                </label>
                                <label
                                    class="flex items-center gap-1.5 cursor-pointer group"
                                >
                                    <input
                                        type="checkbox"
                                        id="show_discount_badge"
                                        name="show_discount_badge"
                                        checked={product.show_discount_badge}
                                        class="w-4 h-4 bg-background-dark border-border-dark rounded checked:bg-primary transition-colors cursor-pointer"
                                    />
                                    <span
                                        class="text-xs text-white/70 group-hover:text-white transition-colors"
                                        >Mostrar Descuento</span
                                    >
                                </label>
                            </div>
                            <input
                                type="text"
                                id="discount_badge"
                                name="discount_badge"
                                value={product.discount_badge}
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="-50%, Oferta, etc."
                            />
                        </div>

                        <div>
                            <label
                                for="discount_badge_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Fondo
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="discount_badge_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value={product.discount_badge_color ||
                                        "#E00700"}
                                />
                                <input
                                    type="text"
                                    id="discount_badge_color"
                                    name="discount_badge_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#E00700"
                                    value={product.discount_badge_color ||
                                        "#E00700"}
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                for="discount_badge_text_color"
                                class="block text-xs font-medium text-text-muted mb-1 uppercase tracking-wider"
                            >
                                Color Texto
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="color"
                                    id="discount_badge_text_color_picker"
                                    class="h-[50px] w-[50px] bg-background-dark border border-border-dark rounded-lg cursor-pointer"
                                    value={product.discount_badge_text_color ||
                                        "#FFFFFF"}
                                />
                                <input
                                    type="text"
                                    id="discount_badge_text_color"
                                    name="discount_badge_text_color"
                                    class="flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    placeholder="#FFFFFF"
                                    value={product.discount_badge_text_color ||
                                        "#FFFFFF"}
                                />
                            </div>
                        </div>
