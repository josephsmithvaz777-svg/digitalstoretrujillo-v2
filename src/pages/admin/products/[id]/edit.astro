                >
                    <label class="block text-sm font-medium text-white mb-3">
                        Imagen del Producto *
                    </label>

                    <!-- Image Preview -->
                    {
                        product.image && (
                            <div class="mb-4">
                                <img
                                    id="preview-img"
                                    src={product.image}
