            <!-- Features -->
            <div>
                <label class="block text-sm font-medium text-white mb-2">
                    Características
                </label>
                <div id="features-container" class="space-y-2">
                    {
                        product.features && product.features.length > 0 ? (
                            product.features.map((feature) => (
                                <div class="flex gap-2">
                                    <input
                                        type="text"
                                        class="feature-input flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
