                <button
                    type="button"
                    id="add-feature"
                    class="mt-2 flex items-center gap-2 text-primary hover:text-red-600 text-sm font-medium"
                >
                    <span class="material-symbols-outlined text-[18px]"
                        >add</span
                    >
                    Agregar característica
                </button>
            </div>

            <!-- Rating -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label
                        for="rating"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Rating (1-5) *
                    </label>
                    <input
                        type="number"
                        id="rating"
                        name="rating"
                        value={product.rating}
                        required
                        min="1"
                        max="5"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                    />
                </div>

                <div>
                    <label
                        for="review_count"
                        class="block text-sm font-medium text-white mb-2"
                    >
                        Número de Reviews
                    </label>
                    <input
                        type="number"
                        id="review_count"
                        name="review_count"
                        value={product.review_count}
                        min="0"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                    />
                </div>
            </div>
        </div>
    </form>

    <!-- Actions -->
    <div class="flex gap-4 mt-6">
        <button
            type="submit"
            id="submit-btn"
            class="flex items-center gap-2 px-6 py-3 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-primary/20"
        >
            <span class="material-symbols-outlined">save</span>
            Guardar Cambios
        </button>
        <a
            href="/admin/products"
            class="flex items-center gap-2 px-6 py-3 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
        >
            Cancelar
        </a>
    </div>
</AdminLayout>

<!-- Cloudinary Upload Widget Script -->
<script src="https://upload-widget.cloudinary.com/global/all.js" is:inline
></script>

<script
    define:vars={{
        cloudName: import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME,
        uploadPreset: import.meta.env.PUBLIC_CLOUDINARY_UPLOAD_PRESET,
    }}
>
    // Cloudinary Upload Widget Handler
    const uploadBtn = document.getElementById("upload-widget-btn");
    const imageInput = document.getElementById("image");
    const previewImg = document.getElementById("preview-img");
    const currentUrlSpan = document.getElementById("current-url");

    uploadBtn?.addEventListener("click", () => {
        if (!cloudName || !uploadPreset) {
            alert(
                "⚠️ Cloudinary no está configurado. Por favor revisa el archivo CLOUDINARY_SETUP.md",
            );
            return;
        }

        // @ts-ignore
        cloudinary.openUploadWidget(
            {
                cloudName: cloudName,
                uploadPreset: uploadPreset,
                sources: ["local", "url", "camera"],
                folder: "digitalstore/products",
                maxFileSize: 5000000, // 5MB
                clientAllowedFormats: ["jpg", "png", "webp", "jpeg"],
                cropping: true,
                croppingAspectRatio: 1,
                showSkipCropButton: false,
                multiple: false,
            },
            (error, result) => {
                if (error) {
                    console.error("Upload error:", error);
                    alert("Error al subir la imagen. Intenta de nuevo.");
                    return;
                }

                if (result.event === "success") {
                    const url = result.info.secure_url;
                    imageInput.value = url;
                    if (previewImg) {
                        previewImg.src = url;
                    }
                    if (currentUrlSpan) {
                        currentUrlSpan.textContent = url;
                    }
                    console.log("Image uploaded successfully:", url);
                }
            },
        );
    });
</script>

<script>
