---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { getProductById } from "../../../../lib/supabase";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect("/admin/products");
}

const product = await getProductById(id);

if (!product) {
    return Astro.redirect("/admin/products");
}
---

<AdminLayout title={`Editar: ${product.title}`} activePage="products">
    <!-- Toast Notification Container -->
    <div
        id="toast-container"
        class="fixed top-4 right-4 z-50 flex flex-col gap-3 pointer-events-none"
    >
    </div>

    <!-- Product Form -->
    <form id="product-form" data-product-id={product.id}>
        <!-- Header & Top Actions -->
        <div
            class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6"
        >
            <div>
                <a
                    href="/admin/products"
                    class="inline-flex items-center gap-2 text-text-muted hover:text-primary transition-colors mb-2"
                >
                    <span class="material-symbols-outlined text-[18px]"
                        >arrow_back</span
                    >
                    Volver a productos
                </a>
                <h1 class="text-white text-2xl font-bold">Editar Producto</h1>
                <p class="text-text-muted text-sm mt-1">ID: {product.id}</p>
            </div>

            <div class="hidden lg:flex items-center gap-3">
                <button
                    type="submit"
                    class="submit-btn flex items-center justify-center gap-2 px-8 py-2.5 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-primary/20"
                >
                    <span class="material-symbols-outlined">save</span>
                    Guardar Cambios
                </button>
                <a
                    href="/admin/products"
                    class="px-4 py-2.5 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all border border-border-dark"
                >
                    Cancelar
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left Column: Main Info -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Basic Info & Pricing -->
                <div
                    class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-6"
                >
                    <h3
                        class="text-white font-bold flex items-center gap-2 border-b border-border-dark pb-3"
                    >
                        <span class="material-symbols-outlined text-primary"
                            >info</span
                        >
                        Información Básica
                    </h3>

                    <div class="space-y-4">
                        <div>
                            <label
                                for="title"
                                class="block text-sm font-medium text-white mb-2"
                            >
                                Título del Producto *
                            </label>
                            <input
                                type="text"
                                id="title"
                                name="title"
                                value={product.title}
                                required
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="Ej: Windows 11 Pro Key"
                            />
                        </div>

                        <div>
                            <label
                                for="slug"
                                class="block text-sm font-medium text-white mb-2"
                            >
                                Slug (URL) *
                            </label>
                            <input
                                type="text"
                                id="slug"
                                name="slug"
                                value={product.slug}
                                required
                                pattern="[a-z0-9\-]+"
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-sm"
                                placeholder="windows-11-pro"
                            />
                        </div>

                        <div>
                            <label
                                for="description"
                                class="block text-sm font-medium text-white mb-2"
                            >
                                Descripción
                            </label>
                            <textarea
                                id="description"
                                name="description"
                                rows="4"
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent resize-none"
                                placeholder="Descripción del producto..."
                                >{product.description}</textarea
                            >
                        </div>
                    </div>

                    <div class="h-px bg-border-dark my-2"></div>

                    <!-- Pricing Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label
                                for="price"
                                class="block text-sm font-medium text-white mb-2"
                            >
                                Precio (S/) *
                            </label>
                            <input
                                type="number"
                                id="price"
                                name="price"
                                value={product.price}
                                required
                                step="0.01"
                                min="0"
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                            />
                        </div>

                        <div>
                            <label
                                for="original_price"
                                class="block text-sm font-medium text-white mb-2"
                            >
                                Precio Original (S/)
                            </label>
                            <input
                                type="number"
                                id="original_price"
                                name="original_price"
                                value={product.original_price}
                                step="0.01"
                                min="0"
                                class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                            />
                        </div>

                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <label
                                    for="renewable_price"
                                    class="block text-sm font-medium text-white"
                                >
                                    Precio Renovable
                                </label>
                                <label
                                    class="flex items-center gap-1.5 cursor-pointer"
                                >
                                    <input
                                        type="checkbox"
                                        id="show_renewable_price"
                                        name="show_renewable_price"
                                        checked={product.show_renewable_price}
                                        class="w-4 h-4 rounded border-border-dark bg-background-dark text-primary focus:ring-primary"
                                    />
                                    <span
                                        class="text-[10px] text-text-muted uppercase"
                                        >Ver</span
                                    >
                                </label>
                            </div>
                            <input
                                type="number"
                                id="renewable_price"
                                name="renewable_price"
                                value={product.renewable_price}
                                step="0.01"
                                min="0"
                                class="w-full px-4 py-2.5 bg-background-dark border border-border-dark rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Media -->
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-4"
        >
            <h3
                class="text-white font-bold flex items-center gap-2 border-b border-border-dark pb-3"
            >
                <span class="material-symbols-outlined text-primary">image</span
                >
                Imagen del Producto
            </h3>

            <div
                class="flex flex-col md:flex-row gap-6 items-start text-center md:text-left"
            >
                {
                    product.image && (
                        <div class="relative group mx-auto md:mx-0">
                            <img
                                id="preview-img"
                                src={product.image}
                                alt="Preview"
                                class="w-48 h-48 rounded-lg border border-border-dark object-cover shadow-2xl transition-transform group-hover:scale-[1.02]"
                            />
                            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center rounded-lg">
                                <span class="text-white text-xs font-medium">
                                    Vista Previa
                                </span>
                            </div>
                        </div>
                    )
                }

                <div class="flex-1 space-y-4 w-full">
                    <div
                        class="p-4 bg-background-dark/50 rounded-lg border border-border-dark/30"
                    >
                        <p
                            class="text-xs text-text-muted mb-2 font-mono break-all line-clamp-2"
                        >
                            URL: <span id="current-url" class="text-blue-400"
                                >{product.image}</span
                            >
                        </p>
                        <input
                            type="hidden"
                            id="image"
                            name="image"
                            value={product.image}
                            required
                        />

                        <button
                            type="button"
                            id="media-library-btn"
                            class="w-full flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-blue-600/20"
                        >
                            <span class="material-symbols-outlined"
                                >photo_library</span
                            >
                            Gestionar Imagen con Cloudinary
                        </button>
                    </div>
                    <p class="text-[11px] text-text-muted px-2">
                        Tip: Desde la biblioteca puedes subir nuevas imágenes o
                        reutilizar existentes.
                    </p>
                </div>
            </div>
        </div>

        <!-- Gallery Section -->
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-4"
        >
            <div
                class="flex items-center justify-between border-b border-border-dark pb-3"
            >
                <h3 class="text-white font-bold flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary"
                        >collections</span
                    >
                    Galería de Imágenes
                </h3>
                <span
                    class="text-[10px] bg-primary/20 text-primary px-2 py-0.5 rounded font-bold uppercase"
                    >Beta</span
                >
            </div>

            <div
                id="gallery-container"
                class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 min-h-[100px] p-4 bg-background-dark/30 rounded-lg border border-dashed border-border-dark/50"
            >
                {
                    product.thumbnails && product.thumbnails.length > 0 ? (
                        product.thumbnails.map((thumb) => (
                            <div class="relative group aspect-square">
                                <img
                                    src={thumb}
                                    class="w-full h-full object-cover rounded-lg border border-border-dark"
                                />
                                <button
                                    type="button"
                                    class="remove-thumb absolute -top-2 -right-2 bg-red-600 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg"
                                    data-url={thumb}
                                >
                                    <span class="material-symbols-outlined text-sm">
                                        close
                                    </span>
                                </button>
                                <input
                                    type="hidden"
                                    name="thumbnails"
                                    value={thumb}
                                />
                            </div>
                        ))
                    ) : (
                        <div class="col-span-full flex flex-col items-center justify-center text-text-muted py-4">
                            <span class="material-symbols-outlined text-3xl mb-2">
                                add_photo_alternate
                            </span>
                            <p class="text-xs">No hay imágenes en la galería</p>
                        </div>
                    )
                }
            </div>

            <button
                type="button"
                id="manage-gallery-btn"
                class="w-full flex items-center justify-center gap-2 px-6 py-3 bg-card-dark hover:bg-background-dark text-white font-medium rounded-lg transition-all border border-border-dark transform active:scale-[0.98]"
            >
                <span class="material-symbols-outlined text-blue-400"
                    >add_to_photos</span
                >
                Añadir Imágenes a la Galería
            </button>
            <p class="text-[10px] text-text-muted text-center">
                Puedes seleccionar múltiples imágenes a la vez en la biblioteca.
            </p>
        </div>

        <!-- Features Section moved to wide column but redesigned -->
        <div class="bg-card-dark border border-border-dark rounded-xl p-6">
            <div
                class="flex items-center justify-between border-b border-border-dark pb-3 mb-4"
            >
                <h3 class="text-white font-bold flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary"
                        >list_bullet</span
                    >
                    Características
                </h3>
                <button
                    type="button"
                    id="add-feature"
                    class="flex items-center gap-1.5 text-primary hover:text-red-600 text-xs font-bold transition-colors"
                >
                    <span class="material-symbols-outlined text-[18px]"
                        >add_circle</span
                    >
                    AÑADIR
                </button>
            </div>

            <div
                id="features-container"
                class="grid grid-cols-1 md:grid-cols-2 gap-3"
            >
                {
                    product.features &&
                        product.features.map((feature) => (
                            <div class="flex gap-2 group">
                                <input
                                    type="text"
                                    class="feature-input flex-1 px-3 py-2 bg-background-dark border border-border-dark rounded-lg text-white text-sm focus:ring-1 focus:ring-primary"
                                    value={feature}
                                />
                                <button
                                    type="button"
                                    class="remove-feature p-2 text-text-muted hover:text-red-500 transition-colors"
                                >
                                    <span class="material-symbols-outlined text-[20px]">
                                        delete
                                    </span>
                                </button>
                            </div>
                        ))
                }
            </div>
        </div>
    </form>

    <!-- Right Column: Settings & Badges -->
    <div class="space-y-6">
        <!-- Status & Inventory -->
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-6"
        >
            <h3
                class="text-white font-bold flex items-center gap-2 border-b border-border-dark pb-3"
            >
                <span class="material-symbols-outlined text-primary"
                    >settings</span
                >
                Estado y Stock
            </h3>

            <div class="space-y-4">
                <div
                    class="flex items-center justify-between p-3 bg-background-dark/30 rounded-lg border border-border-dark/50"
                >
                    <label
                        class="text-sm text-white font-medium cursor-pointer"
                        for="is_active">Producto Activo</label
                    >
                    <input
                        type="checkbox"
                        id="is_active"
                        name="is_active"
                        checked={product.is_active}
                        class="w-5 h-5 rounded border-border-dark bg-background-dark text-primary focus:ring-primary"
                    />
                </div>

                <div
                    class="flex items-center justify-between p-3 bg-background-dark/30 rounded-lg border border-border-dark/50"
                >
                    <label
                        class="text-sm text-white font-medium cursor-pointer"
                        for="in_stock">En Stock</label
                    >
                    <input
                        type="checkbox"
                        id="in_stock"
                        name="in_stock"
                        checked={product.in_stock}
                        class="w-5 h-5 rounded border-border-dark bg-background-dark text-primary focus:ring-primary"
                    />
                </div>

                <div
                    class="flex items-center justify-between p-3 bg-background-dark/30 rounded-lg border border-blue-500/30"
                >
                    <div class="flex flex-col">
                        <label
                            class="text-sm text-white font-medium cursor-pointer"
                            for="show_gallery">Mostrar Galería</label
                        >
                        <span class="text-[10px] text-blue-400"
                            >Ver múltiples fotos</span
                        >
                    </div>
                    <input
                        type="checkbox"
                        id="show_gallery"
                        name="show_gallery"
                        checked={product.show_gallery}
                        class="w-5 h-5 rounded border-border-dark bg-background-dark text-primary focus:ring-primary"
                    />
                </div>

                <div class="pt-2">
                    <label
                        for="stock_quantity"
                        class="block text-xs font-bold text-text-muted uppercase mb-2"
                        >Cantidad en Stock</label
                    >
                    <input
                        type="number"
                        id="stock_quantity"
                        name="stock_quantity"
                        value={product.stock_quantity}
                        required
                        min="0"
                        class="w-full px-4 py-2.5 bg-background-dark border border-border-dark rounded-lg text-white focus:ring-2 focus:ring-primary"
                    />
                </div>

                <div>
                    <label
                        for="category"
                        class="block text-xs font-bold text-text-muted uppercase mb-2"
                        >Categoría</label
                    >
                    <input
                        type="text"
                        id="category"
                        name="category"
                        value={product.category}
                        required
                        class="w-full px-4 py-2.5 bg-background-dark border border-border-dark rounded-lg text-white"
                    />
                </div>

                <div>
                    <label
                        for="seller"
                        class="block text-xs font-bold text-text-muted uppercase mb-2"
                        >Vendedor</label
                    >
                    <input
                        type="text"
                        id="seller"
                        name="seller"
                        value={product.seller}
                        class="w-full px-4 py-2.5 bg-background-dark border border-border-dark rounded-lg text-white"
                    />
                </div>
            </div>
        </div>

        <!-- Badges (Redesigned Compact) -->
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-6"
        >
            <h3
                class="text-white font-bold flex items-center gap-2 border-b border-border-dark pb-3"
            >
                <span class="material-symbols-outlined text-primary">label</span
                >
                Etiquetas (Badges)
            </h3>

            <!-- Regular Badge -->
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-xs font-bold text-text-muted uppercase"
                        >Etiqueta Principal</span
                    >
                    <label class="flex items-center gap-1.5 cursor-pointer">
                        <input
                            type="checkbox"
                            id="show_badge"
                            name="show_badge"
                            checked={product.show_badge}
                            class="w-4 h-4 rounded border-border-dark bg-background-dark text-primary"
                        />
                        <span class="text-[10px] text-white/70">Mostrar</span>
                    </label>
                </div>
                <input
                    type="text"
                    id="badge"
                    name="badge"
                    value={product.badge}
                    class="w-full px-4 py-2.5 bg-background-dark border border-border-dark rounded-lg text-white text-sm"
                    placeholder="Ej: Nuevo"
                />

                <div class="grid grid-cols-2 gap-2">
                    <div>
                        <label
                            class="block text-[10px] text-text-muted uppercase mb-1"
                            >Fondo</label
                        >
                        <div class="flex gap-1">
                            <input
                                type="color"
                                id="badge_color_picker"
                                class="w-8 h-8 rounded bg-transparent border-none cursor-pointer"
                                value={product.badge_color || "#FFD700"}
                            />
                            <input
                                type="text"
                                id="badge_color"
                                name="badge_color"
                                class="flex-1 text-[10px] bg-background-dark border border-border-dark rounded px-2"
                                value={product.badge_color || "#FFD700"}
                            />
                        </div>
                    </div>
                    <div>
                        <label
                            class="block text-[10px] text-text-muted uppercase mb-1"
                            >Texto</label
                        >
                        <div class="flex gap-1">
                            <input
                                type="color"
                                id="badge_text_color_picker"
                                class="w-8 h-8 rounded bg-transparent border-none cursor-pointer"
                                value={product.badge_text_color || "#000000"}
                            />
                            <input
                                type="text"
                                id="badge_text_color"
                                name="badge_text_color"
                                class="flex-1 text-[10px] bg-background-dark border border-border-dark rounded px-2"
                                value={product.badge_text_color || "#000000"}
                            />
                        </div>
                    </div>
                </div>
            </div>

            <div class="h-px bg-border-dark my-4"></div>

            <!-- Discount Badge -->
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-xs font-bold text-text-muted uppercase"
                        >Etiqueta Descuento</span
                    >
                    <label class="flex items-center gap-1.5 cursor-pointer">
                        <input
                            type="checkbox"
                            id="show_discount_badge"
                            name="show_discount_badge"
                            checked={product.show_discount_badge}
                            class="w-4 h-4 rounded border-border-dark bg-background-dark text-primary"
                        />
                        <span class="text-[10px] text-white/70">Mostrar</span>
                    </label>
                </div>
                <input
                    type="text"
                    id="discount_badge"
                    name="discount_badge"
                    value={product.discount_badge}
                    class="w-full px-4 py-2.5 bg-background-dark border border-border-dark rounded-lg text-white text-sm"
                    placeholder="Ej: -20%"
                />

                <div class="grid grid-cols-2 gap-2">
                    <div>
                        <label
                            class="block text-[10px] text-text-muted uppercase mb-1"
                            >Fondo</label
                        >
                        <div class="flex gap-1">
                            <input
                                type="color"
                                id="discount_badge_color_picker"
                                class="w-8 h-8 rounded bg-transparent border-none cursor-pointer"
                                value={product.discount_badge_color ||
                                    "#E00700"}
                            />
                            <input
                                type="text"
                                id="discount_badge_color"
                                name="discount_badge_color"
                                class="flex-1 text-[10px] bg-background-dark border border-border-dark rounded px-2"
                                value={product.discount_badge_color ||
                                    "#E00700"}
                            />
                        </div>
                    </div>
                    <div>
                        <label
                            class="block text-[10px] text-text-muted uppercase mb-1"
                            >Texto</label
                        >
                        <div class="flex gap-1">
                            <input
                                type="color"
                                id="discount_badge_text_color_picker"
                                class="w-8 h-8 rounded bg-transparent border-none cursor-pointer"
                                value={product.discount_badge_text_color ||
                                    "#FFFFFF"}
                            />
                            <input
                                type="text"
                                id="discount_badge_text_color"
                                name="discount_badge_text_color"
                                class="flex-1 text-[10px] bg-background-dark border border-border-dark rounded px-2"
                                value={product.discount_badge_text_color ||
                                    "#FFFFFF"}
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rating -->
        <div
            class="bg-card-dark border border-border-dark rounded-xl p-6 space-y-4"
        >
            <h3
                class="text-white font-bold flex items-center gap-2 border-b border-border-dark pb-3 text-sm"
            >
                <span class="material-symbols-outlined text-primary text-sm"
                    >stars</span
                >
                Reseñas y Rating
            </h3>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label
                        for="rating"
                        class="block text-[10px] font-bold text-text-muted uppercase mb-2"
                        >Rating</label
                    >
                    <input
                        type="number"
                        id="rating"
                        name="rating"
                        value={product.rating}
                        required
                        min="1"
                        max="5"
                        class="w-full px-3 py-2 bg-background-dark border border-border-dark rounded-lg text-white"
                    />
                </div>
                <div>
                    <label
                        for="review_count"
                        class="block text-[10px] font-bold text-text-muted uppercase mb-2"
                        >Reviews</label
                    >
                    <input
                        type="number"
                        id="review_count"
                        name="review_count"
                        value={product.review_count}
                        min="0"
                        class="w-full px-3 py-2 bg-background-dark border border-border-dark rounded-lg text-white"
                    />
                </div>
            </div>
        </div>

        <!-- Mobile Actions (Sticky Bottom) -->
        <div
            class="lg:hidden sticky bottom-6 bg-card-dark/80 backdrop-blur-md border border-primary/30 rounded-xl p-4 flex gap-3 shadow-2xl z-40"
        >
            <button
                type="submit"
                class="submit-btn flex-1 flex items-center justify-center gap-2 px-6 py-3 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-primary/20"
            >
                <span class="material-symbols-outlined">save</span>
                Guardar
            </button>
            <a
                href="/admin/products"
