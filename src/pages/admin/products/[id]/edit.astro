                        insertHandler: (data) => {
                            if (data.assets && data.assets.length > 0) {
                                const url = data.assets[0].secure_url;
                                if (imageInput) imageInput.value = url;

                                // Visual feedback
                                if (previewImg) previewImg.src = url;
                                if (currentUrlSpan)
                                    currentUrlSpan.textContent = url;

                                showToast(
                                    "Imagen actualizada correctamente. No olvides guardar los cambios.",
                                    "success",
                                );
                            }
                        },
                    },
                );
            }
        } catch (err) {
            console.error("Error pre-initializing Media Library:", err);
        }
    }

