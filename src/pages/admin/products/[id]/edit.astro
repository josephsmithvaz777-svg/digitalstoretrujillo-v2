<script
    define:vars={{
        cloudName: import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME,
        uploadPreset: import.meta.env.PUBLIC_CLOUDINARY_UPLOAD_PRESET,
    }}
>
    // Toast Notification System
    function showToast(message, type = "success") {
        const container = document.getElementById("toast-container");
        const toast = document.createElement("div");

        const icons = {
            success: "check_circle",
            error: "error",
            warning: "warning",
            info: "info",
        };

        const colors = {
            success: "bg-green-600 border-green-500",
            error: "bg-red-600 border-red-500",
            warning: "bg-yellow-600 border-yellow-500",
            info: "bg-blue-600 border-blue-500",
        };

        toast.className = `${colors[type]} border-l-4 text-white px-6 py-4 rounded-lg shadow-2xl flex items-center gap-3 min-w-[320px] max-w-md pointer-events-auto transform transition-all duration-300 translate-x-[400px] opacity-0`;
        toast.innerHTML = `
            <span class="material-symbols-outlined text-2xl">${icons[type]}</span>
            <p class="flex-1 font-medium">${message}</p>
            <button class="toast-close hover:bg-white/20 rounded p-1 transition-colors">
                <span class="material-symbols-outlined text-xl">close</span>
            </button>
        `;

        container.appendChild(toast);

        // Trigger animation
        setTimeout(() => {
            toast.classList.remove("translate-x-[400px]", "opacity-0");
        }, 10);

        // Auto dismiss after 5 seconds
        const timeoutId = setTimeout(() => {
            dismissToast(toast);
        }, 5000);

        // Manual dismiss
        toast.querySelector(".toast-close").addEventListener("click", () => {
            clearTimeout(timeoutId);
            dismissToast(toast);
        });
    }

    function dismissToast(toast) {
        toast.classList.add("translate-x-[400px]", "opacity-0");
        setTimeout(() => {
            toast.remove();
        }, 300);
    }

    // Get references to DOM elements
    const imageInput = document.getElementById("image");
    const previewImg = document.getElementById("preview-img");
    const currentUrlSpan = document.getElementById("current-url");

    // Media Library Widget Handler
    const mediaLibraryBtn = document.getElementById("media-library-btn");
    let mediaLibraryConfig = null;
    let mediaLibraryWidget = null;

    // Pre-fetch signature and pre-initialize widget for instant loading
    async function initMediaLibrary() {
        try {
            const response = await fetch("/api/cloudinary-sign");
            const data = await response.json();
            if (!data.error) {
                mediaLibraryConfig = data;

                // Pre-initialize the widget for faster opening
                // @ts-ignore
                mediaLibraryWidget = cloudinary.createMediaLibrary(
                    {
                        cloud_name: mediaLibraryConfig.cloudName,
                        api_key: mediaLibraryConfig.apiKey,
                        timestamp: mediaLibraryConfig.timestamp,
                        signature: mediaLibraryConfig.signature,
                        folder: {
                            path: "digitalstore/products",
                            resource_type: "image",
                        },
                        multiple: false,
                        max_files: 1,
                        insert_caption: "Seleccionar",
                    },
                    {
                        insertHandler: (data) => {
                            if (data.assets && data.assets.length > 0) {
                                const url = data.assets[0].secure_url;
                                imageInput.value = url;

                                // Visual feedback
                                if (previewImg) {
                                    previewImg.src = url;
                                }
                                if (currentUrlSpan) {
                                    currentUrlSpan.textContent = url;
                                }
                                console.log(
                                    "Image selected from library:",
                                    url,
                                );
                                showToast(
                                    "Imagen actualizada correctamente. No olvides guardar los cambios del producto.",
                                    "success",
                                );
                            }
                        },
                    },
                );
                console.log("✅ Media Library pre-initialized");
            }
        } catch (err) {
            console.error("Error pre-initializing Media Library:", err);
        }
    }

    // Initialize on page load
    initMediaLibrary();

    // Gallery Management
    const galleryContainer = document.getElementById("gallery-container");
    const manageGalleryBtn = document.getElementById("manage-gallery-btn");

    function addThumbToUI(url) {
        if (!galleryContainer) return;

        // Remove placeholder if it exists
        const placeholder = galleryContainer.querySelector(".col-span-full");
        if (placeholder) placeholder.remove();

        const div = document.createElement("div");
        div.className = "relative group aspect-square";
        div.innerHTML = `
            <img src="${url}" class="w-full h-full object-cover rounded-lg border border-border-dark" />
            <button type="button" class="remove-thumb absolute -top-2 -right-2 bg-red-600 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg" data-url="${url}">
                <span class="material-symbols-outlined text-sm">close</span>
            </button>
            <input type="hidden" name="thumbnails" value="${url}" />
        `;

        galleryContainer.appendChild(div);

        // Add remove listener
        div.querySelector(".remove-thumb").addEventListener("click", () => {
            div.remove();
            if (
                galleryContainer.querySelectorAll(".aspect-square").length === 0
            ) {
                galleryContainer.innerHTML = `
                    <div class="col-span-full flex flex-col items-center justify-center text-text-muted py-4">
                        <span class="material-symbols-outlined text-3xl mb-2">add_photo_alternate</span>
                        <p class="text-xs">No hay imágenes en la galería</p>
                    </div>
                `;
            }
        });
    }

    // Add removal listeners locally to existing thumbs
    document.querySelectorAll(".remove-thumb").forEach((btn) => {
        btn.addEventListener("click", () => {
            const parent = btn.closest(".relative");
            parent?.remove();
            if (
                galleryContainer?.querySelectorAll(".aspect-square").length ===
                0
            ) {
                galleryContainer.innerHTML = `
                    <div class="col-span-full flex flex-col items-center justify-center text-text-muted py-4">
                        <span class="material-symbols-outlined text-3xl mb-2">add_photo_alternate</span>
                        <p class="text-xs">No hay imágenes en la galería</p>
                    </div>
                `;
            }
        });
    });

    manageGalleryBtn?.addEventListener("click", async () => {
        try {
            const originalHTML = manageGalleryBtn.innerHTML;
            manageGalleryBtn.disabled = true;
            manageGalleryBtn.innerHTML = `<span class="material-symbols-outlined animate-spin">progress_activity</span> Cargando...`;

            if (!mediaLibraryConfig) {
                const response = await fetch("/api/cloudinary-sign");
                mediaLibraryConfig = await response.json();
            }

            // @ts-ignore
            const mlWidget = cloudinary.openMediaLibrary(
                {
                    cloud_name: mediaLibraryConfig.cloudName,
                    api_key: mediaLibraryConfig.apiKey,
                    timestamp: mediaLibraryConfig.timestamp,
                    signature: mediaLibraryConfig.signature,
                    folder: {
                        path: "digitalstore/products",
                        resource_type: "image",
                    },
                    multiple: true,
                },
                {
                    insertHandler: (data) => {
                        if (data.assets && data.assets.length > 0) {
                            data.assets.forEach((asset) => {
                                addThumbToUI(asset.secure_url);
                            });
                            showToast(
                                `${data.assets.length} imágenes añadidas a la galería.`,
                                "success",
                            );
                        }
                        // Restore button state after insertion
                        manageGalleryBtn.disabled = false;
                        manageGalleryBtn.innerHTML = originalHTML;
                    },
                },
            );

            // Restore button state when widget opens successfully
            // This handles the case when the widget opens but user closes without selecting
            setTimeout(() => {
                if (manageGalleryBtn.disabled) {
                    manageGalleryBtn.disabled = false;
                    manageGalleryBtn.innerHTML = originalHTML;
                }
            }, 1000);

        } catch (err) {
            console.error("Error opening gallery library:", err);
            showToast("Error al conectar con Cloudinary", "error");
            manageGalleryBtn.disabled = false;
            const originalHTML = manageGalleryBtn.innerHTML;
            manageGalleryBtn.innerHTML = `<span class="material-symbols-outlined text-blue-400">add_to_photos</span> Añadir Imágenes a la Galería`;
        }
    });

    mediaLibraryBtn?.addEventListener("click", async () => {
        try {
            // Show loading state
            const originalHTML = mediaLibraryBtn.innerHTML;
            mediaLibraryBtn.disabled = true;
            mediaLibraryBtn.innerHTML = `
                <span class="material-symbols-outlined animate-spin">progress_activity</span>
                Cargando...
            `;

            // If widget is pre-initialized, open it immediately
            if (mediaLibraryWidget) {
                mediaLibraryWidget.show();
            } else {
                // Fallback: fetch config and open
                if (!mediaLibraryConfig) {
                    const response = await fetch("/api/cloudinary-sign");
                    mediaLibraryConfig = await response.json();
                }

                if (mediaLibraryConfig.error) {
                    showToast("Error: " + mediaLibraryConfig.error, "error");
                    return;
                }

                // @ts-ignore
                cloudinary.openMediaLibrary(
                    {
                        cloud_name: mediaLibraryConfig.cloudName,
                        api_key: mediaLibraryConfig.apiKey,
                        timestamp: mediaLibraryConfig.timestamp,
                        signature: mediaLibraryConfig.signature,
                        folder: {
                            path: "digitalstore/products",
                            resource_type: "image",
                        },
                        multiple: false,
                        max_files: 1,
                        insert_caption: "Seleccionar",
                    },
                    {
                        insertHandler: (data) => {
                            if (data.assets && data.assets.length > 0) {
                                const url = data.assets[0].secure_url;
                                imageInput.value = url;

                                // Visual feedback
                                if (previewImg) {
                                    previewImg.src = url;
                                }
                                if (currentUrlSpan) {
                                    currentUrlSpan.textContent = url;
                                }
                                console.log(
                                    "Image selected from library:",
                                    url,
                                );
                                showToast(
                                    "Imagen actualizada correctamente. No olvides guardar los cambios del producto.",
                                    "success",
                                );
                            }
                        },
                    },
                );
            }

            // Restore button state
            mediaLibraryBtn.disabled = false;
            mediaLibraryBtn.innerHTML = originalHTML;
        } catch (err) {
            console.error("Error opening media library:", err);
            showToast("Error al conectar con Cloudinary", "error");

            // Restore button state
            mediaLibraryBtn.disabled = false;
            mediaLibraryBtn.innerHTML = `
                <span class="material-symbols-outlined">photo_library</span>
                Gestionar Imagen
            `;
        }
    });
</script>

<script>
    import { updateProduct } from "../../../../lib/supabase";

    // Auto-generate slug from title
    const titleInput = document.getElementById("title") as HTMLInputElement;
    const slugInput = document.getElementById("slug") as HTMLInputElement;

    titleInput?.addEventListener("input", () => {
        if (
            !slugInput.value ||
            slugInput.value ===
                titleInput.value.toLowerCase().replace(/[^a-z0-9]+/g, "-")
        ) {
            slugInput.value = titleInput.value
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, "-")
                .replace(/^-+|-+$/g, "");
        }
    });

    // Badge General color sync
    const colorPicker = document.getElementById(
        "badge_color_picker",
    ) as HTMLInputElement;
    const colorInput = document.getElementById(
        "badge_color",
    ) as HTMLInputElement;
    const textColorPicker = document.getElementById(
        "badge_text_color_picker",
    ) as HTMLInputElement;
    const textColorInput = document.getElementById(
        "badge_text_color",
    ) as HTMLInputElement;

    colorPicker?.addEventListener("input", (e) => {
        colorInput.value = (e.target as HTMLInputElement).value.toUpperCase();
    });

    colorInput?.addEventListener("input", (e) => {
        const value = (e.target as HTMLInputElement).value;
        if (/^#[0-9A-F]{6}$/i.test(value)) colorPicker.value = value;
    });

    textColorPicker?.addEventListener("input", (e) => {
        textColorInput.value = (
            e.target as HTMLInputElement
        ).value.toUpperCase();
    });

    textColorInput?.addEventListener("input", (e) => {
        const value = (e.target as HTMLInputElement).value;
        if (/^#[0-9A-F]{6}$/i.test(value)) textColorPicker.value = value;
    });

    // DISCOUNT Badge color sync
    const discountColorPicker = document.getElementById(
        "discount_badge_color_picker",
    ) as HTMLInputElement;
    const discountColorInput = document.getElementById(
        "discount_badge_color",
    ) as HTMLInputElement;
    const discountTextColorPicker = document.getElementById(
        "discount_badge_text_color_picker",
    ) as HTMLInputElement;
    const discountTextColorInput = document.getElementById(
        "discount_badge_text_color",
    ) as HTMLInputElement;

    discountColorPicker?.addEventListener("input", (e) => {
        discountColorInput.value = (
            e.target as HTMLInputElement
        ).value.toUpperCase();
    });

    discountColorInput?.addEventListener("input", (e) => {
        const value = (e.target as HTMLInputElement).value;
        if (/^#[0-9A-F]{6}$/i.test(value)) discountColorPicker.value = value;
    });

    discountTextColorPicker?.addEventListener("input", (e) => {
        discountTextColorInput.value = (
            e.target as HTMLInputElement
        ).value.toUpperCase();
    });

    discountTextColorInput?.addEventListener("input", (e) => {
        const value = (e.target as HTMLInputElement).value;
        if (/^#[0-9A-F]{6}$/i.test(value))
            discountTextColorPicker.value = value;
    });

    // Features management
    const featuresContainer = document.getElementById("features-container");
    const addFeatureBtn = document.getElementById("add-feature");

    // Add remove functionality to existing featured inputs
    document.querySelectorAll(".remove-feature").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const target = e.currentTarget as HTMLElement;
            target.parentElement?.remove();
        });
    });

    addFeatureBtn?.addEventListener("click", () => {
        const featureDiv = document.createElement("div");
        featureDiv.className = "flex gap-2";
        featureDiv.innerHTML = `
				<input
					type="text"
					class="feature-input flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
					placeholder="Característica del producto..."
				/>
				<button
					type="button"
					class="remove-feature px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
				>
					<span class="material-symbols-outlined">close</span>
				</button>
			`;
        featuresContainer?.appendChild(featureDiv);

        // Add remove functionality
        featureDiv
            .querySelector(".remove-feature")
            ?.addEventListener("click", () => {
                featureDiv.remove();
            });
    });

    // Form submission
    const form = document.getElementById("product-form") as HTMLFormElement;
    const submitBtns = document.querySelectorAll(".submit-btn");
    const productId = form.dataset.productId;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        if (!productId) return;

        const formData = new FormData(form);

        // DEBUG: Log the image value from different sources
        const imageFromFormData = formData.get("image") as string;
        const imageFromInput = (
            document.getElementById("image") as HTMLInputElement
        )?.value;
        console.log("🔍 DEBUG - Image from FormData:", imageFromFormData);
        console.log("🔍 DEBUG - Image from Input Element:", imageFromInput);

        // Collect thumbnails
        const thumbnails: string[] = [];
        document
            .querySelectorAll('input[name="thumbnails"]')
            .forEach((input) => {
                const value = (input as HTMLInputElement).value;
                if (value) thumbnails.push(value);
            });

        // Collect features
        const features: string[] = [];
        document.querySelectorAll(".feature-input").forEach((input) => {
            const value = (input as HTMLInputElement).value.trim();
            if (value) features.push(value);
        });

        // Prepare product data - Use the input element value directly to ensure we get the updated value
        const imageValue = imageFromInput || imageFromFormData;

        const productData = {
            title: formData.get("title") as string,
            slug: formData.get("slug") as string,
            description: (formData.get("description") as string) || null,
            price: parseFloat(formData.get("price") as string),
            original_price: formData.get("original_price")
                ? parseFloat(formData.get("original_price") as string)
                : null,
            renewable_price: formData.get("renewable_price")
                ? parseFloat(formData.get("renewable_price") as string)
                : null,
            image: imageValue,
            category: formData.get("category") as string,
            seller: (formData.get("seller") as string) || null,
            badge: (formData.get("badge") as string) || null,
            badge_color: (formData.get("badge_color") as string) || null,
            badge_text_color:
                (formData.get("badge_text_color") as string) || null,
            rating: parseInt(formData.get("rating") as string),
            review_count: parseInt(formData.get("review_count") as string) || 0,
            stock_quantity: parseInt(formData.get("stock_quantity") as string),
            features: features,
            thumbnails: thumbnails,
            show_gallery: (
                document.getElementById("show_gallery") as HTMLInputElement
            ).checked,
            is_active: (
                document.getElementById("is_active") as HTMLInputElement
            ).checked,
            in_stock: (document.getElementById("in_stock") as HTMLInputElement)
                .checked,
            show_badge: (
                document.getElementById("show_badge") as HTMLInputElement
            ).checked,
            discount_badge: (formData.get("discount_badge") as string) || null,
            discount_badge_color:
                (formData.get("discount_badge_color") as string) || null,
            discount_badge_text_color:
                (formData.get("discount_badge_text_color") as string) || null,
            show_discount_badge: (
                document.getElementById(
                    "show_discount_badge",
                ) as HTMLInputElement
            ).checked,
            show_renewable_price: (
                document.getElementById(
                    "show_renewable_price",
                ) as HTMLInputElement
            ).checked,
        };

        console.log("📦 DEBUG - Product data being sent:", productData);

        // Disable buttons
        submitBtns.forEach((btn: any) => {
            btn.disabled = true;
            btn.innerHTML = `
                <span class="material-symbols-outlined animate-spin">progress_activity</span>
                Guardando...
            `;
        });

        try {
            const response = await updateProduct(productId, productData);

            if (response === false) {
                throw new Error(
                    "Error al actualizar el producto. Revisa la consola para más detalles.",
                );
            }

            // Success - redirect
            window.location.href = "/admin/products";
        } catch (error: any) {
            console.error("FULL ERROR:", error);
            showToast(
                error.message || "Error al actualizar el producto",
                "error",
            );
            submitBtns.forEach((btn: any) => {
                btn.disabled = false;
                btn.innerHTML = `
                    <span class="material-symbols-outlined">save</span>
                    Guardar Cambios
                `;
            });
        }
    });
</script>
