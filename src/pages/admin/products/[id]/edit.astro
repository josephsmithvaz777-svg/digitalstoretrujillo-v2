    ) as HTMLInputElement;
    const discountTextColorInput = document.getElementById(
        "discount_badge_text_color",
    ) as HTMLInputElement;

    discountColorPicker?.addEventListener("input", (e) => {
        discountColorInput.value = (
            e.target as HTMLInputElement
        ).value.toUpperCase();
    });

    discountColorInput?.addEventListener("input", (e) => {
        const value = (e.target as HTMLInputElement).value;
        if (/^#[0-9A-F]{6}$/i.test(value)) discountColorPicker.value = value;
    });

    discountTextColorPicker?.addEventListener("input", (e) => {
        discountTextColorInput.value = (
            e.target as HTMLInputElement
        ).value.toUpperCase();
    });

    discountTextColorInput?.addEventListener("input", (e) => {
        const value = (e.target as HTMLInputElement).value;
        if (/^#[0-9A-F]{6}$/i.test(value))
            discountTextColorPicker.value = value;
    });

    // Features management
    const featuresContainer = document.getElementById("features-container");
    const addFeatureBtn = document.getElementById("add-feature");

    // Add remove functionality to existing featured inputs
    document.querySelectorAll(".remove-feature").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const target = e.currentTarget as HTMLElement;
            target.parentElement?.remove();
        });
    });

    addFeatureBtn?.addEventListener("click", () => {
        const featureDiv = document.createElement("div");
        featureDiv.className = "flex gap-2";
        featureDiv.innerHTML = `
				<input
					type="text"
					class="feature-input flex-1 px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
					placeholder="Característica del producto..."
				/>
				<button
					type="button"
					class="remove-feature px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
				>
					<span class="material-symbols-outlined">close</span>
				</button>
			`;
        featuresContainer?.appendChild(featureDiv);

        // Add remove functionality
        featureDiv
            .querySelector(".remove-feature")
            ?.addEventListener("click", () => {
                featureDiv.remove();
            });
    });

    // Form submission
    const form = document.getElementById("product-form") as HTMLFormElement;
    const submitBtn = document.getElementById(
        "submit-btn",
    ) as HTMLButtonElement;
    const productId = form.dataset.productId;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        if (!productId) return;

        const formData = new FormData(form);

        // Collect features
        const features: string[] = [];
        document.querySelectorAll(".feature-input").forEach((input) => {
            const value = (input as HTMLInputElement).value.trim();
            if (value) features.push(value);
        });

        // Prepare product data
        const productData = {
            title: formData.get("title") as string,
            slug: formData.get("slug") as string,
            description: (formData.get("description") as string) || null,
            price: parseFloat(formData.get("price") as string),
            original_price: formData.get("original_price")
                ? parseFloat(formData.get("original_price") as string)
                : null,
            renewable_price: formData.get("renewable_price")
                ? parseFloat(formData.get("renewable_price") as string)
                : null,
            image: formData.get("image") as string,
            category: formData.get("category") as string,
            seller: (formData.get("seller") as string) || null,
            badge: (formData.get("badge") as string) || null,
            badge_color: (formData.get("badge_color") as string) || null,
            badge_text_color:
                (formData.get("badge_text_color") as string) || null,
            rating: parseInt(formData.get("rating") as string),
            review_count: parseInt(formData.get("review_count") as string) || 0,
            stock_quantity: parseInt(formData.get("stock_quantity") as string),
            features,
            is_active: (
                document.getElementById("is_active") as HTMLInputElement
            ).checked,
            in_stock: (document.getElementById("in_stock") as HTMLInputElement)
                .checked,
            show_badge: (
                document.getElementById("show_badge") as HTMLInputElement
            ).checked,
            discount_badge: (formData.get("discount_badge") as string) || null,
            discount_badge_color:
                (formData.get("discount_badge_color") as string) || null,
            discount_badge_text_color:
                (formData.get("discount_badge_text_color") as string) || null,
            show_discount_badge: (
                document.getElementById(
                    "show_discount_badge",
                ) as HTMLInputElement
            ).checked,
            show_renewable_price: (
                document.getElementById(
                    "show_renewable_price",
                ) as HTMLInputElement
            ).checked,
        };

        // Disable button
        submitBtn.disabled = true;
        submitBtn.innerHTML = `
				<span class="material-symbols-outlined animate-spin">progress_activity</span>
				Guardando...
			`;

        try {
            const response = await updateProduct(productId, productData);

            if (response === false) {
                throw new Error(
                    "Error al actualizar el producto. Revisa la consola para más detalles.",
                );
            }

            // Success - redirect
            window.location.href = "/admin/products";
        } catch (error: any) {
            console.error("FULL ERROR:", error);
            alert(error.message || "Error al actualizar el producto");
            submitBtn.disabled = false;
            submitBtn.innerHTML = `
					<span class="material-symbols-outlined">save</span>
					Guardar Cambios
				`;
        }
    });
</script>
