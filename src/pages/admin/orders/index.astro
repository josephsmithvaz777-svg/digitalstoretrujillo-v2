---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { getAllOrders } from "../../../lib/supabase";

const orders = await getAllOrders();
---

<AdminLayout title="Órdenes" activePage="orders">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-white text-2xl font-bold mb-1">Órdenes</h1>
        <p class="text-text-muted text-sm">
            Gestiona todas las órdenes de compra
        </p>
    </div>

    <!-- Bulk Actions Bar (Hidden by default) -->
    <div
        id="bulk-actions"
        class="hidden bg-primary/10 border border-primary/20 rounded-xl p-4 mb-6 flex items-center justify-between animate-fade-in"
    >
        <div class="flex items-center gap-3">
            <span
                class="bg-primary text-white text-xs font-bold px-2 py-1 rounded-md"
                id="selected-count">0</span
            >
            <span class="text-white text-sm font-medium"
                >órdenes seleccionadas</span
            >
        </div>
        <button
            id="bulk-delete-btn"
            class="flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all text-sm"
        >
            <span class="material-symbols-outlined text-[18px]">delete</span>
            Eliminar Seleccionados
        </button>
    </div>

    <!-- Orders Table -->
    <div
        class="bg-card-dark border border-border-dark rounded-xl overflow-hidden"
    >
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-background-dark border-b border-border-dark">
                    <tr>
                        <th class="px-6 py-4 w-10">
                            <input
                                type="checkbox"
                                id="select-all"
                                class="rounded border-border-dark bg-background-dark text-primary focus:ring-primary cursor-pointer w-4 h-4"
                            />
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Orden
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Cliente
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Productos
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Total
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Pago
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Estado
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Fecha
                        </th>
                        <th
                            class="px-6 py-4 text-right text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-dark">
                    {
                        orders.length === 0 ? (
                            <tr>
                                <td colspan="9" class="px-6 py-12 text-center">
                                    <span class="material-symbols-outlined text-text-muted text-5xl mb-4 block">
                                        receipt_long
                                    </span>
                                    <p class="text-text-muted">
                                        No hay órdenes aún
                                    </p>
                                </td>
                            </tr>
                        ) : (
                            orders.map((order) => (
                                <tr class="hover:bg-background-dark/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <input
                                            type="checkbox"
                                            class="order-checkbox rounded border-border-dark bg-background-dark text-primary focus:ring-primary cursor-pointer w-4 h-4"
                                            value={order.id}
                                        />
                                    </td>
                                    <td class="px-6 py-4">
                                        <div>
                                            <p class="text-white font-bold">
                                                {order.order_number}
                                            </p>
                                            <p class="text-text-muted text-xs">
                                                {order.payment_method === "yape"
                                                    ? "Yape"
                                                    : order.payment_method ===
                                                        "binance"
                                                      ? "Binance Pay"
                                                      : "Cryptomus"}
                                            </p>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div>
                                            <p class="text-white font-medium">
                                                {order.customer_name}
                                            </p>
                                            <p class="text-text-muted text-sm">
                                                {order.customer_email}
                                            </p>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="space-y-1">
                                            {order.items &&
                                            order.items.length > 0 ? (
                                                order.items.map(
                                                    (
                                                        item: any,
                                                        idx: number,
                                                    ) => {
                                                        const delivery =
                                                            order.delivery_info
                                                                ? order.delivery_info.find(
                                                                      (
                                                                          d: any,
                                                                      ) =>
                                                                          d.title ===
                                                                          item.title,
                                                                  )
                                                                : null;
                                                        let expirationDate =
                                                            null;
                                                        if (
                                                            delivery &&
                                                            delivery.expiration_date
                                                        ) {
                                                            const [
                                                                year,
                                                                month,
                                                                day,
                                                            ] =
                                                                delivery.expiration_date.split(
                                                                    "-",
                                                                );
                                                            expirationDate = `${day}/${month}/${year}`;
                                                        }

                                                        return (
                                                            <div class="flex flex-col gap-1 mb-2">
                                                                <div class="flex items-center gap-2">
                                                                    <div class="w-6 h-6 rounded bg-background-dark overflow-hidden flex-shrink-0">
                                                                        <img
                                                                            src={
                                                                                item.image
                                                                            }
                                                                            alt=""
                                                                            class="w-full h-full object-cover"
                                                                        />
                                                                    </div>
                                                                    <p class="text-text-muted text-xs">
                                                                        <span class="text-white font-medium">
                                                                            {
                                                                                item.title
                                                                            }
                                                                        </span>{" "}
                                                                        (x
                                                                        {
                                                                            item.quantity
                                                                        }
                                                                        )
                                                                    </p>
                                                                </div>
                                                                {expirationDate && (
                                                                    <div class="pl-8">
                                                                        <span class="text-[10px] bg-red-500/10 text-red-400 px-1.5 py-0.5 rounded border border-red-500/20 font-medium">
                                                                            Vence:{" "}
                                                                            {
                                                                                expirationDate
                                                                            }
                                                                        </span>
                                                                    </div>
                                                                )}
                                                            </div>
                                                        );
                                                    },
                                                )
                                            ) : (
                                                <p class="text-text-muted text-xs italic">
                                                    Sin productos
                                                </p>
                                            )}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-white font-bold">
                                            {order.currency === "USD"
                                                ? `$ ${Number(order.total).toFixed(2)} USD`
                                                : `S/ ${Number(order.total).toFixed(2)}`}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold ${
                                                order.payment_status ===
                                                "verified"
                                                    ? "bg-green-500/20 text-green-400"
                                                    : order.payment_status ===
                                                        "failed"
                                                      ? "bg-red-500/20 text-red-400"
                                                      : "bg-yellow-500/20 text-yellow-400"
                                            }`}
                                        >
                                            {order.payment_status === "verified"
                                                ? "Verificado"
                                                : order.payment_status ===
                                                    "failed"
                                                  ? "Fallido"
                                                  : "Pendiente"}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold ${
                                                order.status === "completed"
                                                    ? "bg-green-500/20 text-green-400"
                                                    : order.status ===
                                                        "processing"
                                                      ? "bg-blue-500/20 text-blue-400"
                                                      : order.status ===
                                                          "cancelled"
                                                        ? "bg-red-500/20 text-red-400"
                                                        : "bg-yellow-500/20 text-yellow-400"
                                            }`}
                                        >
                                            {order.status === "completed"
                                                ? "Completado"
                                                : order.status === "processing"
                                                  ? "Procesando"
                                                  : order.status === "cancelled"
                                                    ? "Cancelado"
                                                    : "Pendiente"}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-white text-sm">
                                            {new Date(
                                                order.created_at,
                                            ).toLocaleDateString("es-PE", {
                                                timeZone: "America/Lima",
                                            })}
                                        </p>
                                        <p class="text-text-muted text-xs">
                                            {new Date(
                                                order.created_at,
                                            ).toLocaleTimeString("es-PE", {
                                                timeZone: "America/Lima",
                                                hour: "2-digit",
                                                minute: "2-digit",
                                                hour12: true,
                                            })}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4 text-sm font-medium">
                                        <div class="flex items-center justify-end gap-2">
                                            {(order.payment_method === "yape" ||
                                                order.payment_method ===
                                                    "binance") &&
                                                order.payment_reference && (
                                                    <button
                                                        class="view-proof-btn p-2 text-text-muted hover:text-green-500 hover:bg-green-500/10 rounded-lg transition-all"
                                                        data-order-id={order.id}
                                                        data-order-number={
                                                            order.order_number
                                                        }
                                                        data-proof-url={
                                                            order.payment_proof
                                                        }
                                                        data-reference={
                                                            order.payment_reference
                                                        }
                                                        title="Ver Comprobante"
                                                    >
                                                        <span class="material-symbols-outlined text-[20px]">
                                                            visibility
                                                        </span>
                                                    </button>
                                                )}
                                            <button
                                                class={`deliver-order-btn p-2 rounded-lg transition-all ${order.status === "completed" && order.delivery_info ? "text-primary hover:text-white hover:bg-primary/20" : "text-text-muted hover:text-yellow-500 hover:bg-yellow-500/10"}`}
                                                data-order-id={order.id}
                                                data-order-number={
                                                    order.order_number
                                                }
                                                data-items={JSON.stringify(
                                                    order.items,
                                                )}
                                                data-delivery-info={JSON.stringify(
                                                    order.delivery_info || [],
                                                )}
                                                title={
                                                    order.status ===
                                                        "completed" &&
                                                    order.delivery_info
                                                        ? "Editar Credenciales"
                                                        : "Entregar Credenciales"
                                                }
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    {order.status ===
                                                        "completed" &&
                                                    order.delivery_info
                                                        ? "edit_square"
                                                        : "key"}
                                                </span>
                                            </button>
                                            <button
                                                class="whatsapp-btn p-2 text-text-muted hover:text-[#25D366] hover:bg-[#25D366]/10 rounded-lg transition-all"
                                                data-order-number={
                                                    order.order_number
                                                }
                                                data-customer-name={
                                                    order.customer_name
                                                }
                                                data-customer-phone={
                                                    order.customer_phone
                                                }
                                                data-items={JSON.stringify(
                                                    order.items,
                                                )}
                                                data-delivery-info={JSON.stringify(
                                                    order.delivery_info || [],
                                                )}
                                                title="Enviar WhatsApp"
                                            >
                                                <svg
                                                    class="w-5 h-5 fill-current"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.937 3.659 1.435 5.711 1.435h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                                                </svg>
                                            </button>
                                            <button
                                                class="update-status-btn p-2 text-text-muted hover:text-primary hover:bg-primary/10 rounded-lg transition-all"
                                                data-order-id={order.id}
                                                data-current-status={
                                                    order.status
                                                }
                                                data-payment-method={
                                                    order.payment_method
                                                }
                                                title="Actualizar Estado"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    edit
                                                </span>
                                            </button>
                                            <button
                                                class="transfer-order-btn p-2 text-text-muted hover:text-blue-400 hover:bg-blue-400/10 rounded-lg transition-all"
                                                data-order-id={order.id}
                                                data-order-number={
                                                    order.order_number
                                                }
                                                data-customer-name={
                                                    order.customer_name
                                                }
                                                title="Transferir a otro usuario"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    manage_accounts
                                                </span>
                                            </button>
                                            <button
                                                class="delete-order-btn p-2 text-text-muted hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all"
                                                data-order-id={order.id}
                                                title="Eliminar Orden"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    delete
                                                </span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            ))
                        )
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Update Status Modal -->
    <div
        id="status-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-md w-full p-6"
        >
            <h2 class="text-white text-xl font-bold mb-4">Actualizar Estado</h2>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-white mb-2">
                        Estado de la Orden
                    </label>
                    <select
                        id="order-status"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                    >
                        <option value="pending">Pendiente</option>
                        <option value="processing">Procesando</option>
                        <option value="completed">Completado</option>
                        <option value="cancelled">Cancelado</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-white mb-2">
                        Método de Pago
                    </label>
                    <select
                        id="order-payment-method"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                    >
                        <option value="yape">Yape</option>
                        <option value="binance">Binance Pay</option>
                        <option value="paypal">PayPal</option>
                        <option value="cryptomus">Cryptomus</option>
                    </select>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button
                    id="cancel-update"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-update"
                    class="flex-1 px-4 py-2 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all"
                >
                    Actualizar
                </button>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div
        id="delete-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-sm w-full p-6 text-center"
        >
            <div
                class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4"
            >
                <span class="material-symbols-outlined text-red-500 text-3xl">
                    delete_forever
                </span>
            </div>
            <h2 class="text-white text-xl font-bold mb-2">¿Eliminar Orden?</h2>
            <p class="text-text-muted text-sm mb-6">
                Esta acción no se puede deshacer. La orden será eliminada
                permanentemente.
            </p>

            <div class="flex gap-3">
                <button
                    id="cancel-delete"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-delete"
                    class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all"
                >
                    Eliminar
                </button>
            </div>
        </div>
    </div>

    <!-- Bulk Delete Confirmation Modal -->
    <div
        id="bulk-delete-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-sm w-full p-6 text-center"
        >
            <div
                class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4"
            >
                <span class="material-symbols-outlined text-red-500 text-3xl">
                    delete_sweep
                </span>
            </div>
            <h2 class="text-white text-xl font-bold mb-2">
                ¿Eliminar Seleccionados?
            </h2>
            <p class="text-text-muted text-sm mb-6">
                Se eliminarán <span
                    id="bulk-delete-count"
                    class="font-bold text-white">0</span
                > órdenes permanentemente. Esta acción no se puede deshacer.
            </p>

            <div class="flex gap-3">
                <button
                    id="cancel-bulk-delete"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-bulk-delete"
                    class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all"
                >
                    Eliminar Todo
                </button>
            </div>
        </div>
    </div>

    <!-- Delivery Modal -->
    <div
        id="delivery-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-3xl w-full p-6 max-h-[90vh] overflow-y-auto"
        >
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-white text-xl font-bold">
                    Entregar Credenciales
                </h2>
                <div class="flex items-center gap-2">
                    <!-- Clear credentials button - only shown when order already has delivery info -->
                    <button
                        type="button"
                        id="clear-credentials-btn"
                        class="hidden items-center gap-1.5 px-3 py-1.5 text-xs font-bold text-orange-400 bg-orange-500/10 hover:bg-orange-500/20 border border-orange-500/20 rounded-lg transition-all"
                        title="Limpiar credenciales vencidas"
                    >
                        <span class="material-symbols-outlined text-[16px]"
                            >cleaning_services</span
                        >
                        Limpiar Credenciales
                    </button>
                    <button
                        id="close-delivery-modal"
                        class="text-text-muted hover:text-white"
                    >
                        <span class="material-symbols-outlined">close</span>
                    </button>
                </div>
            </div>

            <!-- Inline clear confirmation (hidden by default) -->
            <div
                id="clear-credentials-confirm"
                class="hidden mb-4 p-4 bg-orange-500/10 border border-orange-500/30 rounded-xl"
            >
                <div class="flex items-start gap-3">
                    <span
                        class="material-symbols-outlined text-orange-400 text-xl mt-0.5"
                        >warning</span
                    >
                    <div class="flex-1">
                        <p class="text-white font-bold text-sm mb-1">
                            ¿Limpiar credenciales de esta orden?
                        </p>
                        <p class="text-text-muted text-xs mb-3">
                            Esto elimina las credenciales vencidas del historial
                            del cliente. La orden quedará sin credenciales hasta
                            que entregues las nuevas.
                        </p>
                        <div class="flex gap-2">
                            <button
                                id="confirm-clear-credentials"
                                class="px-3 py-1.5 bg-orange-500 hover:bg-orange-600 text-white text-xs font-bold rounded-lg transition-all flex items-center gap-1"
                            >
                                <span
                                    class="material-symbols-outlined text-[14px]"
                                    >check</span
                                >
                                Sí, limpiar
                            </button>
                            <button
                                id="cancel-clear-credentials"
                                class="px-3 py-1.5 bg-background-dark hover:bg-border-dark text-white text-xs font-medium rounded-lg transition-all"
                            >
                                Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <form id="delivery-form" class="space-y-6">
                <div id="delivery-items-container" class="space-y-6">
                    <!-- Items will be injected here -->
                </div>

                <div
                    class="flex items-center gap-2 py-4 border-t border-border-dark"
                >
                    <input
                        type="checkbox"
                        id="mark-completed"
                        class="w-4 h-4 rounded border-border-dark bg-background-dark text-primary focus:ring-primary"
                        checked
                    />
                    <label for="mark-completed" class="text-sm text-text-muted"
                        >Marcar orden como Completada y Verificada</label
                    >
                </div>

                <div class="flex gap-3">
                    <button
                        type="button"
                        id="cancel-delivery"
                        class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                    >
                        Cancelar
                    </button>
                    <button
                        type="submit"
                        id="save-delivery"
