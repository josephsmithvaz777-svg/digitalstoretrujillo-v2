---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { getAllOrders } from "../../../lib/supabase";

const orders = await getAllOrders();
---

<AdminLayout title="√ìrdenes" activePage="orders">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-white text-2xl font-bold mb-1">√ìrdenes</h1>
        <p class="text-text-muted text-sm">
            Gestiona todas las √≥rdenes de compra
        </p>
    </div>

    <!-- Bulk Actions Bar (Hidden by default) -->
    <div id="bulk-actions" class="hidden bg-primary/10 border border-primary/20 rounded-xl p-4 mb-6 flex items-center justify-between animate-fade-in">
        <div class="flex items-center gap-3">
            <span class="bg-primary text-white text-xs font-bold px-2 py-1 rounded-md" id="selected-count">0</span>
            <span class="text-white text-sm font-medium">√≥rdenes seleccionadas</span>
        </div>
        <button
            id="bulk-delete-btn"
            class="flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all text-sm"
        >
            <span class="material-symbols-outlined text-[18px]">delete</span>
            Eliminar Seleccionados
        </button>
    </div>

    <!-- Orders Table -->
    <div
        class="bg-card-dark border border-border-dark rounded-xl overflow-hidden"
    >
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-background-dark border-b border-border-dark">
                    <tr>
                        <th class="px-6 py-4 w-10">
                            <input type="checkbox" id="select-all" class="rounded border-border-dark bg-background-dark text-primary focus:ring-primary cursor-pointer w-4 h-4">
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Orden
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Cliente
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Total
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Pago
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Estado
                        </th>
                        <th
                            class="px-6 py-4 text-left text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Fecha
                        </th>
                        <th
                            class="px-6 py-4 text-right text-xs font-bold text-text-muted uppercase tracking-wider"
                        >
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-dark">
                    {
                        orders.length === 0 ? (
                            <tr>
                                <td colspan="8" class="px-6 py-12 text-center">
                                    <span class="material-symbols-outlined text-text-muted text-5xl mb-4 block">
                                        receipt_long
                                    </span>
                                    <p class="text-text-muted">
                                        No hay √≥rdenes a√∫n
                                    </p>
                                </td>
                            </tr>
                        ) : (
                            orders.map((order) => (
                                <tr class="hover:bg-background-dark/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <input 
                                            type="checkbox" 
                                            class="order-checkbox rounded border-border-dark bg-background-dark text-primary focus:ring-primary cursor-pointer w-4 h-4"
                                            value={order.id}
                                        >
                                    </td>
                                    <td class="px-6 py-4">
                                        <div>
                                            <p class="text-white font-bold">
                                                {order.order_number}
                                            </p>
                                            <p class="text-text-muted text-xs">
                                                {order.payment_method === "yape"
                                                    ? "Yape"
                                                    : order.payment_method ===
                                                        "binance"
                                                      ? "Binance Pay"
                                                      : "Cryptomus"}
                                            </p>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div>
                                            <p class="text-white font-medium">
                                                {order.customer_name}
                                            </p>
                                            <p class="text-text-muted text-sm">
                                                {order.customer_email}
                                            </p>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-white font-bold">
                                            S/ {Number(order.total).toFixed(2)}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold ${
                                                order.payment_status ===
                                                "verified"
                                                    ? "bg-green-500/20 text-green-400"
                                                    : order.payment_status ===
                                                        "failed"
                                                      ? "bg-red-500/20 text-red-400"
                                                      : "bg-yellow-500/20 text-yellow-400"
                                            }`}
                                        >
                                            {order.payment_status === "verified"
                                                ? "Verificado"
                                                : order.payment_status ===
                                                    "failed"
                                                  ? "Fallido"
                                                  : "Pendiente"}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold ${
                                                order.status === "completed"
                                                    ? "bg-green-500/20 text-green-400"
                                                    : order.status ===
                                                        "processing"
                                                      ? "bg-blue-500/20 text-blue-400"
                                                      : order.status ===
                                                          "cancelled"
                                                        ? "bg-red-500/20 text-red-400"
                                                        : "bg-yellow-500/20 text-yellow-400"
                                            }`}
                                        >
                                            {order.status === "completed"
                                                ? "Completado"
                                                : order.status === "processing"
                                                  ? "Procesando"
                                                  : order.status === "cancelled"
                                                    ? "Cancelado"
                                                    : "Pendiente"}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-white text-sm">
                                            {new Date(order.created_at).toLocaleDateString("es-PE", { timeZone: "America/Lima" })}
                                        </p>
                                        <p class="text-text-muted text-xs">
                                            {new Date(order.created_at).toLocaleTimeString("es-PE", {
                                                timeZone: "America/Lima",
                                                hour: "2-digit",
                                                minute: "2-digit",
                                                hour12: true
                                            })}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4 text-sm font-medium">
                                        <div class="flex items-center justify-end gap-2">
                                            {(order.payment_method === "yape" ||
                                                order.payment_method ===
                                                    "binance") &&
                                                order.payment_reference && (
                                                    <button
                                                        class="view-proof-btn p-2 text-text-muted hover:text-green-500 hover:bg-green-500/10 rounded-lg transition-all"
                                                        data-order-id={order.id}
                                                        data-order-number={
                                                            order.order_number
                                                        }
                                                        data-proof-url={
                                                            order.payment_proof
                                                        }
                                                        data-reference={
                                                            order.payment_reference
                                                        }
                                                        title="Ver Comprobante"
                                                    >
                                                        <span class="material-symbols-outlined text-[20px]">
                                                            visibility
                                                        </span>
                                                    </button>
                                                )}
                                            <button
                                                class="deliver-order-btn p-2 text-text-muted hover:text-yellow-500 hover:bg-yellow-500/10 rounded-lg transition-all"
                                                data-order-id={order.id}
                                                data-order-number={order.order_number}
                                                data-items={JSON.stringify(order.items)}
                                                data-delivery-info={JSON.stringify(order.delivery_info || [])}
                                                title="Entregar Credenciales"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    key
                                                </span>
                                            </button>
                                            <button
                                                class="whatsapp-btn p-2 text-text-muted hover:text-[#25D366] hover:bg-[#25D366]/10 rounded-lg transition-all"
                                                data-order-number={
                                                    order.order_number
                                                }
                                                data-customer-name={
                                                    order.customer_name
                                                }
                                                data-customer-phone={
                                                    order.customer_phone
                                                }
                                                data-items={JSON.stringify(
                                                    order.items,
                                                )}
                                                data-delivery-info={JSON.stringify(order.delivery_info || [])}
                                                title="Enviar WhatsApp"
                                            >
                                                <svg
                                                    class="w-5 h-5 fill-current"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.937 3.659 1.435 5.711 1.435h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                                                </svg>
                                            </button>
                                            <button
                                                class="update-status-btn p-2 text-text-muted hover:text-primary hover:bg-primary/10 rounded-lg transition-all"
                                                data-order-id={order.id}
                                                data-current-status={
                                                    order.status
                                                }
                                                title="Actualizar Estado"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    edit
                                                </span>
                                            </button>
                                            <button
                                                class="delete-order-btn p-2 text-text-muted hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all"
                                                data-order-id={order.id}
                                                title="Eliminar Orden"
                                            >
                                                <span class="material-symbols-outlined text-[20px]">
                                                    delete
                                                </span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            ))
                        )
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Update Status Modal -->
    <div
        id="status-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-md w-full p-6"
        >
            <h2 class="text-white text-xl font-bold mb-4">Actualizar Estado</h2>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-white mb-2">
                        Estado de la Orden
                    </label>
                    <select
                        id="order-status"
                        class="w-full px-4 py-3 bg-background-dark border border-border-dark rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                    >
                        <option value="pending">Pendiente</option>
                        <option value="processing">Procesando</option>
                        <option value="completed">Completado</option>
                        <option value="cancelled">Cancelado</option>
                    </select>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button
                    id="cancel-update"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-update"
                    class="flex-1 px-4 py-2 bg-primary hover:bg-red-700 text-white font-bold rounded-lg transition-all"
                >
                    Actualizar
                </button>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div
        id="delete-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-sm w-full p-6 text-center"
        >
            <div
                class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4"
            >
                <span class="material-symbols-outlined text-red-500 text-3xl">
                    delete_forever
                </span>
            </div>
            <h2 class="text-white text-xl font-bold mb-2">¬øEliminar Orden?</h2>
            <p class="text-text-muted text-sm mb-6">
                Esta acci√≥n no se puede deshacer. La orden ser√° eliminada
                permanentemente.
            </p>

            <div class="flex gap-3">
                <button
                    id="cancel-delete"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-delete"
                    class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all"
                >
                    Eliminar
                </button>
            </div>
        </div>
    </div>

    <!-- Bulk Delete Confirmation Modal -->
    <div
        id="bulk-delete-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-sm w-full p-6 text-center"
        >
            <div
                class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4"
            >
                <span class="material-symbols-outlined text-red-500 text-3xl">
                    delete_sweep
                </span>
            </div>
            <h2 class="text-white text-xl font-bold mb-2">¬øEliminar Seleccionados?</h2>
            <p class="text-text-muted text-sm mb-6">
                Se eliminar√°n <span id="bulk-delete-count" class="font-bold text-white">0</span> √≥rdenes permanentemente. Esta acci√≥n no se puede deshacer.
            </p>

            <div class="flex gap-3">
                <button
                    id="cancel-bulk-delete"
                    class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-bulk-delete"
                    class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all"
                >
                    Eliminar Todo
                </button>
            </div>
        </div>
    </div>

    <!-- Delivery Modal -->
    <div
        id="delivery-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-3xl w-full p-6 max-h-[90vh] overflow-y-auto"
        >
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-white text-xl font-bold">Entregar Credenciales</h2>
                <button id="close-delivery-modal" class="text-text-muted hover:text-white">
                    <span class="material-symbols-outlined">close</span>
                </button>
            </div>

            <form id="delivery-form" class="space-y-6">
                <div id="delivery-items-container" class="space-y-6">
                    <!-- Items will be injected here -->
                </div>

                <div class="flex items-center gap-2 py-4 border-t border-border-dark">
                    <input type="checkbox" id="mark-completed" class="w-4 h-4 rounded border-border-dark bg-background-dark text-primary focus:ring-primary" checked>
                    <label for="mark-completed" class="text-sm text-text-muted">Marcar orden como Completada y Verificada</label>
                </div>

                <div class="flex gap-3">
                    <button
                        type="button"
                        id="cancel-delivery"
                        class="flex-1 px-4 py-2 bg-background-dark hover:bg-background-dark/50 text-white font-medium rounded-lg transition-all"
                    >
                        Cancelar
                    </button>
                    <button
                        type="submit"
                        id="save-delivery"
                        class="flex-1 px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white font-bold rounded-lg transition-all"
                    >
                        Guardar y Entregar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- View Proof Modal -->
    <div
        id="proof-modal"
        class="hidden fixed inset-0 bg-black/90 backdrop-blur-md z-[60] flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-2xl w-full p-6 relative"
        >
            <button
                id="close-proof-modal"
                class="absolute top-4 right-4 text-text-muted hover:text-white transition-colors"
            >
                <span class="material-symbols-outlined">close</span>
            </button>

            <h2 class="text-white text-xl font-bold mb-1">
                Comprobante de Pago
            </h2>
            <p id="proof-order-number" class="text-text-muted text-sm mb-6"></p>

            <div class="space-y-6">
                <!-- Reference Code -->
                <div
                    class="bg-background-dark p-4 rounded-lg border border-border-dark text-center"
                >
                    <p
                        class="text-text-muted text-xs uppercase tracking-widest mb-1"
                    >
                        C√≥digo de Referencia
                    </p>
                    <p
                        id="proof-reference"
                        class="text-white text-2xl font-black tracking-wider"
                    >
                    </p>
                </div>

                <!-- Screenshot Image -->
                <div class="relative group">
                    <div
                        class="absolute inset-0 bg-primary/20 blur-3xl opacity-0 group-hover:opacity-100 transition-opacity -z-10"
                    >
                    </div>
                    <img
                        id="proof-image"
                        src=""
                        alt="Screenshot de pago"
                        class="w-full max-h-[60vh] object-contain rounded-lg border border-border-dark bg-black shadow-2xl"
                    />
                </div>

                <div class="flex justify-center">
                    <a
                        id="download-proof"
                        href="#"
                        download
                        class="flex items-center gap-2 text-text-muted hover:text-white text-sm transition-colors"
                    >
                        <span class="material-symbols-outlined text-sm"
                            >download</span
                        >
                        Descargar Comprobante
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        import {
            supabase,
            updateOrderStatus,
            deleteOrder,
            deleteOrders,
        } from "../../../lib/supabase";

        const statusModal = document.getElementById("status-modal");
        const deleteModal = document.getElementById("delete-modal");
        const bulkDeleteModal = document.getElementById("bulk-delete-modal");
        const proofModal = document.getElementById("proof-modal");
        const deliveryModal = document.getElementById("delivery-modal");

        const orderStatusSelect = document.getElementById(
            "order-status",
        ) as HTMLSelectElement;

        const cancelUpdateBtn = document.getElementById(
            "cancel-update",
        ) as HTMLButtonElement;
        const confirmUpdateBtn = document.getElementById(
            "confirm-update",
        ) as HTMLButtonElement;

        const cancelDeleteBtn = document.getElementById(
            "cancel-delete",
        ) as HTMLButtonElement;
        const confirmDeleteBtn = document.getElementById(
            "confirm-delete",
        ) as HTMLButtonElement;

        const cancelBulkDeleteBtn = document.getElementById("cancel-bulk-delete");
        const confirmBulkDeleteBtn = document.getElementById("confirm-bulk-delete");
        const bulkDeleteCount = document.getElementById("bulk-delete-count");

        const closeProofBtn = document.getElementById("close-proof-modal");
        const proofImage = document.getElementById(
            "proof-image",
        ) as HTMLImageElement;
        const proofRef = document.getElementById("proof-reference");
        const proofOrderNum = document.getElementById("proof-order-number");
        const downloadProofLink = document.getElementById(
            "download-proof",
        ) as HTMLAnchorElement;

        // Delivery Modal Elements
        const closeDeliveryBtn = document.getElementById("close-delivery-modal");
        const cancelDeliveryBtn = document.getElementById("cancel-delivery");
        const deliveryForm = document.getElementById("delivery-form") as HTMLFormElement;
        const deliveryItemsContainer = document.getElementById("delivery-items-container");
        const saveDeliveryBtn = document.getElementById("save-delivery") as HTMLButtonElement;
        const markCompletedCheckbox = document.getElementById("mark-completed") as HTMLInputElement;

        let orderToUpdate: string | null = null;
        let orderToDelete: string | null = null;
        let orderToDeliver: string | null = null;

        // --- Bulk Actions Logic ---
        const selectAllCheckbox = document.getElementById("select-all") as HTMLInputElement;
        const orderCheckboxes = document.querySelectorAll(".order-checkbox") as NodeListOf<HTMLInputElement>;
        const bulkActionsBar = document.getElementById("bulk-actions");
        const selectedCountSpan = document.getElementById("selected-count");
        const bulkDeleteBtn = document.getElementById("bulk-delete-btn");

        function updateBulkUI() {
            const selected = Array.from(orderCheckboxes).filter(cb => cb.checked);
            const count = selected.length;

            if (selectedCountSpan) selectedCountSpan.textContent = count.toString();

            if (count > 0) {
                bulkActionsBar?.classList.remove("hidden");
            } else {
                bulkActionsBar?.classList.add("hidden");
            }
        }

        selectAllCheckbox?.addEventListener("change", (e) => {
            const isChecked = (e.target as HTMLInputElement).checked;
            orderCheckboxes.forEach(cb => {
                cb.checked = isChecked;
            });
            updateBulkUI();
        });

        orderCheckboxes.forEach(cb => {
            cb.addEventListener("change", () => {
                const allChecked = Array.from(orderCheckboxes).every(cb => cb.checked);
                if (selectAllCheckbox) selectAllCheckbox.checked = allChecked;
                updateBulkUI();
            });
        });

        bulkDeleteBtn?.addEventListener("click", () => {
            const selected = Array.from(orderCheckboxes).filter(cb => cb.checked);
            if (selected.length === 0) return;

            if (bulkDeleteCount) bulkDeleteCount.textContent = selected.length.toString();
            bulkDeleteModal?.classList.remove("hidden");
        });

        cancelBulkDeleteBtn?.addEventListener("click", () => {
            bulkDeleteModal?.classList.add("hidden");
        });

        confirmBulkDeleteBtn?.addEventListener("click", async () => {
            const selected = Array.from(orderCheckboxes).filter(cb => cb.checked).map(cb => cb.value);
            if (selected.length === 0) return;

            if (confirmBulkDeleteBtn) {
                confirmBulkDeleteBtn.textContent = "Eliminando...";
                (confirmBulkDeleteBtn as HTMLButtonElement).disabled = true;
            }

            const success = await deleteOrders(selected);

            if (success) {
                window.location.reload();
            } else {
                alert("Error al eliminar las √≥rdenes seleccionadas.");
                if (confirmBulkDeleteBtn) {
                    confirmBulkDeleteBtn.textContent = "Eliminar Todo";
                    (confirmBulkDeleteBtn as HTMLButtonElement).disabled = false;
                }
            }
        });

        // --- Existing Logic ---

        // Open status modal
        document.querySelectorAll(".update-status-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                const currentStatus = btn.getAttribute("data-current-status");

                if (orderId && currentStatus && orderStatusSelect) {
                    orderToUpdate = orderId;
                    orderStatusSelect.value = currentStatus;
                    statusModal?.classList.remove("hidden");
                }
            });
        });

        // Open delete modal
        document.querySelectorAll(".delete-order-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                if (orderId) {
                    orderToDelete = orderId;
                    deleteModal?.classList.remove("hidden");
                }
            });
        });

        // Open Delivery Modal
        document.querySelectorAll(".deliver-order-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                const itemsRaw = btn.getAttribute("data-items");
                const deliveryInfoRaw = btn.getAttribute("data-delivery-info");

                if (orderId && itemsRaw && deliveryItemsContainer) {
                    orderToDeliver = orderId;
                    const items = JSON.parse(itemsRaw);
                    const existingInfo = JSON.parse(deliveryInfoRaw || "[]");

                    deliveryItemsContainer.innerHTML = items.map((item: any, index: number) => {
                        // Try to find existing data for this item (by product_id or just index)
                        const saved = existingInfo.find((d: any) => d.product_id === item.id) || {};
                        const defaultRules = "‚ùå No usar en 2 dispositivos.\n‚ùå No prestar su cuenta.\n‚ùå No cambiar contrase√±a.\n‚ùå No cambiar el perfil.";

                        return `
                            <div class="p-4 bg-background-dark border border-border-dark rounded-lg">
                                <div class="flex items-center gap-3 mb-4">
                                    <img src="${item.image}" class="w-10 h-10 rounded object-cover">
                                    <div>
                                        <h3 class="text-white font-bold text-sm">${item.title}</h3>
                                        <p class="text-text-muted text-xs">Cantidad: ${item.quantity}</p>
                                    </div>
                                </div>
                                <input type="hidden" name="items[${index}][product_id]" value="${item.id}">
                                <input type="hidden" name="items[${index}][title]" value="${item.title}">
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">Correo / Usuario</label>
                                        <input type="text" name="items[${index}][account_email]" value="${saved.account_email || ''}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">
                                    </div>
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">Contrase√±a</label>
                                        <input type="text" name="items[${index}][account_password]" value="${saved.account_password || ''}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">
                                    </div>
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">PIN / Perfil</label>
                                        <input type="text" name="items[${index}][pin]" value="${saved.pin || ''}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm" placeholder="Ej: 5532 (Perfil 3)">
                                    </div>
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">Vencimiento</label>
                                        <input type="date" name="items[${index}][expiration_date]" value="${saved.expiration_date || ''}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">
                                    </div>
                                    <div class="md:col-span-2">
                                        <label class="block text-xs text-text-muted mb-1">Imagen (URL)</label>
                                        <input type="text" name="items[${index}][image_url]" value="${saved.image_url || ''}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm" placeholder="https://...">
                                    </div>
                                    <div class="md:col-span-2">
                                        <label class="block text-xs text-text-muted mb-1">Reglas de Uso</label>
                                        <textarea name="items[${index}][instructions]" rows="3" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">${saved.instructions || defaultRules}</textarea>
                                    </div>
                                </div>
                            </div>
                        `;
                    }).join("");

                    deliveryModal?.classList.remove("hidden");
                }
            });
        });

        // Handle Delivery Form Submit
        deliveryForm?.addEventListener("submit", async (e) => {
            e.preventDefault();
            if (!orderToDeliver) return;

            saveDeliveryBtn.disabled = true;
            saveDeliveryBtn.innerHTML = "Guardando...";

            // Collect Data manually because FormData with arrays is tricky
            const formData = new FormData(deliveryForm);
            const items = [];
            const itemsContainer = document.getElementById("delivery-items-container");
            const itemDivs = itemsContainer?.children;

            if (itemDivs) {
                for (let i = 0; i < itemDivs.length; i++) {
                    items.push({
                        product_id: formData.get(`items[${i}][product_id]`),
                        title: formData.get(`items[${i}][title]`),
                        account_email: formData.get(`items[${i}][account_email]`),
                        account_password: formData.get(`items[${i}][account_password]`),
                        pin: formData.get(`items[${i}][pin]`),
                        expiration_date: formData.get(`items[${i}][expiration_date]`),
                        image_url: formData.get(`items[${i}][image_url]`),
                        instructions: formData.get(`items[${i}][instructions]`),
                    });
                }
            }

            try {
                const session = await supabase.auth.getSession();
                const response = await fetch("/api/admin/orders/deliver", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        Authorization: `Bearer ${session.data.session?.access_token}`,
                    },
                    body: JSON.stringify({
                        orderId: orderToDeliver,
                        deliveryInfo: items,
                        updateStatus: markCompletedCheckbox?.checked
                    }),
                });

                if (response.ok) {
                    alert("Credenciales guardadas correctamente.");
                    window.location.reload();
                } else {
                    throw new Error("Error al guardar credenciales");
                }
            } catch (error: any) {
                alert(error.message);
                saveDeliveryBtn.disabled = false;
                saveDeliveryBtn.innerHTML = "Guardar y Entregar";
            }
        });

        // Close Delivery Modal
        const closeDelivery = () => {
            deliveryModal?.classList.add("hidden");
            orderToDeliver = null;
        }
        closeDeliveryBtn?.addEventListener("click", closeDelivery);
        cancelDeliveryBtn?.addEventListener("click", closeDelivery);


        // Open proof modal
        document.querySelectorAll(".view-proof-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const url = btn.getAttribute("data-proof-url");
                const ref = btn.getAttribute("data-reference");
                const num = btn.getAttribute("data-order-number");

                if (
                    proofImage &&
                    proofRef &&
                    proofOrderNum &&
                    downloadProofLink
                ) {
                    proofImage.src = url || "";
                    proofRef.textContent = ref || "N/A";
                    proofOrderNum.textContent = `Orden: ${num}`;
                    downloadProofLink.href = url || "#";
                    proofModal?.classList.remove("hidden");
                    document.body.style.overflow = "hidden";
                }
            });
        });

        // WhatsApp Notification
        document.querySelectorAll(".whatsapp-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const num = btn.getAttribute("data-order-number");
                const name = btn.getAttribute("data-customer-name");
                const phone = btn.getAttribute("data-customer-phone");
                const itemsRaw = btn.getAttribute("data-items");
                const deliveryInfoRaw = btn.getAttribute("data-delivery-info");

                let message = "";
                const deliveryInfo = JSON.parse(deliveryInfoRaw || "[]");

                // Check if we have delivery info to format the special message
                if (deliveryInfo.length > 0) {
                    // Create formatted message for delivered items
                    const formattedItems = deliveryInfo.map((info: any) => {
                        const date = info.expiration_date ? new Date(info.expiration_date).toLocaleDateString('es-PE') : 'N/A';
                        
                        return `‚≠ï *${info.title.toUpperCase()}* ‚≠ï\n\nüìß *Correo:* ${info.account_email}\nüîë *Contrase√±a:* ${info.account_password}\n\n${info.pin ? `üîí *PIN/Perfil:* ${info.pin}\n` : ''}\n‚ö†Ô∏è *Reglas de uso* ‚ö†Ô∏è\n${info.instructions}\n\nüóìÔ∏è *Vencimiento:* ${date}`;
                    }).join("\n\n------------------\n\n");

                    message = `¬°Hola ${name}! üëã\nAqu√≠ tienes tu pedido *#${num}*:\n\n${formattedItems}\n\n¬°Gracias por tu compra! ‚ú®`;

                } else {
                    // Fallback to standard message
                    let productList = "";
                    try {
                        const items = JSON.parse(itemsRaw || "[]");
                        productList = items
                            .map((i: any) => `- ${i.title} (x${i.quantity})`)
                            .join("\n");
                    } catch (e) {
                        productList = "Productos de tu orden";
                    }
                    message = `¬°Hola ${name}! üõçÔ∏è\n\nHemos verificado tu pago satisfactoriamente.\n\n‚úÖ *Orden:* #${num}\nüì¶ *Productos:*\n${productList}\n\nYa puedes acceder a tus productos desde la secci√≥n *'Mi Cuenta'* en nuestra web.\n\n¬°Gracias por tu confianza! ‚ú®`;
                }

                // Copy to clipboard
                navigator.clipboard.writeText(message).then(() => {
                    const originalTitle = btn.getAttribute("title");
                    btn.setAttribute("title", "¬°Copiado!");
                    setTimeout(
                        () => btn.setAttribute("title", originalTitle || ""),
                        2000,
                    );

                    // Open WhatsApp
                    const cleanPhone = phone?.replace(/\D/g, "");
                    if (cleanPhone) {
                        const url = `https://wa.me/${cleanPhone}?text=${encodeURIComponent(message)}`;
                        window.open(url, "_blank");
                    } else {
                        alert(
                            "El cliente no tiene un n√∫mero de tel√©fono v√°lido registrado.",
                        );
                    }
                });
            });
        });

        // Close proof modal
        closeProofBtn?.addEventListener("click", () => {
            proofModal?.classList.add("hidden");
            document.body.style.overflow = "auto";
        });

        // Cancel update
        cancelUpdateBtn?.addEventListener("click", () => {
            statusModal?.classList.add("hidden");
            orderToUpdate = null;
        });

        // Cancel delete
        cancelDeleteBtn?.addEventListener("click", () => {
            deleteModal?.classList.add("hidden");
            orderToDelete = null;
        });

        // Confirm update
        confirmUpdateBtn?.addEventListener("click", async () => {
            if (!orderToUpdate || !orderStatusSelect) return;

            confirmUpdateBtn.disabled = true;
            confirmUpdateBtn.textContent = "Actualizando...";

            try {
                const session = await supabase.auth.getSession();
                const response = await fetch(
                    "/api/admin/orders/update-status",
                    {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${session.data.session?.access_token}`,
                        },
                        body: JSON.stringify({
                            orderId: orderToUpdate,
                            status: orderStatusSelect.value,
                            // If we set to completed, we usually assume payment is verified
                            paymentStatus:
                                orderStatusSelect.value === "completed"
                                    ? "verified"
                                    : undefined,
                        }),
                    },
                );

                if (response.ok) {
                    // Show a quick success alert before reloading
                    alert(
                        "Estado actualizado y cliente notificado (v√≠a Email/Web).",
                    );
                    window.location.reload();
                } else {
                    const data = await response.json();
                    throw new Error(data.error || "Error al actualizar");
                }
            } catch (error: any) {
                alert(error.message);
                confirmUpdateBtn.disabled = false;
                confirmUpdateBtn.textContent = "Actualizar";
            }
        });

        // Confirm delete
        confirmDeleteBtn?.addEventListener("click", async () => {
            if (!orderToDelete) return;

            confirmDeleteBtn.disabled = true;
            confirmDeleteBtn.textContent = "Eliminando...";

            const success = await deleteOrder(orderToDelete);

            if (success) {
                window.location.reload();
            } else {
                alert("Error al eliminar la orden");
                confirmDeleteBtn.disabled = false;
                confirmDeleteBtn.textContent = "Eliminar";
            }
        });

        // Close modals on backdrop click
        window.addEventListener("click", (e) => {
            if (e.target === statusModal) {
                statusModal?.classList.add("hidden");
                orderToUpdate = null;
            }
            if (e.target === deleteModal) {
                deleteModal?.classList.add("hidden");
                orderToDelete = null;
            }
            if (e.target === bulkDeleteModal) {
                bulkDeleteModal?.classList.add("hidden");
            }
            if (e.target === proofModal) {
                proofModal?.classList.add("hidden");
                document.body.style.overflow = "auto";
            }
            if (e.target === deliveryModal) {
                deliveryModal?.classList.add("hidden");
                orderToDeliver = null;
            }
        });
    </script>
</AdminLayout>
