    <script>
        import { supabase, updateOrderStatus } from "../../../lib/supabase";

        // Toast Elements
        const toast = document.getElementById("toast");
        const toastTitle = document.getElementById("toast-title");
        const toastMessage = document.getElementById("toast-message");
        const toastIcon = document.getElementById("toast-icon");
        const toastIconContainer = document.getElementById(
            "toast-icon-container",
        );
        const closeToastBtn = document.getElementById("close-toast");
        let toastTimeout: any;

        function showToast(
            message: string,
            type: "success" | "error" = "success",
        ) {
            if (
                !toast ||
                !toastTitle ||
                !toastMessage ||
                !toastIcon ||
                !toastIconContainer
            )
                return;

            // Set content
            toastMessage.textContent = message;
            toastTitle.textContent = type === "success" ? "Éxito" : "Error";

            // Set styles based on type
            if (type === "success") {
                toastIcon.textContent = "check_circle";
                toastIcon.classList.remove("text-red-500");
                toastIcon.classList.add("text-green-500");
                toastIconContainer.classList.remove("bg-red-500/20");
                toastIconContainer.classList.add("bg-green-500/20");
            } else {
                toastIcon.textContent = "error";
                toastIcon.classList.remove("text-green-500");
                toastIcon.classList.add("text-red-500");
                toastIconContainer.classList.remove("bg-green-500/20");
                toastIconContainer.classList.add("bg-red-500/20");
            }

            // Show toast
            toast.classList.remove("translate-x-[150%]", "opacity-0");

            // Hide after 3 seconds
            clearTimeout(toastTimeout);
            toastTimeout = setTimeout(() => {
                hideToast();
            }, 3000);
        }

        function hideToast() {
            toast?.classList.add("translate-x-[150%]", "opacity-0");
        }

        closeToastBtn?.addEventListener("click", hideToast);

        const statusModal = document.getElementById("status-modal");
        const deleteModal = document.getElementById("delete-modal");
        const bulkDeleteModal = document.getElementById("bulk-delete-modal");
        const proofModal = document.getElementById("proof-modal");
        const deliveryModal = document.getElementById("delivery-modal");

        const orderStatusSelect = document.getElementById(
            "order-status",
        ) as HTMLSelectElement;

        const orderPaymentMethodSelect = document.getElementById(
            "order-payment-method",
        ) as HTMLSelectElement;

        const cancelUpdateBtn = document.getElementById(
            "cancel-update",
        ) as HTMLButtonElement;
        const confirmUpdateBtn = document.getElementById(
            "confirm-update",
        ) as HTMLButtonElement;

        const cancelDeleteBtn = document.getElementById(
            "cancel-delete",
        ) as HTMLButtonElement;
        const confirmDeleteBtn = document.getElementById(
            "confirm-delete",
        ) as HTMLButtonElement;

        const cancelBulkDeleteBtn =
            document.getElementById("cancel-bulk-delete");
        const confirmBulkDeleteBtn = document.getElementById(
            "confirm-bulk-delete",
        );
        const bulkDeleteCount = document.getElementById("bulk-delete-count");

        const closeProofBtn = document.getElementById("close-proof-modal");
        const proofImage = document.getElementById(
            "proof-image",
        ) as HTMLImageElement;
        const proofRef = document.getElementById("proof-reference");
        const proofOrderNum = document.getElementById("proof-order-number");
        const downloadProofLink = document.getElementById(
            "download-proof",
        ) as HTMLAnchorElement;

        // Delivery Modal Elements
        const closeDeliveryBtn = document.getElementById(
            "close-delivery-modal",
        );
        const cancelDeliveryBtn = document.getElementById("cancel-delivery");
        const deliveryForm = document.getElementById(
            "delivery-form",
        ) as HTMLFormElement;
        const deliveryItemsContainer = document.getElementById(
            "delivery-items-container",
        );
        const saveDeliveryBtn = document.getElementById(
            "save-delivery",
        ) as HTMLButtonElement;
        const markCompletedCheckbox = document.getElementById(
            "mark-completed",
        ) as HTMLInputElement;

        let orderToUpdate: string | null = null;
        let orderToDelete: string | null = null;
        let orderToDeliver: string | null = null;
        let orderToTransfer: string | null = null;

        // --- Bulk Actions Logic ---
        const selectAllCheckbox = document.getElementById(
            "select-all",
        ) as HTMLInputElement;
        const orderCheckboxes = document.querySelectorAll(
            ".order-checkbox",
        ) as NodeListOf<HTMLInputElement>;
        const bulkActionsBar = document.getElementById("bulk-actions");
        const selectedCountSpan = document.getElementById("selected-count");
        const bulkDeleteBtn = document.getElementById("bulk-delete-btn");

        function updateBulkUI() {
            const selected = Array.from(orderCheckboxes).filter(
                (cb) => cb.checked,
            );
            const count = selected.length;

            if (selectedCountSpan)
                selectedCountSpan.textContent = count.toString();

            if (count > 0) {
                bulkActionsBar?.classList.remove("hidden");
            } else {
                bulkActionsBar?.classList.add("hidden");
            }
        }

        selectAllCheckbox?.addEventListener("change", (e) => {
            const isChecked = (e.target as HTMLInputElement).checked;
            orderCheckboxes.forEach((cb) => {
                cb.checked = isChecked;
            });
            updateBulkUI();
        });

        orderCheckboxes.forEach((cb) => {
            cb.addEventListener("change", () => {
                const allChecked = Array.from(orderCheckboxes).every(
                    (cb) => cb.checked,
                );
                if (selectAllCheckbox) selectAllCheckbox.checked = allChecked;
                updateBulkUI();
            });
        });

        bulkDeleteBtn?.addEventListener("click", () => {
            const selected = Array.from(orderCheckboxes).filter(
                (cb) => cb.checked,
            );
            if (selected.length === 0) return;

            if (bulkDeleteCount)
                bulkDeleteCount.textContent = selected.length.toString();
            bulkDeleteModal?.classList.remove("hidden");
        });

        cancelBulkDeleteBtn?.addEventListener("click", () => {
            bulkDeleteModal?.classList.add("hidden");
        });

        confirmBulkDeleteBtn?.addEventListener("click", async () => {
            const selected = Array.from(orderCheckboxes)
                .filter((cb) => cb.checked)
                .map((cb) => cb.value);
            if (selected.length === 0) return;

            if (confirmBulkDeleteBtn) {
                confirmBulkDeleteBtn.textContent = "Eliminando...";
                (confirmBulkDeleteBtn as HTMLButtonElement).disabled = true;
            }

            const success = await deleteOrders(selected);

            async function deleteOrders(ids: string[]) {
                try {
                    const session = await supabase.auth.getSession();
                    const res = await fetch("/api/admin/orders/delete", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${session.data.session?.access_token}`,
                        },
                        body: JSON.stringify({ orderIds: ids }),
                    });
                    return res.ok;
                } catch {
                    return false;
                }
            }

            if (success) {
                window.location.reload();
            } else {
                alert("Error al eliminar las órdenes seleccionadas.");
                if (confirmBulkDeleteBtn) {
                    confirmBulkDeleteBtn.textContent = "Eliminar Todo";
                    (confirmBulkDeleteBtn as HTMLButtonElement).disabled =
                        false;
                }
            }
        });

        // --- Existing Logic ---

        // Open status modal
        document.querySelectorAll(".update-status-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                const currentStatus = btn.getAttribute("data-current-status");
                const currentPaymentMethod = btn.getAttribute(
                    "data-payment-method",
                );

                if (orderId && currentStatus && orderStatusSelect) {
                    orderToUpdate = orderId;
                    orderStatusSelect.value = currentStatus;
                    if (orderPaymentMethodSelect && currentPaymentMethod) {
                        orderPaymentMethodSelect.value = currentPaymentMethod;
                    }
                    statusModal?.classList.remove("hidden");
                }
            });
        });

        // Open delete modal
        document.querySelectorAll(".delete-order-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                if (orderId) {
                    orderToDelete = orderId;
                    deleteModal?.classList.remove("hidden");
                }
            });
        });

        // Open Delivery Modal
        const clearCredentialsBtn = document.getElementById(
            "clear-credentials-btn",
        );
        const clearCredentialsConfirm = document.getElementById(
            "clear-credentials-confirm",
        );
        const confirmClearBtn = document.getElementById(
            "confirm-clear-credentials",
        );
        const cancelClearBtn = document.getElementById(
            "cancel-clear-credentials",
        );

        document.querySelectorAll(".deliver-order-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                const itemsRaw = btn.getAttribute("data-items");
                const deliveryInfoRaw = btn.getAttribute("data-delivery-info");

                if (orderId && itemsRaw && deliveryItemsContainer) {
                    orderToDeliver = orderId;
                    const items = JSON.parse(itemsRaw);
                    const existingInfo = JSON.parse(deliveryInfoRaw || "[]");

                    // Show/hide 'Limpiar Credenciales' button based on whether info exists
                    const hasExistingInfo =
                        existingInfo.length > 0 &&
                        existingInfo.some(
                            (d: any) => d.account_email || d.account_password,
                        );
                    if (clearCredentialsBtn) {
                        if (hasExistingInfo) {
                            clearCredentialsBtn.classList.remove("hidden");
                            clearCredentialsBtn.classList.add("flex");
                        } else {
                            clearCredentialsBtn.classList.add("hidden");
                            clearCredentialsBtn.classList.remove("flex");
                        }
                    }
                    // Hide confirm panel if it was left open
                    clearCredentialsConfirm?.classList.add("hidden");

                    deliveryItemsContainer.innerHTML = items
                        .map((item: any, index: number) => {
                            // Try to find existing data for this item (by product_id or just index)
                            const saved =
                                existingInfo.find(
                                    (d: any) => d.product_id === item.id,
                                ) || {};
                            const defaultRules =
                                "❌ No usar en 2 dispositivos.\n❌ No prestar su cuenta.\n❌ No cambiar contraseña.\n❌ No cambiar el perfil.";

                            return `
                            <div class="p-4 bg-background-dark border border-border-dark rounded-lg">
                                <div class="flex items-center gap-3 mb-4">
                                    <img src="${item.image}" class="w-10 h-10 rounded object-cover">
                                    <div>
                                        <h3 class="text-white font-bold text-sm">${item.title}</h3>
                                        <p class="text-text-muted text-xs">Cantidad: ${item.quantity}</p>
                                    </div>
                                </div>
                                <input type="hidden" name="items[${index}][product_id]" value="${item.id}">
                                <input type="hidden" name="items[${index}][title]" value="${item.title}">
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">Correo / Usuario</label>
                                        <input type="text" name="items[${index}][account_email]" value="${saved.account_email || ""}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">
                                    </div>
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">Contraseña</label>
                                        <input type="text" name="items[${index}][account_password]" value="${saved.account_password || ""}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">
                                    </div>
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">PIN / Perfil</label>
                                        <input type="text" name="items[${index}][pin]" value="${saved.pin || ""}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm" placeholder="Ej: 5532 (Perfil 3)">
                                    </div>
                                    <div>
                                        <label class="block text-xs text-text-muted mb-1">Vencimiento</label>
                                        <input type="date" name="items[${index}][expiration_date]" value="${saved.expiration_date || ""}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">
                                    </div>
                                    <div class="md:col-span-2">
                                        <label class="block text-xs text-text-muted mb-1">Imagen (URL o Pegar Imagen)</label>
                                        <div class="relative">
                                            <input type="text" name="items[${index}][image_url]" value="${saved.image_url || ""}" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm pr-10 image-input" placeholder="https://... o Ctrl+V para pegar imagen">
                                            <div class="absolute right-3 top-1/2 -translate-y-1/2">
                                                <span class="material-symbols-outlined text-text-muted text-lg pointer-events-none">image</span>
                                            </div>
                                            <!-- Upload Status -->
                                            <div class="upload-status hidden absolute -bottom-5 left-0 text-[10px] text-yellow-500">Subiendo imagen...</div>
                                        </div>
                                    </div>
                                    <div class="md:col-span-2">
                                        <label class="block text-xs text-text-muted mb-1">Reglas de Uso</label>
                                        <textarea name="items[${index}][instructions]" rows="3" class="w-full bg-black/50 border border-border-dark rounded px-3 py-2 text-white text-sm">${saved.instructions || defaultRules}</textarea>
                                    </div>
                                </div>
                            </div>
                        `;
                        })
                        .join("");

                    deliveryModal?.classList.remove("hidden");

                    // Attach Paste Events for Images
                    document
                        .querySelectorAll(".image-input")
                        .forEach((input: any) => {
                            input.addEventListener(
                                "paste",
                                async (e: ClipboardEvent) => {
                                    const items = e.clipboardData?.items;
                                    if (!items) return;

                                    for (const item of items) {
                                        if (item.type.indexOf("image") === 0) {
                                            e.preventDefault();
                                            const blob = item.getAsFile();

                                            // Show status
                                            const container =
                                                input.parentElement;
                                            const statusEl =
                                                container.querySelector(
                                                    ".upload-status",
                                                );
                                            if (statusEl)
                                                statusEl.classList.remove(
                                                    "hidden",
                                                );
                                            input.disabled = true;

                                            try {
                                                const formData = new FormData();
                                                formData.append("file", blob!);
                                                formData.append(
                                                    "upload_preset",
                                                    "digitalstore_products",
                                                ); // Using existing preset

                                                const res = await fetch(
                                                    `https://api.cloudinary.com/v1_1/${import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME}/image/upload`,
                                                    {
                                                        method: "POST",
                                                        body: formData,
                                                    },
                                                );

                                                const data = await res.json();
                                                if (data.secure_url) {
                                                    input.value =
                                                        data.secure_url;
                                                    if (statusEl) {
                                                        statusEl.textContent =
                                                            "✅ Imagen subida correctamente";
                                                        statusEl.classList.remove(
                                                            "text-yellow-500",
                                                        );
                                                        statusEl.classList.add(
                                                            "text-green-500",
                                                        );
                                                    }
                                                } else {
                                                    throw new Error(
                                                        "Error subiendo imagen",
                                                    );
                                                }
                                            } catch (err) {
                                                console.error(err);
                                                if (statusEl) {
                                                    statusEl.textContent =
                                                        "❌ Error al subir imagen";
                                                    statusEl.classList.remove(
                                                        "text-yellow-500",
                                                    );
                                                    statusEl.classList.add(
                                                        "text-red-500",
                                                    );
                                                }
                                            } finally {
                                                input.disabled = false;
                                            }
                                        }
                                    }
                                },
                            );
                        });
                }
            });
        });

        // Handle Delivery Form Submit
        deliveryForm?.addEventListener("submit", async (e) => {
            e.preventDefault();
            if (!orderToDeliver) return;

            saveDeliveryBtn.disabled = true;
            saveDeliveryBtn.innerHTML = "Guardando...";

            // Collect Data manually because FormData with arrays is tricky
            const formData = new FormData(deliveryForm);
            const items = [];
            const itemsContainer = document.getElementById(
                "delivery-items-container",
            );
            const itemDivs = itemsContainer?.children;

            if (itemDivs) {
                for (let i = 0; i < itemDivs.length; i++) {
                    items.push({
                        product_id: formData.get(`items[${i}][product_id]`),
                        title: formData.get(`items[${i}][title]`),
                        account_email: formData.get(
                            `items[${i}][account_email]`,
                        ),
                        account_password: formData.get(
                            `items[${i}][account_password]`,
                        ),
                        pin: formData.get(`items[${i}][pin]`),
                        expiration_date: formData.get(
                            `items[${i}][expiration_date]`,
                        ),
                        image_url: formData.get(`items[${i}][image_url]`),
                        instructions: formData.get(`items[${i}][instructions]`),
                    });
                }
            }

            try {
                const session = await supabase.auth.getSession();
                const response = await fetch("/api/admin/orders/deliver", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        Authorization: `Bearer ${session.data.session?.access_token}`,
                    },
                    body: JSON.stringify({
                        orderId: orderToDeliver,
                        deliveryInfo: items,
                        updateStatus: markCompletedCheckbox?.checked,
                    }),
                });

                if (response.ok) {
                    showToast("Credenciales guardadas correctamente.");
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    throw new Error("Error al guardar credenciales");
                }
            } catch (error: any) {
                showToast(error.message, "error");
                saveDeliveryBtn.disabled = false;
                saveDeliveryBtn.innerHTML = "Guardar y Entregar";
            }
        });

        // Close Delivery Modal
        const closeDelivery = () => {
            deliveryModal?.classList.add("hidden");
            orderToDeliver = null;
            clearCredentialsConfirm?.classList.add("hidden");
            clearCredentialsBtn?.classList.add("hidden");
            clearCredentialsBtn?.classList.remove("flex");
        };
        closeDeliveryBtn?.addEventListener("click", closeDelivery);
        cancelDeliveryBtn?.addEventListener("click", closeDelivery);

        // Clear credentials logic
        clearCredentialsBtn?.addEventListener("click", () => {
            clearCredentialsConfirm?.classList.remove("hidden");
        });

        cancelClearBtn?.addEventListener("click", () => {
            clearCredentialsConfirm?.classList.add("hidden");
        });

        confirmClearBtn?.addEventListener("click", async () => {
            if (!orderToDeliver) return;

            const originalHTML = confirmClearBtn.innerHTML;
            (confirmClearBtn as HTMLButtonElement).disabled = true;
            confirmClearBtn.innerHTML = `<span class="material-symbols-outlined text-[14px]">progress_activity</span> Limpiando...`;

            try {
                const session = await supabase.auth.getSession();
                const response = await fetch("/api/admin/orders/deliver", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        Authorization: `Bearer ${session.data.session?.access_token}`,
                    },
                    body: JSON.stringify({
                        orderId: orderToDeliver,
                        deliveryInfo: null,
                        updateStatus: false,
                    }),
                });

                if (response.ok) {
                    closeDelivery();
                    showToast(
                        "Credenciales eliminadas correctamente. El cliente ya no las verá.",
                    );
                } else {
                    throw new Error("Error al limpiar credenciales");
                }
            } catch (error: any) {
                showToast(error.message, "error");
                (confirmClearBtn as HTMLButtonElement).disabled = false;
                confirmClearBtn.innerHTML = originalHTML;
            }
        });

        // Open proof modal
        document.querySelectorAll(".view-proof-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const url = btn.getAttribute("data-proof-url");
                const ref = btn.getAttribute("data-reference");
                const num = btn.getAttribute("data-order-number");

                if (
                    proofImage &&
                    proofRef &&
                    proofOrderNum &&
                    downloadProofLink
                ) {
                    proofImage.src = url || "";
                    proofRef.textContent = ref || "N/A";
                    proofOrderNum.textContent = `Orden: ${num}`;
                    downloadProofLink.href = url || "#";
                    proofModal?.classList.remove("hidden");
                    document.body.style.overflow = "hidden";
                }
            });
        });

        // WhatsApp Notification
        document.querySelectorAll(".whatsapp-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const num = btn.getAttribute("data-order-number");
                const name = btn.getAttribute("data-customer-name");
                const phone = btn.getAttribute("data-customer-phone");
                const itemsRaw = btn.getAttribute("data-items");
                const deliveryInfoRaw = btn.getAttribute("data-delivery-info");

                let message = "";
                const deliveryInfo = JSON.parse(deliveryInfoRaw || "[]");

                // Check if we have delivery info to format the special message
                if (deliveryInfo.length > 0) {
                    // Create formatted message for delivered items
                    const formattedItems = deliveryInfo
                        .map((info: any) => {
                            const date = info.expiration_date
                                ? (() => {
                                      const [y, m, d] =
                                          info.expiration_date.split("-");
                                      return `${d}/${m}/${y}`;
                                  })()
                                : "N/A";

                            return `⭕ *${info.title.toUpperCase()}* ⭕\n\n📧 *Correo:* ${info.account_email}\n🔑 *Contraseña:* ${info.account_password}\n\n${info.pin ? `🔒 *PIN/Perfil:* ${info.pin}\n` : ""}\n⚠️ *Reglas de uso* ⚠️\n${info.instructions}\n\n🗓️ *Vencimiento:* ${date}`;
                        })
                        .join("\n\n------------------\n\n");

                    message = `¡Hola ${name}! 👋\nAquí tienes tu pedido *#${num}*:\n\n${formattedItems}\n\n¡Gracias por tu compra! ✨`;
                } else {
                    // Fallback to standard message
                    let productList = "";
                    try {
                        const items = JSON.parse(itemsRaw || "[]");
                        productList = items
                            .map((i: any) => `- ${i.title} (x${i.quantity})`)
                            .join("\n");
                    } catch (e) {
                        productList = "Productos de tu orden";
                    }
                    message = `¡Hola ${name}! 🛍️\n\nHemos verificado tu pago satisfactoriamente.\n\n✅ *Orden:* #${num}\n📦 *Productos:*\n${productList}\n\nYa puedes acceder a tus productos desde la sección *'Mi Cuenta'* en nuestra web.\n\n¡Gracias por tu confianza! ✨`;
                }

                // Copy to clipboard
                navigator.clipboard.writeText(message).then(() => {
                    const originalTitle = btn.getAttribute("title");
                    btn.setAttribute("title", "¡Copiado!");
                    setTimeout(
                        () => btn.setAttribute("title", originalTitle || ""),
                        2000,
                    );

                    // Open WhatsApp
                    const cleanPhone = phone?.replace(/\D/g, "");
                    if (cleanPhone) {
                        const url = `https://wa.me/${cleanPhone}?text=${encodeURIComponent(message)}`;
                        window.open(url, "_blank");
                    } else {
                        alert(
                            "El cliente no tiene un número de teléfono válido registrado.",
                        );
                    }
                });
            });
        });

        // Close proof modal
        closeProofBtn?.addEventListener("click", () => {
            proofModal?.classList.add("hidden");
            document.body.style.overflow = "auto";
        });

        // Cancel update
        cancelUpdateBtn?.addEventListener("click", () => {
            statusModal?.classList.add("hidden");
            orderToUpdate = null;
        });

        // Cancel delete
        cancelDeleteBtn?.addEventListener("click", () => {
            deleteModal?.classList.add("hidden");
            orderToDelete = null;
        });

        // Confirm update
        confirmUpdateBtn?.addEventListener("click", async () => {
            if (!orderToUpdate || !orderStatusSelect) return;

            confirmUpdateBtn.disabled = true;
            confirmUpdateBtn.textContent = "Actualizando...";

            try {
                const session = await supabase.auth.getSession();
                const response = await fetch(
                    "/api/admin/orders/update-status",
                    {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${session.data.session?.access_token}`,
                        },
                        body: JSON.stringify({
                            orderId: orderToUpdate,
                            status: orderStatusSelect.value,
                            paymentMethod: orderPaymentMethodSelect?.value,
                            // If we set to completed, we usually assume payment is verified
                            paymentStatus:
                                orderStatusSelect.value === "completed"
                                    ? "verified"
                                    : undefined,
                        }),
                    },
                );

                if (response.ok) {
                    // Show a quick success alert before reloading
                    showToast(
                        "Estado actualizado y cliente notificado (vía Email/Web).",
                    );
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    const data = await response.json();
                    throw new Error(data.error || "Error al actualizar");
                }
            } catch (error: any) {
                showToast(error.message, "error");
                confirmUpdateBtn.disabled = false;
                confirmUpdateBtn.textContent = "Actualizar";
            }
        });

        // Confirm delete
        confirmDeleteBtn?.addEventListener("click", async () => {
            if (!orderToDelete) return;

            confirmDeleteBtn.disabled = true;
            confirmDeleteBtn.textContent = "Eliminando...";

            async function deleteOrder(id: string) {
                try {
                    const session = await supabase.auth.getSession();
                    const res = await fetch("/api/admin/orders/delete", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${session.data.session?.access_token}`,
                        },
                        body: JSON.stringify({ orderIds: [id] }),
                    });
                    return res.ok;
                } catch {
                    return false;
                }
            }

            const success = await deleteOrder(orderToDelete);

            if (success) {
                window.location.reload();
            } else {
                alert("Error al eliminar la orden");
                confirmDeleteBtn.disabled = false;
                confirmDeleteBtn.textContent = "Eliminar";
            }
        });

        // --- Transfer Order Logic ---
        const transferModal = document.getElementById("transfer-modal");
        const transferEmailInput = document.getElementById(
            "transfer-email-input",
        ) as HTMLInputElement;
        const transferOrderLabel = document.getElementById(
            "transfer-order-label",
        );
        const transferError = document.getElementById("transfer-error");
        const transferErrorMsg = document.getElementById("transfer-error-msg");
        const cancelTransferBtn = document.getElementById("cancel-transfer");
        const confirmTransferBtn = document.getElementById(
            "confirm-transfer",
        ) as HTMLButtonElement;

        document.querySelectorAll(".transfer-order-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const orderId = btn.getAttribute("data-order-id");
                const orderNum = btn.getAttribute("data-order-number");
                const customerName = btn.getAttribute("data-customer-name");
                if (orderId) {
                    orderToTransfer = orderId;
                    if (transferOrderLabel)
                        transferOrderLabel.textContent = `Orden ${orderNum} · ${customerName}`;
                    if (transferEmailInput) transferEmailInput.value = "";
                    if (transferError) transferError.classList.add("hidden");
                    transferModal?.classList.remove("hidden");
                    setTimeout(() => transferEmailInput?.focus(), 100);
                }
            });
        });

        const closeTransferModal = () => {
            transferModal?.classList.add("hidden");
            orderToTransfer = null;
        };
        cancelTransferBtn?.addEventListener("click", closeTransferModal);

        confirmTransferBtn?.addEventListener("click", async () => {
            if (!orderToTransfer) return;
            const email = transferEmailInput?.value.trim();
            if (!email) {
                if (transferError) transferError.classList.remove("hidden");
                if (transferErrorMsg)
                    transferErrorMsg.textContent =
                        "Por favor ingresa el email del usuario destino.";
                return;
            }

            const originalHTML = confirmTransferBtn.innerHTML;
            confirmTransferBtn.disabled = true;
            confirmTransferBtn.innerHTML = `<span class="material-symbols-outlined text-[18px] animate-spin">progress_activity</span> Transfiriendo...`;
            if (transferError) transferError.classList.add("hidden");

            try {
                const session = await supabase.auth.getSession();
                const response = await fetch("/api/admin/orders/transfer", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        Authorization: `Bearer ${session.data.session?.access_token}`,
                    },
                    body: JSON.stringify({
                        orderId: orderToTransfer,
                        targetEmail: email,
                    }),
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(
                        data.error || "Error al transferir la orden",
                    );
                }

                closeTransferModal();
                showToast(data.message || "Orden transferida correctamente.");
            } catch (error: any) {
                if (transferError) transferError.classList.remove("hidden");
                if (transferErrorMsg)
                    transferErrorMsg.textContent = error.message;
                confirmTransferBtn.disabled = false;
                confirmTransferBtn.innerHTML = originalHTML;
            }
        });

        // Close modals on backdrop click
        window.addEventListener("click", (e) => {
            if (e.target === statusModal) {
                statusModal?.classList.add("hidden");
                orderToUpdate = null;
            }
            if (e.target === deleteModal) {
                deleteModal?.classList.add("hidden");
                orderToDelete = null;
            }
            if (e.target === bulkDeleteModal) {
                bulkDeleteModal?.classList.add("hidden");
            }
            if (e.target === proofModal) {
                proofModal?.classList.add("hidden");
                document.body.style.overflow = "auto";
            }
            if (e.target === deliveryModal) {
                deliveryModal?.classList.add("hidden");
                orderToDeliver = null;
            }
            if (e.target === transferModal) {
                closeTransferModal();
            }
        });

        // ==================== REALTIME NOTIFICATIONS ====================
        // Function to play notification sound
        function playNotificationSound() {
            try {
                const audioContext = new (
                    window.AudioContext || (window as any).webkitAudioContext
                )();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();

                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);

                // First tone (higher pitch)
                oscillator.frequency.value = 800;
                oscillator.type = "sine";
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(
                    0.01,
                    audioContext.currentTime + 0.1,
                );

                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.1);

                // Second tone (lower pitch) after a short delay
                setTimeout(() => {
                    const oscillator2 = audioContext.createOscillator();
                    const gainNode2 = audioContext.createGain();

                    oscillator2.connect(gainNode2);
                    gainNode2.connect(audioContext.destination);

                    oscillator2.frequency.value = 600;
                    oscillator2.type = "sine";
                    gainNode2.gain.setValueAtTime(
                        0.3,
                        audioContext.currentTime,
                    );
                    gainNode2.gain.exponentialRampToValueAtTime(
                        0.01,
                        audioContext.currentTime + 0.15,
                    );

                    oscillator2.start(audioContext.currentTime);
                    oscillator2.stop(audioContext.currentTime + 0.15);
                }, 100);
            } catch (error) {
                console.error("Error playing notification sound:", error);
            }
        }

        // Function to reload orders and update the table
        async function reloadOrders() {
            try {
                window.location.reload();
            } catch (error) {
                console.error("Error reloading orders:", error);
            }
        }

        // Subscribe to realtime changes on orders table
        const ordersChannel = supabase
            .channel("orders-changes")
            .on(
                "postgres_changes",
                {
                    event: "INSERT",
                    schema: "public",
                    table: "orders",
                },
                (payload) => {
                    console.log("Nueva orden detectada:", payload.new);

                    // Play notification sound
                    playNotificationSound();

                    // Show toast notification
                    const order = payload.new as any;
                    showToast(
                        `Nueva orden recibida: ${order.order_number || "Sin número"}`,
                        "success",
                    );

                    // Reload orders after a short delay to show the toast first
                    setTimeout(() => {
                        reloadOrders();
                    }, 1500);
                },
            )
            .subscribe((status) => {
                console.log("Realtime subscription status:", status);
            });

        // Cleanup on page unload
        window.addEventListener("beforeunload", () => {
            supabase.removeChannel(ordersChannel);
        });
    </script>
</AdminLayout>
