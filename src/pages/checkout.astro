---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Checkout - DigitalStoreTrujillo";
const description = "Complete your purchase securely";
---

<style>
    select option {
        background-color: #1a1515;
        color: white;
    }
</style>

<Layout title={title} description={description}>
    <Header />

    <main
        class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12"
    >
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16">
            <!-- Left Column: Form -->
            <div class="lg:col-span-7 xl:col-span-8 flex flex-col gap-8">
                <!-- Progress Stepper -->
                <nav aria-label="Progress">
                    <ol class="flex items-center" role="list">
                        <li class="relative pr-8 sm:pr-20">
                            <div
                                aria-hidden="true"
                                class="absolute inset-0 flex items-center"
                            >
                                <div class="h-0.5 w-full bg-primary"></div>
                            </div>
                            <a
                                class="relative flex h-8 w-8 items-center justify-center rounded-full bg-primary hover:bg-red-700"
                                href="/cart"
                            >
                                <span
                                    class="material-symbols-outlined text-white text-sm font-bold"
                                    >check</span
                                >
                            </a>
                            <span
                                class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-xs font-medium text-white"
                                data-i18n="prod_breadcrumb_home">Cart</span
                            >
                        </li>
                        <li class="relative pr-8 sm:pr-20">
                            <div
                                aria-hidden="true"
                                class="absolute inset-0 flex items-center"
                            >
                                <div class="h-0.5 w-full bg-border-dark"></div>
                            </div>
                            <a
                                aria-current="step"
                                class="relative flex h-8 w-8 items-center justify-center rounded-full border-2 border-primary bg-background-dark"
                                href="#"
                            >
                                <span
                                    class="h-2.5 w-2.5 rounded-full bg-primary"
                                ></span>
                            </a>
                            <span
                                class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-xs font-bold text-primary"
                                >Info</span
                            >
                        </li>
                        <li class="relative">
                            <a
                                class="group relative flex h-8 w-8 items-center justify-center rounded-full border-2 border-border-dark bg-background-dark hover:border-gray-400"
                                href="#"
                            >
                                <span
                                    class="h-2.5 w-2.5 rounded-full bg-transparent group-hover:bg-gray-300"
                                ></span>
                            </a>
                            <span
                                class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-xs font-medium text-text-muted"
                                data-i18n="pay_order_summary">Payment</span
                            >
                        </li>
                    </ol>
                </nav>

                <!-- Page Header -->
                <div class="mt-4">
                    <h1
                        class="text-3xl md:text-4xl font-black text-white tracking-tight"
                        data-i18n="checkout_buyer_info"
                    >
                        Buyer Information
                    </h1>
                    <p
                        class="text-text-muted mt-2 text-base"
                        data-i18n="checkout_buyer_desc"
                    >
                        Please enter your details to receive your digital
                        product immediately.
                    </p>
                </div>

                <!-- Form -->
                <form id="checkout-form" class="flex flex-col gap-6 mt-2">
                    <!-- Logged In Summary (Hidden by default) -->
                    <div
                        id="logged-in-summary"
                        class="hidden p-6 rounded-xl bg-card-dark border border-border-dark animate-fade-in"
                    >
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-16 h-16 rounded-full bg-primary/20 flex items-center justify-center text-primary"
                            >
                                <span class="material-symbols-outlined text-3xl"
                                    >person</span
                                >
                            </div>
                            <div>
                                <h3
                                    class="text-white font-bold text-xl"
                                    id="summary-name"
                                >
                                    Loading...
                                </h3>
                                <p class="text-text-muted" id="summary-email">
                                    Loading...
                                </p>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                            <div
                                class="p-4 rounded-lg bg-background-dark/50 border border-border-dark"
                            >
                                <span
                                    class="text-xs text-text-muted uppercase tracking-wider font-bold"
                                    >Phone</span
                                >
                                <p
                                    class="text-white font-medium mt-1 flex items-center gap-2"
                                >
                                    <span
                                        class="material-symbols-outlined text-sm text-primary"
                                        >call</span
                                    >
                                    <span id="summary-phone">--</span>
                                </p>
                            </div>
                            <div
                                class="p-4 rounded-lg bg-background-dark/50 border border-border-dark"
                            >
                                <span
                                    class="text-xs text-text-muted uppercase tracking-wider font-bold"
                                    >Status</span
                                >
                                <p
                                    class="text-green-400 font-medium mt-1 flex items-center gap-2"
                                >
                                    <span
                                        class="material-symbols-outlined text-sm"
                                        >verified</span
                                    >
                                    Verified Account
                                </p>
                            </div>
                        </div>

                        <div
                            class="flex items-center gap-2 text-sm text-text-muted bg-blue-500/10 border border-blue-500/20 p-3 rounded-lg"
                        >
                            <span
                                class="material-symbols-outlined text-blue-400"
                                >info</span
                            >
                            Your order will be automatically linked to this account.
                        </div>

                        <button
                            type="button"
                            id="edit-info-btn"
                            class="mt-4 text-sm text-primary hover:text-white underline transition-colors"
                        >
                            Not you? Switch account or Edit info
                        </button>
                    </div>

                    <!-- Guest/Form Fields Wrapper -->
                    <div id="form-sections" class="flex flex-col gap-6">
                        <!-- Section: Contact -->
                        <div
                            class="p-6 rounded-xl bg-card-dark border border-border-dark"
                        >
                            <h3
                                class="text-white font-bold text-lg mb-6 flex items-center gap-2"
                            >
                                <span
                                    class="material-symbols-outlined text-primary"
                                    >contact_mail</span
                                >
                                Contact Details
                            </h3>
                            <div class="grid gap-6">
                                <!-- Email Field -->
                                <label class="flex flex-col gap-2">
                                    <span class="text-white text-sm font-medium"
                                        ><span data-i18n="checkout_email"
                                            >Email Address</span
                                        >
                                        <span class="text-primary">*</span
                                        ></span
                                    >
                                    <div class="relative flex items-center">
                                        <input
                                            id="email"
                                            name="email"
                                            class="w-full rounded-lg bg-background-dark border border-border-dark text-white px-4 py-3 pl-11 focus:border-primary focus:ring-1 focus:ring-primary placeholder:text-text-muted transition-colors"
                                            placeholder="you@example.com"
                                            data-i18n="checkout_email_placeholder"
                                            type="email"
                                            required
                                        />
                                        <span
                                            class="material-symbols-outlined absolute left-3 text-text-muted pointer-events-none"
                                            >mail</span
                                        >
                                    </div>
                                    <p
                                        class="text-xs text-text-muted flex items-center gap-1"
                                    >
                                        <span
                                            class="material-symbols-outlined text-[16px]"
                                            >info</span
                                        >
                                        <span data-i18n="prod_instant_delivery"
                                            >Product link will be sent here.</span
                                        >
                                    </p>
                                </label>

                                <!-- Phone Field -->
                                <label class="flex flex-col gap-2">
                                    <span class="text-white text-sm font-medium"
                                        >Phone Number</span
                                    >
                                    <div
                                        class="relative flex items-center group"
                                    >
                                        <div
                                            class="absolute left-0 top-0 bottom-0 flex items-center border-r border-border-dark bg-background-dark/30 rounded-l-lg transition-colors group-focus-within:border-primary"
                                        >
                                            <select
                                                id="countryCode"
                                                name="countryCode"
                                                class="bg-transparent text-white text-xs md:text-sm font-medium border-none focus:ring-0 cursor-pointer pl-3 pr-8 h-full appearance-none outline-none"
                                            >
                                                <option value="+51" selected
                                                    >叼 +51</option
                                                >
                                                <option value="+57"
                                                    > +57</option
                                                >
                                                <option value="+56"
                                                    > +56</option
                                                >
                                                <option value="+54"
                                                    > +54</option
                                                >
                                                <option value="+593"
                                                    > +593</option
                                                >
                                                <option value="+591"
                                                    >ю +591</option
                                                >
                                                <option value="+52"
                                                    >拆 +52</option
                                                >
                                                <option value="+34"
                                                    > +34</option
                                                >
                                                <option value="+1">吼 +1</option
                                                >
                                                <option value="+58"
                                                    >火 +58</option
                                                >
                                                <option value="+507"
                                                    >叼 +507</option
                                                >
                                                <option value="+506"
                                                    > +506</option
                                                >
                                                <option value="+503"
                                                    >葛 +503</option
                                                >
                                                <option value="+502"
                                                    > +502</option
                                                >
                                            </select>
                                            <span
                                                class="material-symbols-outlined absolute right-2 text-[16px] text-text-muted pointer-events-none"
                                                >expand_more</span
                                            >
                                        </div>
                                        <input
                                            id="phone"
                                            name="phone"
                                            class="w-full rounded-lg bg-background-dark border border-border-dark text-white px-4 py-3 pl-32 focus:border-primary focus:ring-1 focus:ring-primary placeholder:text-text-muted transition-colors"
                                            placeholder="987 654 321"
                                            type="tel"
                                        />
                                        <span
                                            class="material-symbols-outlined absolute right-3 text-text-muted pointer-events-none"
                                            >call</span
                                        >
                                    </div>
                                </label>
                            </div>
                        </div>

                        <!-- Section: Personal Info -->
                        <div
                            class="p-6 rounded-xl bg-card-dark border border-border-dark"
                        >
                            <h3
                                class="text-white font-bold text-lg mb-6 flex items-center gap-2"
                            >
                                <span
                                    class="material-symbols-outlined text-primary"
                                    >person</span
                                >
                                <span data-i18n="checkout_buyer_info"
                                    >Personal Information</span
                                >
                            </h3>
                            <div class="grid gap-6 md:grid-cols-2">
                                <!-- First Name -->
                                <label class="flex flex-col gap-2">
                                    <span class="text-white text-sm font-medium"
                                        ><span data-i18n="checkout_first_name"
                                            >First Name</span
                                        >
                                        <span class="text-primary">*</span
                                        ></span
                                    >
                                    <input
                                        id="firstName"
                                        name="firstName"
                                        class="w-full rounded-lg bg-background-dark border border-border-dark text-white px-4 py-3 focus:border-primary focus:ring-1 focus:ring-primary placeholder:text-text-muted transition-colors"
                                        placeholder="Juan"
                                        type="text"
                                        required
                                    />
                                </label>

                                <!-- Last Name -->
                                <label class="flex flex-col gap-2">
                                    <span class="text-white text-sm font-medium"
                                        ><span data-i18n="checkout_last_name"
                                            >Last Name</span
                                        >
                                        <span class="text-primary">*</span
                                        ></span
                                    >
                                    <input
                                        id="lastName"
                                        name="lastName"
                                        class="w-full rounded-lg bg-background-dark border border-border-dark text-white px-4 py-3 focus:border-primary focus:ring-1 focus:ring-primary placeholder:text-text-muted transition-colors"
                                        placeholder="Perez"
                                        type="text"
                                        required
                                    />
                                </label>

                                <!-- Account Toggle -->
                                <div
                                    id="create-account-section"
                                    class="md:col-span-2 flex flex-col gap-4 pt-2"
                                >
                                    <div class="items-start gap-3">
                                        <div
                                            class="flex h-6 items-center gap-2"
                                        >
                                            <input
                                                class="h-5 w-5 rounded border-border-dark bg-background-dark text-primary focus:ring-primary focus:ring-offset-background-dark"
                                                id="create-account"
                                                type="checkbox"
                                            />
                                            <label
                                                class="font-medium text-white text-sm"
                                                for="create-account"
                                                data-i18n="checkout_create_account"
                                                >Create an account for faster
                                                checkout</label
                                            >
                                        </div>
                                    </div>

                                    <!-- Password Field (Hidden by default) -->
                                    <div id="password-container" class="hidden">
                                        <label class="flex flex-col gap-2">
                                            <span
                                                class="text-white text-sm font-medium"
                                                ><span
                                                    data-i18n="checkout_password"
                                                    >Create Password</span
                                                >
                                                <span class="text-primary"
                                                    >*</span
                                                ></span
                                            >
                                            <div class="relative">
                                                <input
                                                    id="password"
                                                    name="password"
                                                    class="w-full rounded-lg bg-background-dark border border-border-dark text-white px-4 py-3 pl-10 focus:border-primary focus:ring-1 focus:ring-primary placeholder:text-text-muted transition-colors"
                                                    placeholder="Minimum 6 characters"
                                                    type="password"
                                                    minlength="6"
                                                />
                                                <span
                                                    class="material-symbols-outlined absolute left-3 top-3.5 text-text-muted text-[20px]"
                                                    >lock</span
                                                >
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End of form-sections -->

                    <!-- Actions -->
                    <div class="flex justify-end pt-4">
                        <button
                            id="submit-btn"
                            type="submit"
                            class="w-full md:w-auto bg-primary hover:bg-red-700 text-white font-bold py-3.5 px-8 rounded-lg shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2"
                        >
                            <span data-i18n="checkout_continue_payment"
                                >Continue to Payment</span
                            >
                            <span class="material-symbols-outlined"
                                >arrow_forward</span
                            >
                        </button>
                    </div>
                </form>
            </div>

            <!-- Right Column: Order Summary -->
            <div class="lg:col-span-5 xl:col-span-4">
                <div class="sticky top-24 flex flex-col gap-6">
                    <!-- Summary Card -->
                    <div
                        class="bg-card-dark border border-border-dark rounded-xl overflow-hidden shadow-2xl"
                    >
                        <div
                            class="p-5 border-b border-border-dark bg-[#1f1515]"
                        >
                            <h3
                                class="text-white font-bold text-lg"
                                data-i18n="cart_summary"
                            >
                                Order Summary
                            </h3>
                        </div>
                        <div class="p-5 flex flex-col gap-6" id="order-items">
                            <!-- Items will be inserted here by JavaScript -->
                        </div>

                        <!-- Trust & Payment Icons footer of card -->
                        <div class="bg-[#1f1515] p-4 flex flex-col gap-3">
                            <p
                                class="text-xs text-center text-text-muted"
                                data-i18n="prod_secure_payment"
                            >
                                We accept
                            </p>
                            <div class="flex justify-center gap-3">
                                <div
                                    class="h-6 px-3 rounded bg-[#722F91]/20 flex items-center justify-center text-[10px] text-[#722F91] font-bold border border-[#722F91]/30"
                                >
                                    Yape
                                </div>
                                <div
                                    class="h-6 px-3 rounded bg-[#F7931A]/20 flex items-center justify-center text-[10px] text-[#F7931A] font-bold border border-[#F7931A]/30"
                                >
                                    Crypto
                                </div>
                            </div>
                            <div
                                class="flex items-center justify-center gap-2 mt-2"
                            >
                                <span
                                    class="material-symbols-outlined text-green-500 text-sm"
                                    >lock</span
                                >
                                <span
                                    class="text-[10px] text-text-muted"
                                    data-i18n="pay_secure_notice"
                                    >SSL Encrypted Payment</span
                                >
                            </div>
                        </div>
                    </div>

                    <!-- Help Box -->
                    <div
                        class="rounded-lg border border-border-dark bg-transparent p-4 flex gap-3 items-start"
                    >
                        <div
                            class="p-2 rounded-full bg-card-dark text-text-muted"
                        >
                            <span class="material-symbols-outlined text-xl"
                                >support_agent</span
                            >
                        </div>
                        <div>
                            <h4 class="text-white text-sm font-bold">
                                Need Help?
                            </h4>
                            <p
                                class="text-text-muted text-xs mt-1 leading-relaxed"
                            >
                                Having trouble with your order? Contact our
                                support team via WhatsApp or Email.
                            </p>
                            <a
                                class="text-primary text-xs font-bold mt-2 inline-block hover:underline"
                                href="#">Contact Support</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <Footer />

    <!-- Success Modal -->
    <div
        id="success-modal"
        class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-card-dark border border-border-dark rounded-xl max-w-md w-full p-6 shadow-2xl transform transition-all scale-100"
        >
            <div class="flex items-center gap-3 mb-4">
                <div
                    class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center"
                >
                    <span class="material-symbols-outlined text-primary text-xl"
                        >check_circle</span
                    >
                </div>
                <h3 class="text-white text-lg font-bold">
                    Registration Successful
                </h3>
            </div>

            <p class="text-text-muted text-sm leading-relaxed mb-6">
                Please check your email to confirm your account. You can proceed
                to payment, and your order will be linked to your account.
            </p>

            <button
                id="modal-ok-btn"
                class="w-full bg-primary hover:bg-red-700 text-white font-bold py-3 rounded-lg transition-all"
            >
                Continue to Payment
            </button>
        </div>
    </div>
</Layout>

<script>
    import { cartItems, cartTotal } from "../stores/cart";
    import { supabase } from "../lib/supabase";
    import { initializeCurrency, userCurrency } from "../stores/currencyStore";
    import { getPrice, CURRENCIES } from "../lib/currency";

    // Initialize currency
    initializeCurrency();

    // Re-render summary when currency changes
    userCurrency.subscribe(() => {
        renderOrderSummary();
    });

    window.addEventListener("currency-changed", () => {
        renderOrderSummary();
    });

    function renderOrderSummary() {
        const items = cartItems.get();
        const orderItemsContainer = document.getElementById("order-items");
        const currency = userCurrency.get();
        const symbol = CURRENCIES[currency].symbol;

        if (!orderItemsContainer) return;

        const totalValue = items.reduce((sum: number, item: any) => {
            const price = getPrice(item.price, item.price_pen, currency);
            return sum + price * item.quantity;
        }, 0);

        orderItemsContainer.innerHTML = `
      ${items
          .map((item: any) => {
              const price = getPrice(item.price, item.price_pen, currency);
              return `
        <div class="flex gap-4">
          <div class="h-20 w-20 flex-shrink-0 rounded-lg overflow-hidden border border-border-dark">
            <img src="${item.image}" alt="${item.title}" class="w-full h-full object-cover" />
          </div>
          <div class="flex flex-col justify-between py-1">
            <div>
              <h4 class="text-white font-bold text-sm leading-tight">${item.title}</h4>
              <p class="text-text-muted text-xs mt-1">Quantity: ${item.quantity}</p>
            </div>
            <p class="text-white font-bold">${symbol} ${(price * item.quantity).toFixed(2)}</p>
          </div>
        </div>
      `;
          })
          .join('<hr class="border-border-dark"/>')}
      
      <hr class="border-border-dark"/>
      
      <!-- Calculation -->
      <div class="flex flex-col gap-2">
        <div class="flex justify-between text-sm">
          <span class="text-text-muted">Subtotal</span>
          <span class="text-white">${symbol} ${totalValue.toFixed(2)}</span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-text-muted">Tax</span>
          <span class="text-white">Included</span>
        </div>
        <div class="flex justify-between text-sm text-green-500">
          <span>Discount</span>
          <span>-${symbol} 0.00</span>
        </div>
      </div>
      
      <hr class="border-border-dark"/>
      
      <!-- Total -->
      <div class="flex justify-between items-center">
        <span class="text-white font-bold text-lg">Total</span>
        <div class="text-right">
          <span class="text-primary font-black text-2xl">${symbol} ${totalValue.toFixed(2)}</span>
          <p class="text-xs text-text-muted">${currency}</p>
        </div>
      </div>
    `;
    }

    // Initial render
    renderOrderSummary();

    // Check auth status
    const checkAuth = async () => {
        const {
            data: { user },
        } = await supabase.auth.getUser();

        const formSections = document.getElementById("form-sections");
        const loggedInSummary = document.getElementById("logged-in-summary");
        const summaryName = document.getElementById("summary-name");
        const summaryEmail = document.getElementById("summary-email");
        const summaryPhone = document.getElementById("summary-phone");
        const editInfoBtn = document.getElementById("edit-info-btn");

        // Input refs
        const emailInput = document.getElementById("email") as HTMLInputElement;
        const firstNameInput = document.getElementById(
            "firstName",
        ) as HTMLInputElement;
        const lastNameInput = document.getElementById(
            "lastName",
        ) as HTMLInputElement;
        const phoneInput = document.getElementById("phone") as HTMLInputElement;

        if (user) {
            // 1. Always pre-fill email
            if (emailInput) {
                emailInput.value = user.email || "";
                emailInput.readOnly = true;
                emailInput.classList.add("opacity-50", "cursor-not-allowed");
            }

            // 2. Extract metadata
            const meta = user.user_metadata || {};
            const fullName = meta.full_name || meta.name || "";
            const phone = meta.phone || meta.phone_number || "";

            // 3. If we have enough info (Name + Phone), switch to Summary View
            // (Assuming user wants "no form" if logged in)
            if (fullName && loggedInSummary && formSections) {
                // Pre-fill hidden inputs so submission works
                if (firstNameInput)
                    firstNameInput.value = fullName.split(" ")[0] || "";
                if (lastNameInput)
                    lastNameInput.value =
                        fullName.split(" ").slice(1).join(" ") || "."; // Fallback dot if no last name
                if (phoneInput) phoneInput.value = phone;

                // Update Summary UI
                if (summaryName) summaryName.textContent = fullName;
                if (summaryEmail) summaryEmail.textContent = user.email || "";
                if (summaryPhone)
                    summaryPhone.textContent = phone || "Not provided";

                // Toggle visibility
                formSections.classList.add("hidden");
                loggedInSummary.classList.remove("hidden");
            } else {
                // Partially fill what we have
                if (firstNameInput && fullName) {
                    firstNameInput.value = fullName.split(" ")[0] || "";
                    lastNameInput.value =
                        fullName.split(" ").slice(1).join(" ") || "";
                }
                if (phoneInput && phone) phoneInput.value = phone;

                // Show form but maybe simplified
                // For now, keep form visible if data is missing
            }

            // Hide create account option in form (if form is visible)
            const createAccountContainer = document.getElementById(
                "create-account-section",
            );
            if (createAccountContainer) {
                createAccountContainer.classList.add("hidden"); // Just hide it completely if logged in
            }
        } else {
            // Not logged in - ensure form is visible
            if (formSections) formSections.classList.remove("hidden");
            if (loggedInSummary) loggedInSummary.classList.add("hidden");
        }

        // Edit button logic
        editInfoBtn?.addEventListener("click", () => {
            if (formSections) formSections.classList.remove("hidden");
            if (loggedInSummary) loggedInSummary.classList.add("hidden");
        });
    };

    checkAuth();

    // Listen for auth changes to update UI automatically
    supabase.auth.onAuthStateChange((event, session) => {
        if (event === "SIGNED_IN" && session) {
            checkAuth();
        }
    });

    // Handle create account toggle
    const createAccountCheckbox = document.getElementById(
        "create-account",
    ) as HTMLInputElement;
    const passwordContainer = document.getElementById("password-container");
    const passwordInput = document.getElementById(
        "password",
    ) as HTMLInputElement;

    if (createAccountCheckbox && passwordContainer) {
        createAccountCheckbox.addEventListener("change", (e) => {
            const isChecked = (e.target as HTMLInputElement).checked;
            if (isChecked) {
                passwordContainer.classList.remove("hidden");
                passwordInput.setAttribute("required", "true");
            } else {
                passwordContainer.classList.add("hidden");
                passwordInput.removeAttribute("required");
            }
        });
    }

    // Handle form submission
    const form = document.getElementById("checkout-form");
    if (form) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const submitBtn = document.getElementById(
                "submit-btn",
            ) as HTMLButtonElement;
            const originalBtnText = submitBtn.innerHTML;

            // Get form data
            const formData = new FormData(form as HTMLFormElement);
            const data = Object.fromEntries(formData);
            const createAccount = createAccountCheckbox?.checked;

            // Validate required fields
            if (!data.email || !data.firstName || !data.lastName) {
                alert("Please fill in all required fields");
                return;
            }

            try {
                submitBtn.disabled = true;
                submitBtn.innerHTML = `<span class="material-symbols-outlined animate-spin">progress_activity</span> Processing...`;

                // Handle Registration
                let registeredUserId = null;
                if (createAccount && data.password) {
                    const { data: authData, error: authError } =
                        await supabase.auth.signUp({
                            email: data.email as string,
                            password: data.password as string,
                            options: {
                                data: {
                                    full_name: `${data.firstName} ${data.lastName}`,
                                    phone: data.phone,
                                },
                                emailRedirectTo: `${window.location.origin}/`,
                            },
                        });

                    if (authError) {
                        // Si el error es solo del env铆o del correo de confirmaci贸n, permitimos continuar
                        // Esto pasa cuando el SMTP de Supabase falla o llega al l铆mite
                        if (
                            authError.message &&
                            (authError.message.includes("confirmation email") ||
                                authError.message.includes("rate limit"))
                        ) {
                            console.warn(
                                "Alerta: Se cre贸 el usuario pero fall贸 el correo de confirmaci贸n:",
                                authError,
                            );
                            // No lanzamos el error para permitir que la compra contin煤e
                        } else {
                            throw authError;
                        }
                    }

                    if (authData.user) {
                        registeredUserId = authData.user.id;
                        localStorage.setItem(
                            "registeredUserId",
                            authData.user.id,
                        );
                    }

                    if (authData.user && !authData.session) {
                        // Show success modal instead of alert
                        const modal = document.getElementById("success-modal");
                        const okBtn = document.getElementById("modal-ok-btn");

                        if (modal && okBtn) {
                            modal.classList.remove("hidden");

                            // Wait for user to click OK to proceed
                            await new Promise((resolve) => {
                                okBtn.onclick = () => {
                                    modal.classList.add("hidden");
                                    resolve(true);
                                };
                            });
                        }
                    }
                }

                // Save buyer info to localStorage
                localStorage.setItem("buyerInfo", JSON.stringify(data));

                // Redirect to payment page
                window.location.href = "/payment";
            } catch (error: any) {
                console.error("Checkout Error:", error);
                alert(error.message || "An error occurred during checkout.");
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalBtnText;
            }
        });
    }
</script>
