---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProductCard from "../components/ProductCard.astro";
import { getFeaturedProducts } from "../lib/supabase";

const title = "DigitalStoreTrujillo - Your Trusted Digital Store";
const description =
	"Best digital prices in Trujillo. Secure digital products delivered instantly to your inbox.";

// Fetch products from Supabase
const products = await getFeaturedProducts(8);
// Test comment to trigger auto-deploy verification
---

<Layout title={title} description={description}>
	<Header />

	<main class="layout-container flex h-full grow flex-col">
		<div class="px-4 md:px-10 lg:px-40 flex flex-1 justify-center py-5">
			<div
				class="layout-content-container flex flex-col max-w-[1200px] flex-1"
			>
				<!-- Hero Section -->
				<section
					class="w-full rounded-2xl overflow-hidden relative min-h-[420px] md:min-h-[480px] flex items-center bg-cover bg-center mb-10"
					style="background-image: linear-gradient(90deg, rgba(35,15,15,0.95) 0%, rgba(35,15,15,0.7) 50%, rgba(35,15,15,0.2) 100%), url('https://lh3.googleusercontent.com/aida-public/AB6AXuCoo6Jfuz_JbwsEPVXuXvN549oTrTLqK9bPWME4sgSNsYCF4Aq37JL727ugwydv4Xk1eK8KamG0cUDt4ftrECqD-KeQxiyra80t0do8VsU0b0cXC_jQAY1qc7I2E_qTQy7LVFYXzpUrp0S9oGGNA5AviMjpT7FcrMft3-1rEQf0Dp63bcISRBYVhFDOcWkD8B-cu6NH7B5mMllcE37NjWGOi3YswEuDQernsLsZtG8CZxWfV_9Xhj6kfanl7XPIVk9MUrKUYT0A-A');"
				>
					<div
						class="relative z-10 p-8 md:p-16 max-w-2xl flex flex-col gap-6 items-start"
					>
						<div
							class="inline-flex items-center gap-2 rounded-full bg-primary/20 px-3 py-1 text-xs font-semibold text-primary backdrop-blur-sm border border-primary/30"
						>
							<span class="material-symbols-outlined text-sm"
								>bolt</span
							>
							Instant Delivery
						</div>
						<h1
							class="text-4xl md:text-6xl font-black text-white leading-[1.1] tracking-tight"
						>
							Best Digital Prices in <span class="text-primary"
								>Trujillo</span
							>.
						</h1>
						<p
							class="text-lg text-gray-300 max-w-md leading-relaxed"
						>
							Secure digital products delivered instantly to your
							inbox. From software keys to gift cards, we have it
							all.
						</p>
						<div class="flex flex-wrap gap-4 mt-2">
							<button
								class="h-12 px-8 rounded-lg bg-primary hover:bg-red-700 text-white font-bold text-base transition-colors flex items-center gap-2"
							>
								Shop Now
								<span class="material-symbols-outlined"
									>arrow_forward</span
								>
							</button>
							<button
								class="h-12 px-6 rounded-lg bg-white/10 hover:bg-white/20 text-white font-semibold text-base backdrop-blur-sm transition-colors border border-white/10"
							>
								View Offers
							</button>
						</div>
					</div>
				</section>

				<!-- Filters & Sorting -->
				<section class="flex flex-col gap-4 mb-8">
					<div
						class="flex items-center justify-between flex-wrap gap-4"
					>
						<h3 class="text-2xl font-bold text-white">
							Featured Products
						</h3>
						<div class="flex gap-2 overflow-x-auto pb-1">
							<button
								class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-primary px-4 transition-transform active:scale-95"
							>
								<p class="text-white text-sm font-bold">All</p>
							</button>
							<button
								class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-[#3a2727] hover:bg-[#4a3232] px-4 transition-colors"
							>
								<p class="text-white text-sm font-medium">
									Software
								</p>
							</button>
							<button
								class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-[#3a2727] hover:bg-[#4a3232] px-4 transition-colors"
							>
								<p class="text-white text-sm font-medium">
									Gift Cards
								</p>
							</button>
							<button
								class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-[#3a2727] hover:bg-[#4a3232] px-4 transition-colors"
							>
								<p class="text-white text-sm font-medium">
									Services
								</p>
							</button>
						</div>
					</div>
				</section>

				<!-- Product Grid -->
				<section
					class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12"
				>
					{
						products.map((product) => (
							<ProductCard
								title={product.title}
								price={product.price}
								originalPrice={
									product.original_price ?? undefined
								}
								renewablePrice={
									product.renewable_price ?? undefined
								}
								image={product.image}
								badge={product.badge ?? undefined}
								seller={product.seller ?? undefined}
								rating={product.rating}
								reviewCount={product.review_count}
								productUrl={`/product/${product.slug}`}
								inStock={product.in_stock}
							/>
						))
					}
				</section>

				<!-- Trust / Payment Section -->
				<section
					class="rounded-2xl bg-[#2d1414] border border-[#3a2727] p-8 md:p-12 text-center mt-8"
				>
					<div
						class="max-w-3xl mx-auto flex flex-col gap-6 items-center"
					>
						<div class="p-3 rounded-full bg-[#3a2727] w-fit">
							<span
								class="material-symbols-outlined text-primary text-3xl"
								>verified_user</span
							>
						</div>
						<h2
							class="text-3xl font-bold text-white tracking-tight"
						>
							Secure Payments Accepted
						</h2>
						<p class="text-[#bc9b9a] max-w-lg">
							Aceptamos pagos locales vía Yape, y pagos
							internacionales mediante Binance Pay y Cryptomus
							(Tarjetas y Cripto). Verificación instantánea.
						</p>
						<div
							class="flex flex-wrap justify-center gap-4 mt-4 w-full"
						>
							<!-- Yape -->
							<div
								class="flex h-14 min-w-[140px] items-center justify-center gap-3 rounded-xl bg-[#722F91] px-6 transition-transform hover:scale-105 cursor-pointer shadow-lg shadow-purple-900/20"
							>
								<span
									class="material-symbols-outlined text-white"
									>smartphone</span
								>
								<span class="text-white font-bold text-lg"
									>Yape</span
								>
							</div>

							<!-- Binance Pay -->
							<div
								class="flex h-14 min-w-[140px] items-center justify-center gap-3 rounded-xl bg-[#F3BA2F] px-6 transition-transform hover:scale-105 cursor-pointer shadow-lg shadow-yellow-900/20"
							>
								<img
									src="/assets/binance-icon-black.svg"
									alt="Binance"
									class="w-7 h-7 object-contain"
								/>
								<span class="text-black font-bold text-lg"
									>Binance Pay</span
								>
							</div>

							<!-- Cryptomus -->
							<div
								class="flex h-14 min-w-[140px] items-center justify-center gap-3 rounded-xl bg-[#1e293b] px-6 transition-transform hover:scale-105 cursor-pointer shadow-lg shadow-black/30 border border-slate-700"
							>
								<img
									src="/assets/Cryptomus_icon.svg"
									alt="Cryptomus"
									class="w-6 h-6 object-contain"
								/>
								<span class="text-white font-bold text-lg"
									>Cryptomus</span
								>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	</main>

	<Footer />
</Layout>
