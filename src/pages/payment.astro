---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Payment - DigitalStoreTrujillo";
const description = "Choose your payment method";
---

<Layout title={title} description={description}>
    <Header />

    <main
        class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12"
    >
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16">
            <!-- Left Column: Payment Methods -->
            <div class="lg:col-span-7 xl:col-span-8 flex flex-col gap-6">
                <!-- Progress Stepper -->
                <nav aria-label="Progress">
                    <ol class="flex items-center" role="list">
                        <li class="relative pr-8 sm:pr-20">
                            <div
                                aria-hidden="true"
                                class="absolute inset-0 flex items-center"
                            >
                                <div class="h-0.5 w-full bg-primary"></div>
                            </div>
                            <a
                                class="relative flex h-8 w-8 items-center justify-center rounded-full bg-primary hover:bg-red-700"
                                href="/cart"
                            >
                                <span
                                    class="material-symbols-outlined text-white text-sm font-bold"
                                    >check</span
                                >
                            </a>
                            <span
                                class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-xs font-medium text-white"
                                >Cart</span
                            >
                        </li>
                        <li class="relative pr-8 sm:pr-20">
                            <div
                                aria-hidden="true"
                                class="absolute inset-0 flex items-center"
                            >
                                <div class="h-0.5 w-full bg-primary"></div>
                            </div>
                            <a
                                class="relative flex h-8 w-8 items-center justify-center rounded-full bg-primary hover:bg-red-700"
                                href="/checkout"
                            >
                                <span
                                    class="material-symbols-outlined text-white text-sm font-bold"
                                    >check</span
                                >
                            </a>
                            <span
                                class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-xs font-medium text-white"
                                >Info</span
                            >
                        </li>
                        <li class="relative">
                            <a
                                aria-current="step"
                                class="relative flex h-8 w-8 items-center justify-center rounded-full border-2 border-primary bg-background-dark"
                                href="#"
                            >
                                <span
                                    class="h-2.5 w-2.5 rounded-full bg-primary"
                                ></span>
                            </a>
                            <span
                                class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-xs font-bold text-primary"
                                >Payment</span
                            >
                        </li>
                    </ol>
                </nav>

                <!-- Page Header -->
                <div class="mt-2">
                    <h1
                        class="text-3xl md:text-4xl font-black text-white tracking-tight"
                    >
                        Choose Payment Method
                    </h1>
                    <p class="text-text-muted mt-2 text-base">
                        Select your preferred payment method to complete your
                        purchase
                    </p>
                </div>

                <!-- Payment Methods -->
                <div class="flex flex-col gap-4">
                    <!-- Yape Payment -->
                    <div
                        class="payment-option group p-6 rounded-xl bg-card-dark border-2 border-border-dark hover:border-[#722F91] transition-all cursor-pointer"
                        data-method="yape"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="flex-shrink-0 w-16 h-16 rounded-xl bg-[#722F91]/20 flex items-center justify-center border border-[#722F91]/30"
                            >
                                <span
                                    class="material-symbols-outlined text-[#722F91] text-3xl"
                                    >qr_code_2</span
                                >
                            </div>
                            <div class="flex-1">
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <h3 class="text-white font-bold text-xl">
                                        Yape
                                    </h3>
                                    <div
                                        class="payment-radio w-6 h-6 rounded-full border-2 border-border-dark group-hover:border-[#722F91] flex items-center justify-center transition-colors"
                                    >
                                        <div
                                            class="w-3 h-3 rounded-full bg-[#722F91] opacity-0 group-hover:opacity-100 transition-opacity"
                                        >
                                        </div>
                                    </div>
                                </div>
                                <p class="text-text-muted text-sm mb-3">
                                    Pago instantáneo con QR desde tu app Yape
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-green-500/10 text-green-400 text-xs font-medium"
                                    >
                                        <span
                                            class="material-symbols-outlined text-[14px]"
                                            >bolt</span
                                        >
                                        Instant
                                    </span>
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-blue-500/10 text-blue-400 text-xs font-medium"
                                    >
                                        <span
                                            class="material-symbols-outlined text-[14px]"
                                            >lock</span
                                        >
                                        Secure
                                    </span>
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-purple-500/10 text-purple-400 text-xs font-medium"
                                    >
                                        <span
                                            class="material-symbols-outlined text-[14px]"
                                            >smartphone</span
                                        >
                                        Mobile
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Binance Payment -->
                    <div
                        class="payment-option group p-6 rounded-xl bg-card-dark border-2 border-border-dark hover:border-[#F3BA2F] transition-all cursor-pointer"
                        data-method="binance"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="flex-shrink-0 w-16 h-16 rounded-xl bg-[#F3BA2F]/20 flex items-center justify-center border border-[#F3BA2F]/30"
                            >
                                <img
                                    src="/assets/binance-icon-yellow.svg"
                                    alt="Binance"
                                    class="w-10 h-10 object-contain"
                                />
                            </div>
                            <div class="flex-1">
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <h3 class="text-white font-bold text-xl">
                                        Binance Pay
                                    </h3>
                                    <div
                                        class="payment-radio w-6 h-6 rounded-full border-2 border-border-dark group-hover:border-[#F3BA2F] flex items-center justify-center transition-colors"
                                    >
                                        <div
                                            class="w-3 h-3 rounded-full bg-[#F3BA2F] opacity-0 group-hover:opacity-100 transition-opacity"
                                        >
                                        </div>
                                    </div>
                                </div>
                                <p class="text-text-muted text-sm mb-3">
                                    Paga con Binance Pay ID o escaneando el
                                    código QR.
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-yellow-500/10 text-yellow-500 text-xs font-medium"
                                    >
                                        Instant
                                    </span>
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-blue-500/10 text-blue-400 text-xs font-medium"
                                    >
                                        <span
                                            class="material-symbols-outlined text-[14px]"
                                            >lock</span
                                        >
                                        Secure
                                    </span>
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-green-500/10 text-green-400 text-xs font-medium"
                                    >
                                        0% Fee
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Crypto Payment (Generic) -->
                    <div
                        class="payment-option group p-6 rounded-xl bg-card-dark border-2 border-border-dark hover:border-[#F7931A] transition-all cursor-pointer"
                        data-method="crypto"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="flex-shrink-0 w-16 h-16 rounded-xl bg-[#F7931A]/20 flex items-center justify-center border border-[#F7931A]/30 overflow-hidden"
                            >
                                <img
                                    src="/assets/Cryptomus_icon.svg"
                                    alt="Cryptomus"
                                    class="w-10 h-10 object-contain"
                                />
                            </div>
                            <div class="flex-1">
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <h3 class="text-white font-bold text-xl">
                                        Cryptomus
                                    </h3>
                                    <div
                                        class="payment-radio w-6 h-6 rounded-full border-2 border-border-dark group-hover:border-[#F7931A] flex items-center justify-center transition-colors"
                                    >
                                        <div
                                            class="w-3 h-3 rounded-full bg-[#F7931A] opacity-0 group-hover:opacity-100 transition-opacity"
                                        >
                                        </div>
                                    </div>
                                </div>
                                <p class="text-text-muted text-sm mb-3">
                                    Paga con Criptomonedas o Tarjeta de
                                    Débito/Crédito.
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-orange-500/10 text-orange-400 text-xs font-medium"
                                    >
                                        Bitcoin, USDT & more
                                    </span>
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-blue-500/10 text-blue-400 text-xs font-medium"
                                    >
                                        <span
                                            class="material-symbols-outlined text-[14px]"
                                            >payments</span
                                        >
                                        Visa / Mastercard
                                    </span>
                                    <span
                                        class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-green-500/10 text-green-400 text-xs font-medium"
                                    >
                                        Global
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Continue Button -->
                <div class="flex justify-between items-center pt-4">
                    <a
                        href="/checkout"
                        class="inline-flex items-center gap-2 text-sm font-medium text-text-muted hover:text-primary transition-colors"
                    >
                        <span class="material-symbols-outlined text-[18px]"
                            >arrow_back</span
                        >
                        Back to Information
                    </a>
                    <button
                        id="continue-payment-btn"
                        disabled
                        class="bg-primary hover:bg-red-700 text-white font-bold py-3.5 px-8 rounded-lg shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        Continue to Payment
                        <span class="material-symbols-outlined"
                            >arrow_forward</span
                        >
                    </button>
                </div>
            </div>

            <!-- Right Column: Order Summary -->
            <div class="lg:col-span-5 xl:col-span-4">
                <div class="sticky top-20 flex flex-col gap-6">
                    <!-- Summary Card -->
                    <div
                        class="bg-card-dark border border-border-dark rounded-xl overflow-hidden"
                    >
                        <div class="p-5">
                            <h3 class="text-white font-bold text-lg mb-6">
                                Order Summary
                            </h3>

                            <!-- Product Items -->
                            <div
                                id="order-items-list"
                                class="flex flex-col gap-4 mb-6"
                            >
                                <!-- Items will be inserted here -->
                            </div>

                            <!-- Total -->
                            <div class="pt-4 border-t border-border-dark">
                                <div class="flex justify-between items-center">
                                    <span class="text-white font-bold text-base"
                                        >Total</span
                                    >
                                    <div class="text-right">
                                        <span
                                            id="order-total"
                                            class="text-primary font-black text-2xl"
                                            >S/ 0.00</span
                                        >
                                        <p
                                            id="order-currency"
                                            class="text-xs text-text-muted"
                                        >
                                            PEN
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Security Notice -->
                    <div
                        class="rounded-lg border border-green-500/20 bg-green-500/5 p-4 flex gap-3 items-start"
                    >
                        <div
                            class="p-2 rounded-full bg-green-500/10 text-green-500"
                        >
                            <span class="material-symbols-outlined text-xl"
                                >verified_user</span
                            >
                        </div>
                        <div>
                            <h4 class="text-white text-sm font-bold">
                                Secure Payment
                            </h4>
                            <p
                                class="text-text-muted text-xs mt-1 leading-relaxed"
                            >
                                Your payment information is encrypted and
                                secure. We never store your payment details.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Yape Payment Modal -->
        <div
            id="yape-modal"
            class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
        >
            <div
                class="bg-card-dark border border-border-dark rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto"
            >
                <!-- Modal Header -->
                <div
                    class="sticky top-0 z-10 bg-card-dark border-b border-border-dark p-6 flex items-center justify-between"
                >
                    <div class="flex items-center gap-3">
                        <div
                            class="w-10 h-10 rounded-lg bg-[#722F91]/20 flex items-center justify-center border border-[#722F91]/30"
                        >
                            <span
                                class="material-symbols-outlined text-[#722F91] text-xl"
                                >qr_code_2</span
                            >
                        </div>
                        <h2 class="text-2xl font-black text-white">
                            Pay with Yape
                        </h2>
                    </div>
                    <button
                        id="close-yape-modal"
                        class="text-text-muted hover:text-white transition-colors"
                    >
                        <span class="material-symbols-outlined text-3xl"
                            >close</span
                        >
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6 space-y-6">
                    <!-- Instructions -->
                    <div
                        class="bg-[#722F91]/10 border border-[#722F91]/30 rounded-xl p-4"
                    >
                        <h3
                            class="text-white font-bold text-sm mb-3 flex items-center gap-2"
                        >
                            <span
                                class="material-symbols-outlined text-[#722F91] text-lg"
                                >info</span
                            >
                            How to pay
                        </h3>
                        <ol class="space-y-2 text-text-muted text-xs">
                            <li class="flex gap-2">
                                <span class="text-[#722F91] font-bold">1.</span>
                                <span
                                    >Scan the QR code or send to the phone
                                    number</span
                                >
                            </li>
                            <li class="flex gap-2">
                                <span class="text-[#722F91] font-bold">2.</span>
                                <span
                                    >Complete the payment in your Yape app</span
                                >
                            </li>
                            <li class="flex gap-2">
                                <span class="text-[#722F91] font-bold">3.</span>
                                <span
                                    >Upload screenshot and reference code below</span
                                >
                            </li>
                        </ol>
                    </div>

                    <!-- QR Code and Details -->
                    <div class="flex flex-col items-center gap-4">
                        <!-- QR Code -->
                        <div class="relative">
                            <div
                                class="w-56 h-56 bg-white rounded-xl p-3 flex items-center justify-center"
                            >
                                <img
                                    src="/assets/qr-yape.png"
                                    alt="Yape QR Code"
                                    class="w-full h-full object-contain"
                                />
                            </div>
                            <div
                                class="absolute -top-2 -right-2 bg-[#722F91] text-white px-2 py-1 rounded-full text-xs font-bold"
                            >
                                Scan Me
                            </div>
                        </div>

                        <!-- Payment Details -->
                        <div class="w-full space-y-3">
                            <div
                                class="bg-background-dark rounded-lg p-3 border border-border-dark"
                            >
                                <p class="text-text-muted text-xs mb-1">
                                    Yape Number
                                </p>
                                <div class="flex items-center justify-between">
                                    <p class="text-white font-bold text-lg">
                                        931387898
                                    </p>
                                    <button
                                        id="copy-phone-modal"
                                        class="text-[#722F91] hover:text-[#5a2473] transition-colors"
                                        title="Copy"
                                    >
                                        <span
                                            class="material-symbols-outlined text-sm"
                                            >content_copy</span
                                        >
                                    </button>
                                </div>
                            </div>

                            <div
                                class="bg-background-dark rounded-lg p-3 border border-border-dark"
                            >
                                <p class="text-text-muted text-xs mb-1">
                                    Account Holder
                                </p>
                                <p class="text-white font-bold text-sm">
                                    Joseph Alejandro Vasquez Vasquez
                                </p>
                            </div>

                            <div
                                class="bg-background-dark rounded-lg p-3 border border-border-dark"
                            >
                                <p class="text-text-muted text-xs mb-1">
                                    Amount to Pay
                                </p>
                                <p
                                    id="yape-amount"
                                    class="text-primary font-black text-xl"
                                >
                                    S/ 0.00
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Upload Form -->
                    <form id="yape-proof-form" class="space-y-4">
                        <!-- Screenshot Upload -->
                        <div>
                            <label
                                class="block text-white text-sm font-medium mb-2"
                            >
                                Payment Screenshot <span class="text-primary"
                                    >*</span
                                >
                            </label>
                            <input
                                type="file"
                                id="yape-screenshot"
                                name="screenshot"
                                accept="image/*"
                                class="hidden"
                                required
                            />
                            <button
                                type="button"
                                id="yape-screenshot-btn"
                                class="w-full border-2 border-dashed border-border-dark hover:border-[#722F91] rounded-lg p-6 flex flex-col items-center gap-2 transition-colors cursor-pointer group"
                            >
                                <span
                                    class="material-symbols-outlined text-3xl text-text-muted group-hover:text-[#722F91]"
                                    >cloud_upload</span
                                >
                                <span
                                    class="text-text-muted group-hover:text-white text-sm"
                                    >Click to upload</span
                                >
                            </button>
                            <div id="yape-preview" class="hidden mt-3">
                                <img
                                    id="yape-preview-img"
                                    src=""
                                    alt="Preview"
                                    class="w-full max-w-xs mx-auto rounded-lg border border-border-dark"
                                />
                                <button
                                    type="button"
                                    id="yape-remove"
                                    class="mt-2 text-primary hover:text-red-700 text-xs flex items-center gap-1 mx-auto"
                                >
                                    <span
                                        class="material-symbols-outlined text-sm"
                                        >delete</span
                                    >
                                    Remove
                                </button>
                            </div>
                        </div>

                        <!-- Reference Code -->
                        <div>
                            <label
                                for="yape-reference"
                                class="block text-white text-sm font-medium mb-2"
                            >
                                Reference Code (6 digits) <span
                                    class="text-primary">*</span
                                >
                            </label>
                            <input
                                type="text"
                                id="yape-reference"
                                name="referenceCode"
                                placeholder="000000"
                                class="w-full rounded-lg bg-background-dark border border-border-dark text-white px-4 py-3 focus:border-[#722F91] focus:ring-1 focus:ring-[#722F91] placeholder:text-text-muted transition-colors text-center text-lg font-bold tracking-widest"
                                maxlength="6"
                                pattern="[0-9]{6}"
                                required
                            />
                        </div>

                        <!-- Timer -->
                        <div
                            class="bg-orange-500/10 border border-orange-500/30 rounded-lg p-3 flex items-center gap-2"
                        >
                            <span
                                class="material-symbols-outlined text-orange-500 text-lg"
                                >schedule</span
                            >
                            <div class="flex-1">
                                <p class="text-white text-xs font-bold">
                                    Time remaining
                                </p>
                                <p
                                    id="yape-timer"
                                    class="text-orange-500 font-bold"
                                >
                                    15:00
                                </p>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button
                            type="submit"
                            class="w-full bg-[#722F91] hover:bg-[#5a2473] text-white font-bold py-3 rounded-lg transition-all transform active:scale-[0.98] shadow-lg shadow-[#722F91]/20 flex items-center justify-center gap-2"
                        >
                            <span class="material-symbols-outlined"
                                >check_circle</span
                            >
                            Submit Payment Proof
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Binance Payment Modal -->
        <div
            id="binance-modal"
            class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
        >
            <div
                class="bg-card-dark border border-border-dark rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto"
            >
                <!-- Modal Header -->
                <div
                    class="sticky top-0 z-10 bg-card-dark border-b border-border-dark p-6 flex items-center justify-between"
                >
                    <div class="flex items-center gap-3">
                        <div
                            class="w-10 h-10 rounded-lg bg-[#F3BA2F]/20 flex items-center justify-center border border-[#F3BA2F]/30"
                        >
                            <img
                                src="/assets/binance-icon-yellow.svg"
                                alt="Binance"
                                class="w-6 h-6 object-contain"
                            />
                        </div>
                        <h2 class="text-2xl font-black text-white">
                            Binance Pay
                        </h2>
                    </div>
                    <button
                        id="close-binance-modal"
                        class="text-text-muted hover:text-white transition-colors"
                    >
                        <span class="material-symbols-outlined text-3xl"
                            >close</span
                        >
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6 space-y-6">
                    <!-- Instructions -->
                    <div
                        class="bg-[#F3BA2F]/10 border border-[#F3BA2F]/30 rounded-xl p-4"
                    >
                        <h3
                            class="text-white font-bold text-sm mb-3 flex items-center gap-2"
                        >
                            <span
                                class="material-symbols-outlined text-[#F3BA2F] text-lg"
                                >info</span
                            >
                            Instrucciones de Pago
                        </h3>
                        <ol class="space-y-2 text-text-muted text-xs">
                            <li class="flex gap-2">
                                <span class="text-[#F3BA2F] font-bold">1.</span>
                                <span
                                    >Escanea el QR o usa el Binance Pay ID.</span
                                >
                            </li>
                            <li class="flex gap-2">
                                <span class="text-[#F3BA2F] font-bold">2.</span>
                                <span
                                    >Envía el monto total en USDT (BEP20 o
                                    TRC20).</span
                                >
                            </li>
                            <li class="flex gap-2">
                                <span class="text-[#F3BA2F] font-bold">3.</span>
                                <span
                                    >Sube la captura y el ID de transacción.</span
                                >
                            </li>
                        </ol>
                    </div>

                    <!-- QR Code and Details -->
                    <div class="flex flex-col items-center gap-4">
                        <!-- QR Code Placeholder -->
                        <div class="relative">
                            <div
                                class="w-56 h-56 bg-white rounded-xl p-3 flex items-center justify-center"
                            >
                                <img
                                    src="/assets/qr-binance.png"
                                    alt="Binance Pay QR Code"
                                    class="w-full h-full object-contain"
                                />
                            </div>
                            <div
                                class="absolute -top-2 -right-2 bg-[#F3BA2F] text-black px-2 py-1 rounded-full text-xs font-bold"
                            >
                                Binance
                            </div>
                        </div>

                        <!-- Payment Details -->
                        <div class="w-full space-y-3">
                            <div
