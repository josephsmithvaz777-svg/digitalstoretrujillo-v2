<script>
    import { cartItems, cartTotal, clearCart } from "../stores/cart";

    let selectedMethod: string | null = null;

    function renderOrderSummary(method = "yape") {
        const items = cartItems.get();
        const orderItemsList = document.getElementById("order-items-list");
        const orderTotal = document.getElementById("order-total");
        const orderCurrency = document.getElementById("order-currency");

        if (!orderItemsList) return;

        const totalPEN = cartTotal.get();
        const isUSD = method === "binance" || method === "crypto";
        const rate = 2.4;
        const total = isUSD ? totalPEN / rate : totalPEN;
        const symbol = isUSD ? "$" : "S/";
        const currencyText = isUSD ? "USD" : "PEN";

        // Render items
        orderItemsList.innerHTML = items
            .map(
                (item) => `
      <div class="flex gap-3 items-start">
        <div class="h-16 w-16 flex-shrink-0 rounded-lg overflow-hidden border border-border-dark bg-background-dark">
          <img src="${item.image}" alt="${item.title}" class="w-full h-full object-cover" />
        </div>
        <div class="flex-1 min-w-0">
          <h4 class="text-white font-bold text-sm leading-tight truncate">${item.title}</h4>
          <p class="text-text-muted text-xs mt-0.5">Qty: ${item.quantity}</p>
          <p class="text-white font-bold text-sm mt-1">${symbol} ${(isUSD ? (item.price * item.quantity) / rate : item.price * item.quantity).toFixed(2)}</p>
        </div>
      </div>
    `,
            )
            .join("");

        // Update total
        if (orderTotal) {
            orderTotal.textContent = `${symbol} ${total.toFixed(2)}`;
        }
        if (orderCurrency) {
            orderCurrency.textContent = currencyText;
        }
    }

    // Initial render
    renderOrderSummary();

    // Payment method selection
    const paymentOptions = document.querySelectorAll(".payment-option");
    const continueBtn = document.getElementById(
        "continue-payment-btn",
    ) as HTMLButtonElement;

    paymentOptions.forEach((option) => {
        option.addEventListener("click", () => {
            // Remove selected state from all options
            paymentOptions.forEach((opt) => {
                opt.classList.remove(
                    "border-primary",
                    "border-[#722F91]",
                    "border-[#F3BA2F]",
                    "border-[#F7931A]",
                );
                opt.classList.add("border-border-dark");
                const radio = opt.querySelector(".payment-radio div");
                if (radio) radio.classList.remove("opacity-100");
                if (radio) radio.classList.add("opacity-0");
            });

            // Add selected state to clicked option
            const method = option.getAttribute("data-method") || "yape";
            selectedMethod = method;

            // Re-render summary with new currency if needed
            renderOrderSummary(method);

            if (method === "yape") {
                option.classList.remove("border-border-dark");
                option.classList.add("border-[#722F91]");
            } else if (method === "binance") {
                option.classList.remove("border-border-dark");
                option.classList.add("border-[#F3BA2F]");
            } else if (method === "crypto") {
                option.classList.remove("border-border-dark");
                option.classList.add("border-[#F7931A]");
            }

            const radio = option.querySelector(".payment-radio div");
            if (radio) {
                radio.classList.remove("opacity-0");
                radio.classList.add("opacity-100");
            }

            // Enable continue button
            if (continueBtn) {
                continueBtn.disabled = false;
            }
        });
    });

    // Continue button
    if (continueBtn) {
        continueBtn.addEventListener("click", async () => {
            if (!selectedMethod) {
                alert("Please select a payment method");
                return;
            }

            if (selectedMethod === "yape") {
                openYapeModal();
            } else if (selectedMethod === "binance") {
                openBinanceModal();
            } else if (selectedMethod === "crypto") {
                // Cryptomus Integration
                const originalText = continueBtn.innerHTML;
                try {
                    continueBtn.disabled = true;
                    continueBtn.innerHTML = `<span class="material-symbols-outlined animate-spin">progress_activity</span> Processing...`;

                    const buyerInfo = JSON.parse(
                        localStorage.getItem("buyerInfo") || "{}",
                    );
                    const items = cartItems.get();
                    const totalPEN = cartTotal.get();

                    const response = await fetch(
                        "/api/payments/cryptomus/create",
                        {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({
                                buyerInfo,
                                cartItems: items,
                                totalPEN,
                            }),
                        },
                    );

                    const data = await response.json();

                    if (!response.ok)
                        throw new Error(
                            data.error || "Failed to initiate payment",
                        );

                    // Save order ID for later tracking
                    localStorage.setItem("lastOrderId", data.orderId);

                    // Redirect to Cryptomus
                    window.location.href = data.url;
                } catch (error: any) {
                    console.error("Cryptomus Error:", error);
                    alert(
                        `Error: ${error.message || "No se pudo iniciar el pago con Cryptomus."}`,
                    );
                    continueBtn.disabled = false;
                    continueBtn.innerHTML = originalText;
                }
            }
        });
    }

    // Modal Helpers
    function showSuccessModal(closeModalsCallback: () => void = () => {}) {
        const successModal = document.getElementById("success-modal");
        const successContent = document.getElementById("success-modal-content");
        const successCloseBtn = document.getElementById("success-close-btn");

        if (successModal && successContent) {
            closeModalsCallback();
            successModal.classList.remove("hidden");
            setTimeout(() => {
                successContent.classList.remove("scale-95", "opacity-0");
                successContent.classList.add("scale-100", "opacity-100");
            }, 10);

            if (successCloseBtn) {
                successCloseBtn.addEventListener("click", () => {
                    clearCart();
                    localStorage.removeItem("buyerInfo");
                    localStorage.removeItem("lastOrderId");
                    window.location.href = "/";
                });
            }
        }
    }

    // Check for success status in URL (Redirect from Cryptomus)
    window.addEventListener("load", () => {
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("status") === "success") {
            showSuccessModal();
        }
    });

    // Yape Modal Functions
    const yapeModal = document.getElementById("yape-modal");
    const closeYapeModal = document.getElementById("close-yape-modal");
    const yapeAmount = document.getElementById("yape-amount");
    let yapeTimer: any = null;
    let yapeTimeLeft = 15 * 60;

    function openYapeModal() {
        if (yapeModal && yapeAmount) {
            const total = cartTotal.get();
            yapeAmount.textContent = `S/ ${total.toFixed(2)}`;
            yapeModal.classList.remove("hidden");
            document.body.style.overflow = "hidden";
            yapeTimeLeft = 15 * 60;
            if (yapeTimer) clearInterval(yapeTimer);
            yapeTimer = setInterval(updateYapeTimer, 1000);
        }
    }

    function closeYapeModalFn() {
        if (yapeModal) {
            yapeModal.classList.add("hidden");
            document.body.style.overflow = "auto";
            if (yapeTimer) clearInterval(yapeTimer);
        }
    }

    function updateYapeTimer() {
        const timerElement = document.getElementById("yape-timer");
        const minutes = Math.floor(yapeTimeLeft / 60);
        const seconds = yapeTimeLeft % 60;
        if (timerElement)
            timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, "0")}`;
        if (yapeTimeLeft > 0) yapeTimeLeft--;
        else {
            alert("Payment time expired.");
            closeYapeModalFn();
        }
    }

    // Yape Events
    if (closeYapeModal)
        closeYapeModal.addEventListener("click", closeYapeModalFn);
    if (yapeModal)
        yapeModal.addEventListener("click", (e) => {
            if (e.target === yapeModal) closeYapeModalFn();
        });

    // Binance Modal Functions
    const binanceModal = document.getElementById("binance-modal");
    const closeBinanceModal = document.getElementById("close-binance-modal");
    const binanceAmount = document.getElementById("binance-amount");
    let binanceTimer: any = null;
    let binanceTimeLeft = 15 * 60;

    function openBinanceModal() {
        if (binanceModal && binanceAmount) {
            const totalPEN = cartTotal.get();
            const totalUSD = (totalPEN / 2.4).toFixed(2);
            binanceAmount.innerHTML = `
                <div class="flex flex-col items-center">
                    <span class="text-xs text-text-muted line-through">S/ ${totalPEN.toFixed(2)}</span>
                    <span>$ ${totalUSD} USD</span>
                </div>
            `;
            binanceModal.classList.remove("hidden");
            document.body.style.overflow = "hidden";
            binanceTimeLeft = 15 * 60;
            if (binanceTimer) clearInterval(binanceTimer);
            binanceTimer = setInterval(updateBinanceTimer, 1000);
        }
    }

    function closeBinanceModalFn() {
        if (binanceModal) {
            binanceModal.classList.add("hidden");
            document.body.style.overflow = "auto";
            if (binanceTimer) clearInterval(binanceTimer);
        }
    }

    function updateBinanceTimer() {
        const timerElement = document.getElementById("binance-timer");
        const minutes = Math.floor(binanceTimeLeft / 60);
        const seconds = binanceTimeLeft % 60;
        if (timerElement)
            timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, "0")}`;
        if (binanceTimeLeft > 0) binanceTimeLeft--;
        else {
            alert("Payment time expired.");
            closeBinanceModalFn();
        }
    }

    // Binance Events
    if (closeBinanceModal)
        closeBinanceModal.addEventListener("click", closeBinanceModalFn);
    if (binanceModal)
        binanceModal.addEventListener("click", (e) => {
            if (e.target === binanceModal) closeBinanceModalFn();
        });

    const copyBinanceId = document.getElementById("copy-binance-id");
    if (copyBinanceId) {
        copyBinanceId.addEventListener("click", () => {
            const id =
                document.getElementById("binance-pay-id")?.innerText.trim() ||
                "40800937";
            navigator.clipboard
                .writeText(id)
                .then(() => alert("Binance Pay ID copiado!"));
        });
    }

    const copyBinanceAddress = document.getElementById("copy-binance-address");
    if (copyBinanceAddress) {
        copyBinanceAddress.addEventListener("click", () => {
            const address =
                document.getElementById("binance-address")?.innerText.trim() ||
                "0x4C5589cd5F1F427886f85d51148Ee9dF200ADBc8";
            navigator.clipboard
                .writeText(address)
                .then(() => alert("Billetera USDT copiada!"));
        });
    }

    // Screenshot/Form Logic Helper
    function setupForm(
        formId: string,
        screenshotInputId: string,
        screenshotBtnId: string,
        previewId: string,
        previewImgId: string,
        removeBtnId: string,
        closeFn: () => void,
    ) {
        const form = document.getElementById(formId) as HTMLFormElement;
        const input = document.getElementById(
            screenshotInputId,
        ) as HTMLInputElement;
        const btn = document.getElementById(screenshotBtnId);
        const preview = document.getElementById(previewId);
        const img = document.getElementById(previewImgId) as HTMLImageElement;
        const remove = document.getElementById(removeBtnId);

        if (btn && input) btn.addEventListener("click", () => input.click());
        if (input)
            input.addEventListener("change", (e) => {
                const file = (e.target as HTMLInputElement).files?.[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = (re) => {
                        if (img && preview) {
                            img.src = re.target?.result as string;
                            preview.classList.remove("hidden");
                            btn?.classList.add("hidden");
                        }
                    };
                    reader.readAsDataURL(file);
                }
            });
        if (remove)
            remove.addEventListener("click", () => {
                if (input) input.value = "";
                preview?.classList.add("hidden");
                btn?.classList.remove("hidden");
            });

        if (form) {
            form.addEventListener("submit", (e) => {
                e.preventDefault();
                const screenshot = new FormData(form).get("screenshot");
                if (!screenshot || !(screenshot as File).size) {
                    alert("Por favor sube una captura del pago.");
                    return;
                }
                showSuccessModal(closeFn);
            });
        }
    }

    // Setup Both Forms
    setupForm(
        "yape-proof-form",
        "yape-screenshot",
        "yape-screenshot-btn",
        "yape-preview",
        "yape-preview-img",
        "yape-remove",
        closeYapeModalFn,
    );
    setupForm(
        "binance-proof-form",
        "binance-screenshot",
        "binance-screenshot-btn",
        "binance-preview",
        "binance-preview-img",
        "binance-remove",
        closeBinanceModalFn,
    );

    // Yape specific copy
    const copyPhoneModal = document.getElementById("copy-phone-modal");
    if (copyPhoneModal) {
        copyPhoneModal.addEventListener("click", () => {
            navigator.clipboard
                .writeText("931387898")
                .then(() => alert("Phone number copied!"));
        });
    }
</script>
