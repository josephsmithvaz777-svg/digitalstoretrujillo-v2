---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Shopping Cart - DigitalStoreTrujillo";
const description = "Review your digital items before checkout";
---

<Layout title={title} description={description}>
    <Header />

    <main
        class="flex-grow w-full max-w-[1200px] mx-auto px-4 md:px-8 py-8 md:py-12"
    >
        <!-- Breadcrumbs -->
        <div class="flex items-center gap-2 mb-8 text-sm">
            <a
                class="text-text-muted hover:text-white transition-colors"
                href="/">Home</a
            >
            <span class="material-symbols-outlined text-[14px] text-text-muted"
                >chevron_right</span
            >
            <span class="font-semibold text-primary">Cart</span>
            <span class="material-symbols-outlined text-[14px] text-text-muted"
                >chevron_right</span
            >
            <span class="text-gray-600 cursor-not-allowed">Checkout</span>
        </div>

        <!-- Page Heading -->
        <div
            class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-8"
        >
            <div>
                <h1
                    class="text-3xl md:text-4xl font-black tracking-tight text-white mb-2"
                >
                    Your Shopping Cart
                </h1>
                <p class="text-text-muted">
                    Review your digital items before checkout
                </p>
            </div>
            <div class="text-right hidden md:block">
                <p id="cart-header-count" class="text-white font-bold text-xl">
                    0 items
                </p>
            </div>
        </div>

        <!-- Empty Cart Message -->
        <div id="empty-cart" class="hidden text-center py-16">
            <span
                class="material-symbols-outlined text-6xl text-text-muted mb-4"
                >shopping_cart</span
            >
            <h2 class="text-2xl font-bold text-white mb-2">
                Your cart is empty
            </h2>
            <p class="text-text-muted mb-6">
                Add some products to get started!
            </p>
            <a
                href="/"
                class="inline-block bg-primary hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition-colors"
            >
                Continue Shopping
            </a>
        </div>

        <div
            id="cart-content"
            class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12"
        >
            <!-- Cart Items List (Left Column) -->
            <div class="lg:col-span-8 flex flex-col gap-4" id="cart-items">
                <!-- Items will be inserted here by JavaScript -->
            </div>

            <!-- Order Summary (Right Column) -->
            <div class="lg:col-span-4">
                <div
                    class="sticky top-24 rounded-xl bg-card-dark border border-border-dark p-6 shadow-sm"
                >
                    <h2 class="text-xl font-bold text-white mb-6">
                        Order Summary
                    </h2>

                    <!-- Cost Breakdown -->
                    <div class="space-y-3 pb-6 border-b border-border-dark">
                        <div
                            class="flex justify-between text-sm text-text-muted"
                        >
                            <span>Subtotal</span>
                            <span id="subtotal">S/ 0.00</span>
                        </div>
                        <div
                            class="flex justify-between text-sm text-text-muted"
                        >
                            <span>Discount</span>
                            <span class="text-green-500 font-medium"
                                >-S/ 0.00</span
                            >
                        </div>
                        <div
                            class="flex justify-between text-sm text-text-muted"
                        >
                            <span>Tax</span>
                            <span>Included</span>
                        </div>
                    </div>

                    <!-- Total -->
                    <div class="flex justify-between items-center py-6">
                        <span class="text-base font-semibold text-white"
                            >Total</span
                        >
                        <span id="total" class="text-3xl font-black text-white"
                            >S/ 0.00</span
                        >
                    </div>

                    <!-- Checkout Button -->
                    <button
                        id="checkout-btn"
                        class="w-full py-4 bg-primary hover:bg-red-700 text-white rounded-lg font-bold text-lg shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2 group"
                    >
                        Proceed to Checkout
                        <span
                            class="material-symbols-outlined group-hover:translate-x-1 transition-transform"
                            >arrow_forward</span
                        >
                    </button>

                    <!-- Payment Methods & Trust -->
                    <div class="mt-6">
                        <p class="text-center text-xs text-text-muted mb-3">
                            Secure payments via
                        </p>
                        <div class="flex flex-wrap justify-center gap-2">
                            <!-- Yape Badge -->
                            <div
                                class="flex items-center gap-1.5 px-3 py-1.5 rounded bg-[#722F91]/10 border border-[#722F91]/20"
                            >
                                <span
                                    class="material-symbols-outlined text-[#722F91] text-[18px]"
                                    >qr_code_2</span
                                >
                                <span class="text-xs font-bold text-[#722F91]"
                                    >Yape</span
                                >
                            </div>
                            <!-- Binance Pay Badge -->
                            <div
                                class="flex items-center gap-1.5 px-3 py-1.5 rounded bg-[#F3BA2F]/10 border border-[#F3BA2F]/20"
                            >
                                <img
                                    src="/src/assets/binance-icon-yellow.svg"
                                    alt="Binance"
                                    class="w-4 h-4 object-contain"
                                />
                                <span class="text-xs font-bold text-[#F3BA2F]"
                                    >Binance</span
                                >
                            </div>
                            <!-- Cryptomus Badge -->
                            <div
                                class="flex items-center gap-1.5 px-3 py-1.5 rounded bg-[#F7931A]/10 border border-[#F7931A]/20"
                            >
                                <span
                                    class="material-symbols-outlined text-[#F7931A] text-[18px]"
                                    >currency_bitcoin</span
                                >
                                <span class="text-xs font-bold text-[#F7931A]"
                                    >Crypto</span
                                >
                            </div>
                        </div>
                        <p
                            class="text-center text-[10px] text-text-muted mt-4 flex items-center justify-center gap-1"
                        >
                            <span class="material-symbols-outlined text-[12px]"
                                >lock</span
                            >
                            256-bit SSL Secured Connection
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Continue Shopping Link -->
        <div class="mt-8" id="continue-shopping">
            <a
                class="inline-flex items-center gap-2 text-sm font-medium text-text-muted hover:text-primary transition-colors"
                href="/"
            >
                <span class="material-symbols-outlined text-[18px]"
                    >arrow_back</span
                >
                Continue Shopping
            </a>
        </div>
    </main>

    <Footer />
</Layout>

<script>
    import {
        cartItems,
        removeFromCart,
        updateQuantity,
        cartTotal,
    } from "../stores/cart";

    function renderCart() {
        const items = cartItems.get();
        const cartItemsContainer = document.getElementById("cart-items");
        const emptyCart = document.getElementById("empty-cart");
        const cartContent = document.getElementById("cart-content");
        const cartHeaderCount = document.getElementById("cart-header-count");
        const subtotalEl = document.getElementById("subtotal");
        const totalEl = document.getElementById("total");

        if (!cartItemsContainer) return;

        // Update header count
        const totalItems = items.reduce((sum, item) => sum + item.quantity, 0);
        if (cartHeaderCount) {
            cartHeaderCount.textContent = `${totalItems} item${totalItems !== 1 ? "s" : ""}`;
        }

        // Show/hide empty cart message
        if (items.length === 0) {
            if (emptyCart) emptyCart.classList.remove("hidden");
            if (cartContent) cartContent.classList.add("hidden");
            return;
        } else {
            if (emptyCart) emptyCart.classList.add("hidden");
            if (cartContent) cartContent.classList.remove("hidden");
        }

        // Render cart items
        cartItemsContainer.innerHTML = items
            .map(
                (item) => `
      <div class="group flex flex-col sm:flex-row gap-4 p-4 rounded-xl bg-card-dark border border-border-dark shadow-sm hover:shadow-md transition-shadow">
        <!-- Image -->
        <div class="shrink-0 w-full sm:w-32 aspect-video sm:aspect-square rounded-lg overflow-hidden bg-[#3a2727] relative">
          <img alt="${item.title}" class="w-full h-full object-cover" src="${item.image}" />
        </div>
        
        <!-- Content -->
        <div class="flex flex-1 flex-col justify-between py-1">
          <div class="flex justify-between items-start gap-4">
            <div>
              <h3 class="font-bold text-lg text-white leading-tight mb-1">${item.title}</h3>
              ${item.seller ? `<p class="text-xs text-text-muted mb-2">${item.seller}</p>` : ""}
              <p class="text-xs text-text-muted flex items-center gap-1">
                <span class="material-symbols-outlined text-[14px]">bolt</span>
                Instant Download
              </p>
            </div>
            <button class="remove-item text-text-muted hover:text-primary transition-colors p-1" data-id="${item.id}" title="Remove item">
              <span class="material-symbols-outlined">delete</span>
            </button>
          </div>
          
          <div class="flex justify-between items-end mt-4 sm:mt-0">
            <!-- Quantity -->
            <div class="flex items-center bg-[#3a2727] rounded-lg p-1">
              <button class="decrease-qty size-7 flex items-center justify-center rounded hover:bg-background-dark text-text-muted transition-colors" data-id="${item.id}">
                <span class="material-symbols-outlined text-[16px]">remove</span>
              </button>
              <input class="w-8 bg-transparent text-center border-none p-0 text-sm font-bold text-white focus:ring-0" readonly type="number" value="${item.quantity}" />
              <button class="increase-qty size-7 flex items-center justify-center rounded hover:bg-background-dark text-text-muted transition-colors" data-id="${item.id}">
                <span class="material-symbols-outlined text-[16px]">add</span>
              </button>
            </div>
            
            <!-- Price -->
            <div class="text-right">
              <span class="block text-xl font-bold text-white">S/ ${(item.price * item.quantity).toFixed(2)}</span>
            </div>
          </div>
        </div>
      </div>
    `,
            )
            .join("");

        // Update totals
        const total = cartTotal.get();
        if (subtotalEl) subtotalEl.textContent = `S/ ${total.toFixed(2)}`;
        if (totalEl) totalEl.textContent = `S/ ${total.toFixed(2)}`;

        // Add event listeners
        document.querySelectorAll(".remove-item").forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const id = (e.currentTarget as HTMLButtonElement).dataset.id!;
                removeFromCart(id);
                renderCart();
            });
        });

        document.querySelectorAll(".decrease-qty").forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const id = (e.currentTarget as HTMLButtonElement).dataset.id!;
                const item = items.find((i) => i.id === id);
                if (item) {
                    updateQuantity(id, item.quantity - 1);
                    renderCart();
                }
            });
        });

        document.querySelectorAll(".increase-qty").forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const id = (e.currentTarget as HTMLButtonElement).dataset.id!;
                const item = items.find((i) => i.id === id);
                if (item) {
                    updateQuantity(id, item.quantity + 1);
                    renderCart();
                }
            });
        });
    }

    // Initial render
    renderCart();

    // Subscribe to cart changes
    cartItems.subscribe(() => {
        renderCart();
    });

    // Checkout button
    const checkoutBtn = document.getElementById("checkout-btn");
    if (checkoutBtn) {
        checkoutBtn.addEventListener("click", () => {
            const items = cartItems.get();
            if (items.length === 0) {
                alert("Your cart is empty!");
                return;
            }
            window.location.href = "/checkout";
        });
    }
</script>
