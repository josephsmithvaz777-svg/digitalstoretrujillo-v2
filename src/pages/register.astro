            </div>

            <!-- Footer Links -->
            <div class="text-center text-sm">
                <p class="text-text-muted">
                    <span data-i18n="auth_has_account"
                        >Already have an account?</span
                    >
                    <a
                        href="/login"
                        class="text-primary hover:underline font-bold"
                        data-i18n="auth_signin">Sign in</a
                    >
                </p>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<script>
    import { supabase } from "../lib/supabase";

    const form = document.getElementById("register-form") as HTMLFormElement;
    const submitBtn = document.getElementById(
        "submit-btn",
    ) as HTMLButtonElement;
    const errorMessage = document.getElementById("error-message");
    const errorText = document.getElementById("error-text");
    const successMessage = document.getElementById("success-message");
    const togglePasswordBtn = document.getElementById("toggle-password");
    const passwordInput = document.getElementById(
        "password",
    ) as HTMLInputElement;

    // Toggle Password Visibility
    if (togglePasswordBtn && passwordInput) {
        togglePasswordBtn.addEventListener("click", () => {
            const type =
                passwordInput.getAttribute("type") === "password"
                    ? "text"
                    : "password";
            passwordInput.setAttribute("type", type);

            // Toggle icon
            const icon = togglePasswordBtn.querySelector("span");
            if (icon) {
                icon.textContent =
                    type === "password" ? "visibility" : "visibility_off";
            }
        });
    }

    // Check if already logged in
    supabase.auth.getUser().then(({ data: { user } }) => {
        if (user) {
            window.location.href = "/account";
        }
    });

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const email = formData.get("email") as string;
        const password = formData.get("password") as string;
        const firstName = formData.get("firstName") as string;
        const lastName = formData.get("lastName") as string;
        const phone = formData.get("phone") as string;
        const fullName = `${firstName} ${lastName}`;

        // Disable button and show loading
        submitBtn.disabled = true;
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = `
            <span class="material-symbols-outlined animate-spin">progress_activity</span>
            Creating account...
        `;

        // Hide previous messages
        errorMessage?.classList.add("hidden");
        successMessage?.classList.add("hidden");

        try {
            const { data, error } = await supabase.auth.signUp({
                email,
                password,
                options: {
                    data: {
                        full_name: fullName,
                        phone: phone,
                    },
                    emailRedirectTo: `${window.location.origin}/`,
                },
            });

            if (error) {
                // Ignore confirmation email error
                const errorMsg = error.message?.toLowerCase() || "";
                if (
                    errorMsg.includes("confirmation email") ||
                    errorMsg.includes("rate limit") ||
                    errorMsg.includes("error sending")
                ) {
                    console.warn("Ignored email error:", error);
                } else {
                    throw error;
                }
            }

            if (
                data.user &&
                data.user.identities &&
                data.user.identities.length === 0
            ) {
                throw new Error("This email is already registered.");
            }

            // Success
            successMessage?.classList.remove("hidden");
            form.reset();

            // Redirect after a few seconds or just show message
            setTimeout(() => {
                // If email confirmation is enabled, they can't login yet usually,
                // but if auto-confirm is on (dev), they might be logged in.
                // For now, let's keep them here to see the message.
            }, 2000);
        } catch (error: any) {
            // Show error
            if (errorMessage && errorText) {
                errorText.textContent =
                    error.message ||
                    "Error creating account. Please try again.";
                errorMessage.classList.remove("hidden");
            }
        } finally {
            // Re-enable button
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    });
</script>
